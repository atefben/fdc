{% trans_default_domain 'FDCEventBundle' %}
{% if app.request.pathInfo starts with '/fr/festival' or app.request.pathInfo starts with '/en/festival' or app.request.pathInfo starts with '/es/festival' or app.request.pathInfo starts with '/zh/festival' %}
    {% set layout = 'FDCEventBundle::layout.html.twig' %}
    {% set mainClass = 'loading ' %}
{% else %}
    {% set layout = 'FDCCorporateBundle::layout.html.twig' %}
    {% set mainClass = '' %}
{% endif %}
{% extends layout %}
{% set locales = [] %}
{% block body %}
    <div id="main" class="{{ mainClass }}error-not-found">
        <div class="vCenter">
            <div class="vCenterKid">
                <div class="texts">
                    <h1>Error 404</h1>
                    <p>The page you are trying to view does not exist.<br/>It's possible that its content is currently
                        being translated.<br/>Please try again later.</p>
                    <a href="/"><i class="icon icon_fleche-right"></i> > Go back to the news</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}