{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
        {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}
            <li {% if currentLocale == locale %}class="active"{% endif %}>
                <a href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                    {{ ('lang.' ~ locale)|trans() }}
                    {% if form.vars.default_locale == locale %}[MASTER]{% endif %}
                    {% if translationsFields.vars.required %}*{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if form.vars.default_locale == locale %}active{% endif %}">

                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        {{ 'group.main_infos'|trans }}
                                    </h4>
                                </div>
                            </div>
                            <div class="box-body">
                                {% if form.vars.default_locale == locale %}
                                    {{ form_row(translationsFields.title) }}
                                {% else %}
                                    {{ form_row(translationsFields.title) }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="box box-success">
                            <div class="box-header">
                                {% if form.vars.default_locale == locale %}
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        Modules éditoriaux
                                    </h4>
                                </div>
                                <div id="fdc-widgets" data-form-widget="collection">

                                    {% for widget in form.parent.children.widgets.children %}

                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'press_download_section_widget_photo_type' %}
                                                <h4><strong>Photo widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_video_type' %}
                                                <h4><strong>Video widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_file_type' %}
                                                <h4><strong>Dossier de presse widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_document_type' %}
                                                <h4><strong>Document widget</strong></h4>
                                            {% endif %}
                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.lockedContent) }}
                                            {% if widget.children._type.vars.value == 'press_download_section_widget_file_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {{ form_widget(widget.file)}}
                                                {{ form_widget(widget.updatedAt)}}
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_document_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {{ form_widget(widget.file)}}
                                                {{ form_widget(widget.image)}}
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_photo_type' %}
                                                {{ form_widget(widget.gallery)}}
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_video_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {{ form_widget(widget.image)}}
                                                {{ form_widget(widget.file)}}
                                            {% endif %}
                                            <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_download_section_widget_file_type)| escape }}"><i class="icon-plus"></i>Module Dossier</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_download_section_widget_document_type)| escape }}"><i class="icon-plus"></i>Module Document</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_download_section_widget_video_type)| escape }}"><i class="icon-plus"></i>Module Vidéo</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_download_section_widget_photo_type)| escape }}"><i class="icon-plus"></i>Module photo</a>
                                {% else %}
                                    {% for widget in form.parent.children.widgets.children %}

                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'press_download_section_widget_photo_type' %}
                                                <h4><strong>Photo widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_video_type' %}
                                                <h4><strong>Video widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_file_type' %}
                                                <h4><strong>Dossier de presse widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_document_type' %}
                                                <h4><strong>Document widget</strong></h4>
                                            {% endif %}
                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.position) }}
                                            {% if widget.children._type.vars.value == 'press_download_section_widget_file_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {{ form_widget(widget.file)}}
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_document_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {{ form_widget(widget.file)}}
                                                {{ form_widget(widget.image)}}
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_photo_type' %}
                                                {{ form_widget(widget.gallery)}}
                                            {% elseif widget.children._type.vars.value == 'press_download_section_widget_video_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {{ form_widget(widget.image)}}
                                                {{ form_widget(widget.file)}}
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.publish_parameters'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.status) }}
                                        <div class="form-group fdc-input-border">
                                            {{ form_widget(form.parent.children.translate) }}
                                            {{ form_label(form.parent.children.translate) }}
                                        </div>
                                        {{ form_row(form.parent.children.priorityStatus) }}
                                    </div>
                                    <div>
                                        <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save"></i> Créer</button>
                                        <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Créer et retourner à la liste</button>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    {{ form_row(translationsFields.status) }}
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label class="control-label">
                                                {{ 'form.label_theme_name'|trans }}
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.title }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        {{ 'group.seo'|trans }}
                                    </h4>
                                </div>
                                <div class="base-admin-padding-helper help-block sonata-ba-field-widget-help">
                                    {{ 'group.helper_seo'|trans|nl2br }}
                                </div>
                            </div>
                            <div class="box-body">
                                {{ form_row(translationsFields.seoTitle) }}
                                {{ form_row(translationsFields.seoDescription) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
