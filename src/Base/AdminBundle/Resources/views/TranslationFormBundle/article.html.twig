{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
    {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
    {% for translationsFields in form %}
        {% set locale = translationsFields.vars.name %}
        <li {% if currentLocale == locale %}class="active"{% endif %}>
            <a href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                {{ locale|capitalize }}
                {% if form.vars.default_locale == locale %}[MASTER]{% endif %}
                {% if translationsFields.vars.required %}*{% endif %}
            </a>
        </li>
    {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
    {% set themeTranslations = (form.parent.children.theme.vars.data is not null) ? form.parent.children.theme.vars.data.translations.unwrap() : null %}
    {% set headerTranslations = (form.parent.children.header.vars.data is not null) ? form.parent.children.header.vars.data.translations.unwrap() : null %}
    {% set newsNewsTag = (form.parent.children.tags.vars.data|length > 0) ? form.parent.children.tags.vars.data.unwrap() : null %}
    {% for translationsFields in form %}
        {% set locale = translationsFields.vars.name %}

        <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
            <div class="row">
                <div class="col-md-8">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'group.main_infos'|trans }}
                            </h4>
                        </div>
                        {% if form.vars.default_locale == locale %}
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.title) }}
                                {{ form_row(form.parent.children.theme) }}
                                {{ form_row(form.parent.children.tags) }}
                                {{ form_row(form.parent.children.header) }}
                                {{ form_row(translationsFields.introduction) }}
                            </div>
                        </div>
                        {% else %}
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.title) }}
                                <div class="form-group">
                                    <label class="control-label">
                                        Theme
                                    </label>
                                    <div>
                                        {% if themeTranslations is not null and
                                            themeTranslations.get(locale) is not null %}
                                            {{ themeTranslations.get(locale).name }}
                                        {% endif %}
                                        {% if form.parent.children.theme.vars.value is not null %}
                                        <a target="_blank" href="{{ path('admin_base_core_theme_edit', {'id': form.parent.children.theme.vars.value}) }}">
                                            modifier la traduction
                                        </a>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        Tags de recherche
                                    </label>
                                    <div>
                                        {% if newsNewsTag is not null %}
                                            {% for tmp in newsNewsTag %}
                                                {% set tagTranslation = tmp.tag.translations.unwrap() %}
                                                {% if tagTranslation.get(locale) is not null %}
                                                <div>
                                                    {{ tagTranslation.get(locale).name }}
                                                    <a target="_blank" href="{{ path('admin_base_core_newstag_edit', {'id': tmp.tag.id}) }}">modifier la traduction</a>
                                                </div>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <header>
                                        Image principale
                                    </header>
                                    <div>
                                        <label>
                                            Légende
                                        </label>
                                        <span>
                                        {% if headerTranslations is not null and 
                                            headerTranslations.get(locale) is not null %}
                                            {{ headerTranslations.get(locale).legend }}
                                        {% endif %}
                                        </span>
                                    </div>
                                    <div>
                                        <label>
                                            Alt
                                        </label>
                                        <span>
                                        {% if headerTranslations is not null and 
                                            headerTranslations.get(locale) is not null %}
                                            {{ headerTranslations.get(locale).alt }}
                                        {% endif %}
                                        </span>
                                    </div>
                                    <div>
                                        <label>
                                            Copyright
                                        </label>
                                        <span>
                                        {% if headerTranslations is not null and 
                                            headerTranslations.get(locale) is not null %}
                                            {{ headerTranslations.get(locale).copyright }}
                                        {% endif %}
                                        </span>
                                    </div>
                                    {% if form.parent.children.header.vars.value is not null %}
                                    <a target="_blank" href="{{ path('admin_base_core_mediaimage_edit', {'id': form.parent.children.header.vars.value}) }}">modifier les traductions</a>
                                    {% endif %}
                                </div>
                                {{ form_row(translationsFields.introduction) }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-4">
                    {% if form.vars.default_locale == locale %}
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'group.news.publish_parameters'|trans }}
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.sites) }}
                                {{ form_row(translationsFields.publishedAt) }}
                                {{ form_row(translationsFields.publishEndedAt) }}
                                {{ form_row(translationsFields.status) }}
                                {{ form_row(form.parent.children.translate) }}
                            </div>
                            <div>
                                <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save"></i> Créer</button>
                                <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Créer et retourner à la liste</button>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'group.news.french_version'|trans }}
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                <div class="form-group">
                                    <label class="control-label">
                                        Titre
                                    </label>
                                    {% if form.children.fr.vars.value is not null %}
                                    <div>
                                        {{ form.children.fr.vars.value.title }}
                                    </div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        Theme
                                    </label>
                                    <div>
                                        {% if themeTranslations is not null and 
                                            themeTranslations.get('fr') is not null %}
                                            {{ themeTranslations.get('fr').name }}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        Tags de recherche
                                    </label>
                                    <div>
                                        {% for tmp in newsNewsTag %}
                                            {% set tagTranslation = tmp.tag.translations.unwrap() %}
                                            {% if tagTranslation.get('fr') is not null %}
                                            <div>
                                                {{ tagTranslation.get('fr').name }}
                                            </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <header>
                                        Informations image principale
                                    </header>
                                    <div>
                                        <label>
                                            Légende
                                        </label>
                                        <span>
                                        {% if headerTranslations is not null and 
                                            headerTranslations.get('fr') is not null %}
                                            {{ headerTranslations.get('fr').legend }}
                                        {% endif %}
                                        </span>
                                    </div>
                                    <div>
                                        <label>
                                            Alt
                                        </label>
                                        <span>
                                        {% if headerTranslations is not null and 
                                            headerTranslations.get('fr') is not null %}
                                            {{ headerTranslations.get('fr').alt }}
                                        {% endif %}
                                        </span>
                                    </div>
                                    <div>
                                        <label>
                                            Copyright
                                        </label>
                                        <span>
                                        {% if headerTranslations is not null and 
                                            headerTranslations.get('fr') is not null %}
                                            {{ headerTranslations.get('fr').copyright }}
                                        {% endif %}
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <header>
                                        Chapeau
                                    </header>
                                    <div>
                                        {% if form.children.fr.vars.value is not null %}
                                        {{ form.children.fr.vars.value.introduction|raw }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'group.news.widgets'|trans }}
                            </h4>
                        </div>
                        <div class="box-body">
                            {{  form_widget(form.parent.children.widgets) }}
                        </div>
                        {#<div class="box-body">
                            {% for widget in form.parent.children.widgets.children %}
                            <div class="Base-widget">
                                {% if widget.vars.value is news_widget_text %}
                                    {{ form_widget(attribute(widget.children.translations, locale)) }}
                                {% else %}
                                    {{ form_widget(widget) }}
                                {% endif %}
                            </div>
                            {% endfor %}
                        </div>#}
                    </div>
                </div>
            </div>
            {% if form.vars.default_locale == locale %}
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'group.news.associations'|trans }}
                            </h4>
                        </div>
                        <div class="box-body">
                            {{ form_widget(form.parent.children.associations) }}
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
             <div class="row">
                <div class="col-md-12">
                    {{ form_row(translationsFields.status) }}
                </div>
            </div>
            {% endif %}
        </div>
    {% endfor %}
    </div>
</div>