                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>
                                                            {{ 'form.mdf.label.top_slider.dateText'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.translations.fr.vars.value is not null %}
                                                                {{ widget.children.translations.fr.vars.value.dateText }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
