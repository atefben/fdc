                            <div class="box-body">
                                <div class="fdc-widgets" data-form-widget="collection">
                                    {% for widget in form.parent.children.services.children %}
                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'home_service_type' %}
