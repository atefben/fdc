{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
    {% for translationsFields in form %}
        {% set locale = translationsFields.vars.name %}

        <li {% if form.vars.default_locale == locale %}class="active"{% endif %}>
            <a href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                {% set langKey = 'lang.' ~ locale %}
                {{ langKey|trans({}, 'BaseAdminBundle') }}
                {% if form.vars.default_locale == locale %}(MASTER){% endif %}
                {% if translationsFields.vars.required %}*{% endif %}
            </a>
        </li>
    {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
    {% for translationsFields in form %}
        {% set locale = translationsFields.vars.name %}
        {#{% if app.request.locale == locale %}#}

        <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if form.vars.default_locale == locale %}active{% endif %}">
            <div class="row">
                <div class="col-md-8">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Informations de base
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.file) }}
                                {{ form_row(form.parent.children.image) }}
                                {{ form_row(translationsFields.title) }}
                                {{ form_row(form.parent.children.theme) }}
                                {{ form_row(translationsFields.alt) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    {% if form.vars.default_locale == locale %}
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Param√®tres de publication
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(form.parent.children.sites) }}
                                <div class="form-group">
                                    {{ form_widget(form.parent.children.displayedMobile) }}
                                    {{ form_label(form.parent.children.displayedMobile) }}
                                </div>
                                {{ form_row(form.parent.children.publishedAt) }}
                                {{ form_row(form.parent.children.publishEndedAt) }}
                                {{ form_row(translationsFields.status) }}
                                <div class="form-group fdc-input-border">
                                    {{ form_widget(form.parent.children.translate) }}
                                    {{ form_label(form.parent.children.translate) }}
                                </div>
                                {{ form_row(form.parent.children.priorityStatus) }}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                {{ 'group.french_version'|trans }}
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                <div class="form-group">
                                    <label class="control-label">
                                        {{ 'form.label_legend_img'|trans }}
                                    </label>
                                    {% if form.children.fr.vars.value is not null and form.children.fr.vars.value.legend is defined %}
                                        <div>
                                            {{ form.children.fr.vars.value.legend }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        {{ 'form.label_alt_img'|trans }}
                                    </label>
                                    {% if form.children.fr.vars.value is not null and form.children.fr.vars.value.alt is defined %}
                                        <div>
                                            {{ form.children.fr.vars.value.alt }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">
                                        {{ 'form.label_copyright'|trans }}
                                    </label>
                                    {% if form.children.fr.vars.value is not null and form.children.fr.vars.value.copyright is defined %}
                                        <div>
                                            {{ form.children.fr.vars.value.copyright }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {# {% endif %} #}
    {% endfor %}
    </div>
</div>