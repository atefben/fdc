{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
        {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}
            <li data-locale="{{ locale }}" {% if currentLocale == locale %}class="active"{% endif %}>
                <a {% if translationsFields.vars.value is not null %}class="{{ translationsFields.vars.value.status|translate_status_to_admin_class }}"{% endif %} href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                    {{ ('lang.' ~ locale)|trans() }}<br/>
                    {% if form.vars.default_locale == locale %}[MASTER]{% else %}<br/>{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.main_infos'|trans }}
                                </h4>
                            </div>
                            {% if form.vars.default_locale == locale %}
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">

                                    </div>
                                </div>
                            {% else %}

                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}

                        {% else %}

                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.news.widgets'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                {% if form.vars.default_locale == locale %}
                                    <div id="fdc-widgets" data-form-widget="collection">
                                        {% for widget in form.parent.children.widgets.children %}

                                            <div class="item base-widget">
                                                {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                    <h4><strong>Image widget</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'press_guide_widget_column_type' %}
                                                    <h4><strong>Colonne widget</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'press_guide_widget_picto_type' %}
                                                    <h4><strong>Picto widget</strong></h4>
                                                {% endif %}
                                                {{ form_row(widget._type) }}
                                                {{ form_row(widget.position) }}

                                                {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                    {{ form_widget(widget.gallery) }}
                                                {% endif %}

                                                <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                    <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {{ 'form.news.helper_widgets'|trans }}<br/>

                                    <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_guide_widget_image_type)| escape }}"><i class="icon-plus"></i>Module image</a>
                                    <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_guide_widget_column_type)| escape }}"><i class="icon-plus"></i>Module colonne</a>
                                    <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.press_guide_widget_picto_type)| escape }}"><i class="icon-plus"></i>Module picto</a>

                                {% else %}
                                    {% for widget in form.parent.children.widgets.children %}
                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                <h4><strong>Image widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_guide_widget_column_type' %}
                                                <h4><strong>Colonne widget</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'press_guide_widget_picto_type' %}
                                                <h4><strong>Picto widget</strong></h4>
                                            {% endif %}
                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.position) }}
                                            {% if widget.children._type.vars.value == 'press_guide_widget_image_type' or
                                            widget.children._type.vars.value == 'press_guide_widget_column_type' or
                                            widget.children._type.vars.value == 'press_guide_widget_picto_type'
                                            %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>