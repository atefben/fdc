{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
        {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}
            <li data-locale="{{ locale }}" {% if currentLocale == locale %}class="active"{% endif %}>
                <a {% if translationsFields.vars.value is not null %}class="{{ translationsFields.vars.value.status|translate_status_to_admin_class }}"{% endif %} href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                    {{ ('lang.' ~ locale)|trans() }}<br/>
                    {% if form.vars.default_locale == locale %}[MASTER]{% else %}<br/>{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            {% if form.vars.default_locale == locale %}
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            A votre arrivée
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.arriveTitle) }}
                                        {{ form_row(form.parent.children.arriveIcon) }}
                                        <div id="fdc-arrive-widget" data-form-widget="collection">
                                            {% for widget in form.parent.children.arriveWidgets.children %}

                                                <div class="item base-widget">
                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        <h4><strong>Image widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_column_type' %}
                                                        <h4><strong>Colonne widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_picto_type' %}
                                                        <h4><strong>Picto widget</strong></h4>
                                                    {% endif %}
                                                    {{ form_row(widget._type) }}
                                                    {{ form_row(widget.position) }}

                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        {{ form_widget(widget.gallery) }}
                                                    {% endif %}

                                                    <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                        <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.arriveWidgets.vars.prototypes.press_guide_widget_image_type)| escape }}"><i class="icon-plus"></i>Module image</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.arriveWidgets.vars.prototypes.press_guide_widget_column_type)| escape }}"><i class="icon-plus"></i>Module colonne</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.arriveWidgets.vars.prototypes.press_guide_widget_picto_type)| escape }}"><i class="icon-plus"></i>Module picto</a>

                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            Information
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.informationTitle) }}
                                        {{ form_row(form.parent.children.informationIcon) }}
                                        <div id="fdc-information-widget" data-form-widget="collection">
                                            {% for widget in form.parent.children.informationWidgets.children %}

                                                <div class="item base-widget">
                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        <h4><strong>Image widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_column_type' %}
                                                        <h4><strong>Colonne widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_picto_type' %}
                                                        <h4><strong>Picto widget</strong></h4>
                                                    {% endif %}
                                                    {{ form_row(widget._type) }}
                                                    {{ form_row(widget.position) }}

                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        {{ form_widget(widget.gallery) }}
                                                    {% endif %}

                                                    <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                        <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.informationWidgets.vars.prototypes.press_guide_widget_image_type)| escape }}"><i class="icon-plus"></i>Module image</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.informationWidgets.vars.prototypes.press_guide_widget_column_type)| escape }}"><i class="icon-plus"></i>Module colonne</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.informationWidgets.vars.prototypes.press_guide_widget_picto_type)| escape }}"><i class="icon-plus"></i>Module picto</a>

                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            Rendez vous des médias
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.meetingTitle) }}
                                        {{ form_row(form.parent.children.meetingIcon) }}
                                        <div id="fdc-meeting-widget" data-form-widget="collection">
                                            {% for widget in form.parent.children.meetingWidgets.children %}

                                                <div class="item base-widget">
                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        <h4><strong>Image widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_column_type' %}
                                                        <h4><strong>Colonne widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_picto_type' %}
                                                        <h4><strong>Picto widget</strong></h4>
                                                    {% endif %}
                                                    {{ form_row(widget._type) }}
                                                    {{ form_row(widget.position) }}

                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        {{ form_widget(widget.gallery) }}
                                                    {% endif %}

                                                    <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                        <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.meetingWidgets.vars.prototypes.press_guide_widget_image_type)| escape }}"><i class="icon-plus"></i>Module image</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.meetingWidgets.vars.prototypes.press_guide_widget_column_type)| escape }}"><i class="icon-plus"></i>Module colonne</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.meetingWidgets.vars.prototypes.press_guide_widget_picto_type)| escape }}"><i class="icon-plus"></i>Module picto</a>

                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            Services
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.serviceTitle) }}
                                        {{ form_row(form.parent.children.serviceIcon) }}
                                        <div id="fdc-service-widget" data-form-widget="collection">
                                            {% for widget in form.parent.children.serviceWidgets.children %}

                                                <div class="item base-widget">
                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        <h4><strong>Image widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_column_type' %}
                                                        <h4><strong>Colonne widget</strong></h4>
                                                    {% elseif widget.children._type.vars.value == 'press_guide_widget_picto_type' %}
                                                        <h4><strong>Picto widget</strong></h4>
                                                    {% endif %}
                                                    {{ form_row(widget._type) }}
                                                    {{ form_row(widget.position) }}

                                                    {% if widget.children._type.vars.value == 'press_guide_widget_image_type' %}
                                                        {{ form_widget(widget.gallery) }}
                                                    {% endif %}

                                                    <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                        <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                    </a>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.serviceWidgets.vars.prototypes.press_guide_widget_image_type)| escape }}"><i class="icon-plus"></i>Module image</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.serviceWidgets.vars.prototypes.press_guide_widget_column_type)| escape }}"><i class="icon-plus"></i>Module colonne</a>
                                        <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.serviceWidgets.vars.prototypes.press_guide_widget_picto_type)| escape }}"><i class="icon-plus"></i>Module picto</a>

                                    </div>
                                </div>
                            {% else %}
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            A votre arrivée
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.arriveTitle) }}

                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            Information
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.informationTitle) }}
                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            Rendez vous des médias
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.meetingTitle) }}

                                    </div>
                                </div>
                                <div class="box-body">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            Services
                                        </h4>
                                    </div>
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.serviceTitle) }}
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.publish_parameters'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.status) }}
                                        <div class="form-group fdc-input-border">
                                            {{ form_widget(form.parent.children.translate) }}
                                            {{ form_label(form.parent.children.translate) }}
                                        </div>
                                        {{ form_row(form.parent.children.priorityStatus) }}
                                    </div>
                                    <div>
                                        <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save"></i> Créer</button>
                                        <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Créer et retourner à la liste</button>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label class="control-label">
                                                {{ 'form.label_theme_name'|trans }}
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.name }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-header">
                                    <div class="clearfix">
                                        <h4 class="box-title">
                                            {{ 'group.seo'|trans }}
                                        </h4>
                                    </div>
                                    <div class="base-admin-padding-helper help-block sonata-ba-field-widget-help">
                                        {{ 'group.helper_seo'|trans|nl2br }}
                                    </div>
                                </div>
                                <div class="box-body">
                                    {{ form_row(translationsFields.seoTitle) }}
                                    {{ form_row(translationsFields.seoDescription) }}
                                </div>
                            </div>
                        </div>
                        {% if form.vars.default_locale == locale %}
                            <div class="col-md-4">
                                <p>
                                    {{ 'group.helper_seo_example'|trans|nl2br }}
                                </p>
                            </div>
                        {% else %}
                            <div class="col-md-4">
                                <div class="box box-success">
                                    <div class="box-header">
                                        <h4 class="box-title">
                                            {{ 'group.french_version'|trans|nl2br }}
                                        </h4>
                                    </div>
                                    <div class="box-body">
                                        <div class="sonata-ba-collapsed-fields">
                                            <div class="form-group">
                                                <label>
                                                    {{ 'form.label_seo_title'|trans }}
                                                </label>
                                                <div>
                                                    {{ form.parent.children.translations.children.fr.children.seoTitle.vars.value }}
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>
                                                    {{ 'form.label_seo_description'|trans }}
                                                </label>
                                                <div>
                                                    {{ form.parent.children.translations.children.fr.children.seoDescription.vars.value }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>