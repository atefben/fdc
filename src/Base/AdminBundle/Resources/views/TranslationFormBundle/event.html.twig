{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
        {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}
            <li {% if currentLocale == locale %}class="nav-tab-active active"{% endif %}>
                <a {% if translationsFields.vars.value is not null %}class="{{ translationsFields.vars.value.status|translate_status_to_admin_class }}"{% endif %} href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                    {{ locale|capitalize }}
                    {% if form.vars.default_locale == locale %}[MASTER]{% endif %}
                    {% if translationsFields.vars.required %}*{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
        {% set themeTranslations = (form.parent.children.theme.vars.data is not null) ? form.parent.children.theme.vars.data.translations.unwrap() : null %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.main_infos'|trans }}
                                </h4>
                            </div>
                            {% if form.vars.default_locale == locale %}
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.title) }}
                                        {{ form_row(form.parent.children.theme) }}
                                    </div>
                                </div>
                            {% else %}
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(translationsFields.title) }}
                                        <div class="form-group">
                                            <label class="control-label">
                                                Theme
                                            </label>
                                            <div>
                                                {% if themeTranslations is not null and
                                                themeTranslations.get(locale) is not null %}
                                                    {{ themeTranslations.get(locale).name }}
                                                {% endif %}
                                                {% if form.parent.children.theme.vars.value is not null %}
                                                    <a target="_blank" href="">
                                                        modifier la traduction
                                                    </a>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.publish_parameters'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                    {#  {{ form_row(translationsFields.publishedAt) }}
                                        {{ form_row(translationsFields.publishEndedAt) }} #}
                                        {{ form_row(translationsFields.status) }}
                                        {{ form_row(form.parent.children.translate) }}
                                    </div>
                                    <div>
                                        <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save"></i> Créer</button>
                                        <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Créer et retourner à la liste</button>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.french_version'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label class="control-label">
                                                Titre
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.title }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Theme
                                            </label>
                                            <div>
                                                {% if themeTranslations is not null and
                                                themeTranslations.get('fr') is not null %}
                                                    {{ themeTranslations.get('fr').name }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.news.widgets'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                {{  form_widget(form.parent.children.widgets) }}
                            </div>
                            {#<div class="box-body">
                                {% for widget in form.parent.children.widgets.children %}
                                <div class="base-widget">
                                    {% if widget.vars.value is news_widget_text %}
                                        {{ form_widget(attribute(widget.children.translations, locale)) }}
                                    {% else %}
                                        {{ form_widget(widget) }}
                                    {% endif %}
                                </div>
                                {% endfor %}
                            </div>#}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>