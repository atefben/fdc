{% trans_default_domain 'BaseAdminBundle' %}
<div class="a2lix_translationsFields tab-content">
    {% for translationsFields in form %}
        {{ form_row(translationsFields.applyChanges) }}
        {% set locale = translationsFields.vars.name %}
        {% if is_granted('ROLE_TRANSLATOR_FR') %}
            {% set currentLocale = 'fr' %}
        {% elseif is_granted('ROLE_TRANSLATOR_EN') %}
            {% set currentLocale = 'en' %}
        {% endif %}
        <div class="{% if app.request.get('code') is not null %}popin-a2lix-{{ locale }}{% else %}main-a2lix-{{ locale }}{% endif %} a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
            <div class="row">
                <div class="col-md-8">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Têtière
                            </h4>
                        </div>
                        {% if form.vars.default_locale == locale %}
                            {% if translationsFields.vars.value.slug is defined %}
                                <div id="btn-preview" data-preview="{{ translationsFields.vars.value.slug }}"></div>
                            {% endif %}
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {% if is_granted('ROLE_TRANSLATOR') or is_granted('ROLE_TRANSLATOR_MASTER') %}
                                        <div class="form-group">
                                            <label class="control-label">
                                                Identifiant
                                            </label>

                                            <div>
                                                {% if translationsFields.vars.value is not empty and
                                                translationsFields.vars.value.translatable is not empty %}
                                                    {{ translationsFields.vars.value.translatable.id }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endif %}
                                    {{ form_row(form.parent.children.image) }}
                                    {{ form_row(translationsFields.title) }}
                                    <hr>
                                    {{ form_row(translationsFields.header) }}
                                </div>
                            </div>
                        {% else %}
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {% if is_granted('ROLE_TRANSLATOR') or is_granted('ROLE_TRANSLATOR_MASTER') %}
                                        <div class="form-group">
                                            <label class="control-label">
                                                Identifiant
                                            </label>

                                            <div>
                                                {% if translationsFields.vars.value is not empty and
                                                translationsFields.vars.value.translatable is not empty %}
                                                    {{ translationsFields.vars.value.translatable.id }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endif %}
                                    {{ form_row(translationsFields.title) }}
                                    {{ form_row(translationsFields.header) }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-4">
                    {% if form.vars.default_locale == locale %}
                        {% include 'BaseAdminBundle:TranslationFormBundle:components/publish_parameters.html.twig' with {'isDisplayedHome': false} %}
                    {% else %}
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.french_version'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    <div class="form-group">
                                        <label class="control-label">
                                            Titre
                                        </label>
                                        {% if form.children.fr.vars.value is not null %}
                                            <div>
                                                {{ form.children.fr.vars.value.title }}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">
                                            Chapô
                                        </label>
                                        {% if form.children.fr.vars.value is not null %}
                                            <div>
                                                {{ form.children.fr.vars.value.header }}
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="row">
                {% if form.vars.default_locale == locale %}
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.news.widgets'|trans }}
                                </h4>
                            </div>

                            <div class="box-body">
                                <div class="fdc-widgets" data-form-widget="collection">
                                    {% for widget in form.parent.children.widgets.children %}
                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_subtitle_type' %}
                                                <h4><strong>{{ 'form.widget.subtitle'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_text_type' %}
                                                <h4><strong>{{ 'form.widget.text'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_type' %}
                                                <h4><strong>{{ 'form.widget.video'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' %}
                                                <h4><strong>{{ 'form.widget.video_youtube'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_audio_type' %}
                                                <h4><strong>{{ 'form.widget.audio'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_image_type' %}
                                                <h4><strong>{{ 'form.widget.image'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_image_dual_align_type' %}
                                                <h4><strong>{{ 'form.widget.image_dual_align'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_quote_type' %}
                                                <h4><strong>{{ 'form.widget.quote'|trans }}</strong></h4>
                                            {% endif %}
                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.position) }}
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_subtitle_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_text_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_quote_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_video_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_audio_type' %}
                                                {{ form_row(widget.file) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' %}
                                                {{ form_row(widget.image) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_image_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_image_dual_align_type' %}
                                                {{ form_row(widget.gallery) }}
                                            {% endif %}
                                            <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ 'form.news.helper_widgets'|trans }}<br/>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_subtitle_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.subtitle'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_text_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.text'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_video_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.video'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_audio_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.audio'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_image_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.image'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_image_dual_align_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.image_dual_align'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_quote_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.quote'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.ccm_sfc_widget_video_youtube_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.video_youtube'|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.news.widgets'|trans }}
                                </h4>
                            </div>

                            <div class="box-body">
                                <div class="fdc-widgets" data-form-widget="collection">
                                    {% for widget in form.parent.children.widgets.children %}
                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_subtitle_type' %}
                                                <h4><strong>{{ 'form.widget.subtitle'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_text_type' %}
                                                <h4><strong>{{ 'form.widget.text'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_type' %}
                                                <h4><strong>{{ 'form.widget.video'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' %}
                                                <h4><strong>{{ 'form.widget.video_youtube'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_audio_type' %}
                                                <h4><strong>{{ 'form.widget.audio'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_image_type' %}
                                                <h4><strong>{{ 'form.widget.image'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_image_dual_align_type' %}
                                                <h4><strong>{{ 'form.widget.image_dual_align'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_quote_type' %}
                                                <h4><strong>{{ 'form.widget.quote'|trans }}</strong></h4>
                                            {% endif %}
                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.position) }}
                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_subtitle_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_text_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_quote_type' %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                            {% endif %}

                                            {% if widget.children._type.vars.value == 'ccm_sfc_widget_video_type' %}
                                                {% set fileTranslations = (widget.children.file.vars.data is not null) ? widget.children.file.vars.data.translations : null %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_file'|trans }}
                                                    </label>

                                                    <div>
                                                        <div class="form-group">
                                                            <div>
                                                                <b>{{ 'form.label_title'|trans }}:</b>
                                                                {% if fileTranslations and fileTranslations.get(locale) is not null %}
                                                                    {{ fileTranslations.get(locale).title }}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        {% if widget.children.file.vars.value is not null %}
                                                            <a target="_blank"
                                                               href="{{ path('admin_base_core_mediavideo_edit', {'id': widget.children.file.vars.value}) }}">
                                                                modifier les traductions
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' %}
                                                {% set imageTranslations = (widget.children.image.vars.data is not null) ? widget.children.image.vars.data.translations : null %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_image'|trans }}
                                                    </label>

                                                    <div>
                                                        <div class="form-group">
                                                            <div>
                                                                <b>{{ 'form.label_alt_img'|trans }}:</b>
                                                                {% if imageTranslations is not null and imageTranslations.get(locale) is not null %}
                                                                    {{ imageTranslations.get(locale).alt }}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        {% if widget.children.image.vars.value is not null %}
                                                            <a target="_blank"
                                                               href="{{ path('admin_base_core_mediaimagesimple_edit', {'id': widget.children.image.vars.value}) }}">
                                                                modifier les traductions
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_audio_type' %}
                                                {% set fileTranslations = (widget.children.file.vars.data is not null) ? widget.children.file.vars.data.translations : null %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_file'|trans }}
                                                    </label>

                                                    <div>
                                                        <div class="form-group">
                                                            <div>
                                                                <b>{{ 'form.label_title'|trans }}:</b>
                                                                {% if fileTranslations and fileTranslations.get(locale) is not null %}
                                                                    {{ fileTranslations.get(locale).title }}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        {% if widget.children.file.vars.value is not null %}
                                                            <a target="_blank"
                                                               href="{{ path('admin_base_core_mediaaudio_edit', {'id': widget.children.file.vars.value}) }}">
                                                                modifier les traductions
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% elseif
                                            widget.children._type.vars.value == 'ccm_sfc_widget_image_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_image_dual_align_type' %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_header_gallery'|trans }}
                                                    </label>

                                                    <div>
                                                        {% if widget.children.gallery.vars.data.medias is defined and widget.children.gallery.vars.data.medias is not null %}
                                                            {% for media in widget.children.gallery.vars.data.medias %}
                                                                {% if media and media.media %}
                                                                    <div class="form-group">
                                                                        <label>Media {{ loop.index }}</label>
                                                                        {% set mediaTranslations = (media.media.translations is not null) ? media.media.translations : null %}
                                                                        <div>
                                                                            <b>{{ 'form.label_legend_img'|trans }}
                                                                                :</b>
                                                                            {% if mediaTranslations.get(locale) is not null %}
                                                                                {{ mediaTranslations.get(locale).legend }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_alt_img'|trans }}:</b>
                                                                            {% if mediaTranslations.get(locale) is not null %}
                                                                                {{ mediaTranslations.get(locale).alt }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_copyright'|trans }}
                                                                                :</b>
                                                                            {% if mediaTranslations.get(locale) is not null %}
                                                                                {{ mediaTranslations.get(locale).copyright }}
                                                                            {% endif %}
                                                                        </div>
                                                                        {% if media.media != null %}
                                                                            <a target="_blank"
                                                                               href="{{ path('admin_base_core_mediaimage_edit', {'id': media.media.id }) }}">
                                                                                modifier les traductions
                                                                            </a>
                                                                        {% endif %}
                                                                    </div>
                                                                {% endif %}
                                                            {% endfor %}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.french_version'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {% for widget in form.parent.children.widgets.children %}
                                        <div class="item base-widget">
                                            {% if
                                            widget.children._type.vars.value == 'ccm_sfc_widget_text_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_subtitle_type' or
                                            widget.children._type.vars.value == 'ccm_sfc_widget_quote_type' %}
                                                {% if widget.children._type.vars.value == 'ccm_sfc_widget_text_type' %}
                                                    <h4><strong>{{ 'form.widget.text'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_subtitle_type' %}
                                                    <h4><strong>{{ 'form.widget.subtitle'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_quote_type' %}
                                                    <h4><strong>{{ 'form.widget.quote'|trans }}</strong></h4>
                                                {% endif %}
                                                <div class="form-group">
                                                    <label>
                                                        Texte
                                                    </label>

                                                    <div>
                                                        {% if widget.children.translations.fr.vars.value is not null %}
                                                            {{ widget.children.translations.fr.vars.value.content|raw }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_type' %}
                                                <h4><strong>{{ 'form.widget.video'|trans }}</strong></h4>
                                                {% set fileTranslations = (widget.children.file.vars.data is not null) ? widget.children.file.vars.data.translations : null %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_file'|trans }}
                                                    </label>

                                                    <div>
                                                        <div class="form-group">
                                                            <div>
                                                                <b>{{ 'form.label_title'|trans }}:</b>
                                                                {% if fileTranslations and fileTranslations.get('fr') is not null %}
                                                                    {{ fileTranslations.get('fr').title }}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_video_youtube_type' %}
                                                <h4><strong>{{ 'form.widget.video_youtube'|trans }}</strong></h4>
                                                <div class="form-group">
                                                    <label>
                                                        {{ 'form.label_news_widget_video_youtube_url'|trans }}
                                                    </label>

                                                    <div>
                                                        {% if widget.children.translations.fr.vars.value is not null %}
                                                            {{ widget.children.translations.fr.vars.value.url }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label>
                                                        {{ 'form.label_news_widget_video_youtube_title'|trans }}
                                                    </label>

                                                    <div>
                                                        {% if widget.children.translations.fr.vars.value is not null %}
                                                            {{ widget.children.translations.fr.vars.value.title }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="form-group">


                                                    {% set imageTranslations = (widget.vars.data.image is not null) ? widget.vars.data.image.translations : null %}
                                                    <label>
                                                        Informations image
                                                    </label>

                                                    <div>
                                                        <b>{{ 'form.label_alt_img'|trans }}:</b>
                                                        {% if imageTranslations is not null and imageTranslations.get('fr') is not null %}
                                                            {{ imageTranslations.get('fr').alt }}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_audio_type' %}
                                                <h4><strong>{{ 'form.widget.audio'|trans }}</strong></h4>
                                                {% set fileTranslations = (widget.children.file.vars.data is not null) ? widget.children.file.vars.data.translations : null %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_file'|trans }}
                                                    </label>

                                                    <div>
                                                        <div class="form-group">
                                                            <div>
                                                                <b>{{ 'form.label_title'|trans }}:</b>
                                                                {% if fileTranslations and fileTranslations.get('fr') is not null %}
                                                                    {{ fileTranslations.get('fr').title }}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_image_type' %}
                                                <h4><strong>{{ 'form.widget.image'|trans }}</strong></h4>
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_header_gallery'|trans }}
                                                    </label>

                                                    <div>
                                                        {% if widget.children.gallery.vars.data.medias is defined and widget.children.gallery.vars.data.medias is not null %}
                                                            {% for media in widget.children.gallery.vars.data.medias %}
                                                                {% if media and media.media %}
                                                                    <div class="form-group">
                                                                        <label>Media {{ loop.index }}</label>
                                                                        {% if media.media != null %}
                                                                            {% set mediaTranslations = (media.media.translations is not null) ? media.media.translations : null %}
                                                                        {% endif %}
                                                                        <div>
                                                                            <b>{{ 'form.label_legend_img'|trans }}
                                                                                :</b>
                                                                            {% if mediaTranslations.get('fr') is not null %}
                                                                                {{ mediaTranslations.get('fr').legend }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_alt_img'|trans }}:</b>
                                                                            {% if mediaTranslations.get('fr') is not null %}
                                                                                {{ mediaTranslations.get('fr').alt }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_copyright'|trans }}
                                                                                :</b>
                                                                            {% if mediaTranslations.get('fr') is not null %}
                                                                                {{ mediaTranslations.get('fr').copyright }}
                                                                            {% endif %}
                                                                        </div>
                                                                    </div>
                                                                {% endif %}
                                                            {% endfor %}
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% elseif widget.children._type.vars.value == 'ccm_sfc_widget_image_dual_align_type' %}
                                                <h4><strong>{{ 'form.widget.image_dual_align'|trans }}</strong></h4>
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_header_gallery'|trans }}
                                                    </label>
                                                    <div>
                                                        {% if widget.children.gallery.vars.data is not empty %}
                                                            {% for media in widget.children.gallery.vars.data.medias %}
                                                                {% if media and media.media %}
                                                                    <div class="form-group">
                                                                        <label>Media {{ loop.index }}</label>
                                                                        {% set mediaTranslations = (media.media.translations is not null) ? media.media.translations : null %}
                                                                        <div>
                                                                            <b>{{ 'form.label_legend_img'|trans }}
                                                                                :</b>
                                                                            {% if mediaTranslations.get('fr') is not null %}
                                                                                {{ mediaTranslations.get('fr').legend }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_alt_img'|trans }}:</b>
