{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <li {% if form.vars.default_locale == locale %}class="active"{% endif %} data-locale="{{ locale }}">
                <a href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                    {% set langKey = 'lang.' ~ locale %}
                    {{ langKey|trans({}, 'BaseAdminBundle') }}
                    {% if form.vars.default_locale == locale %}(MASTER){% endif %}
                    {% if translationsFields.vars.required %}*{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if form.vars.default_locale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    Chaîne WebTV
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.name) }}
                                    {% if form.vars.default_locale == locale %}
                                        {{ form_row(form.parent.children.image) }}
                                    {% endif %}
                                    {% if form.vars.default_locale != locale %}
                                        {{ form_row(translationsFields.status) }}
                                    {% endif %}
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box box-success">
                            {% if form.vars.default_locale == locale %}
                                <div class="box-header">
                                    <h4 class="box-title">
                                        Paramètres de publication
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group fdc-input-border">
                                            {{ form_widget(form.parent.children.translate) }}
                                            {{ form_label(form.parent.children.translate) }}
                                        </div>
                                        {{ form_row(form.parent.children.priorityStatus) }}
                                        <div class="status-hidden">
                                            {{ form_row(translationsFields.status) }}
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div class="box-header">
                                    <h4 class="box-title">
                                        VERSION FRANÇAISE
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">

                                        <label class="control-label">
                                            {{ 'form.label_web_tv_name'|trans }}
                                        </label>
                                        {% if form.children.fr.vars.value is not null %}
                                            <div>
                                                {{ form.children.fr.vars.value.name }}
                                            </div>
                                        {% endif %}

                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>