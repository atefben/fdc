{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
        {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}
            <li {% if currentLocale == locale %}class="active"{% endif %}>
                <a href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                    {{ ('lang.' ~ locale)|trans() }}
                    {% if form.vars.default_locale == locale %}[MASTER]{% endif %}
                    {% if translationsFields.vars.required %}*{% endif %}
                </a>
            </li>
        {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
        {% set procedureTranslations = (form.parent.children.procedure.vars.data|length > 0 is not null) ? form.parent.children.procedure.vars.data.translations.unwrap() : null %}
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if form.vars.default_locale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.main_infos'|trans }}
                                </h4>
                            </div>
                            {% if form.vars.default_locale == locale %}
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.commonTitle) }}
                                    {{ form_row(translationsFields.commonContent) }}
                                    {{ form_row(form.parent.children.procedure) }}
                                </div>
                            </div>
                            {% else %}
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.commonTitle) }}
                                    {{ form_row(translationsFields.commonContent) }}
                                    <div class="form-group">
                                        <header>
                                            Proc√©dure
                                        </header>
                                        <div>
                                            <label>
                                                Titre
                                            </label>
                                        <span>
                                        {% if procedureTranslations is not null and
                                        procedureTranslations.get(locale) is not null %}
                                            {{ procedureTranslations.get(locale).procedureTitle }}
                                        {% endif %}
                                        </span>
                                        </div>
                                        <div>
                                            <label>
                                                Contenu
                                            </label>
                                        <span>
                                        {% if procedureTranslations is not null and
                                        procedureTranslations.get(locale) is not null %}
                                            {{ procedureTranslations.get(locale).procedureContent }}
                                        {% endif %}
                                        </span>
                                        </div>
                                        <div>
                                            <label>
                                                Lien
                                            </label>
                                        <span>
                                        {% if procedureTranslations is not null and
                                        procedureTranslations.get(locale) is not null %}
                                            {{ procedureTranslations.get(locale).procedureLink }}
                                        {% endif %}
                                        </span>
                                        </div>
                                        {% if form.parent.children.procedure.vars.value is not null %}
                                            <a target="_blank" href="{{ path('admin_base_core_pressaccreditprocedure_edit', {'id': form.parent.children.procedure.vars.value}) }}">modifier les traductions</a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        {{ 'group.seo'|trans }}
                                    </h4>
                                </div>
                                <div class="base-admin-padding-helper help-block sonata-ba-field-widget-help">
                                    {{ 'group.helper_seo'|trans|nl2br }}
                                </div>
                            </div>
                            <div class="box-body">
                                {{ form_row(translationsFields.seoTitle) }}
                                {{ form_row(translationsFields.seoDescription) }}
                            </div>
                        </div>
                    </div>
                    {% if form.vars.default_locale == locale %}
                        <div class="col-md-8">
                            <p>
                                {{ 'group.helper_seo_example'|trans|nl2br }}
                            </p>
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans|nl2br }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label>
                                                {{ 'form.label_seo_title'|trans }}
                                            </label>
                                            <div>
                                                {{ form.parent.children.translations.children.fr.children.seoTitle.vars.value }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                {{ 'form.label_seo_description'|trans }}
                                            </label>
                                            <div>
                                                {{ form.parent.children.translations.children.fr.children.seoDescription.vars.value }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
