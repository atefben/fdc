{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
    {% include 'BaseAdminBundle:Block:mdf_languages.tabs.html.twig' %}

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {{ form_row(translationsFields.applyChanges) }}
            {% set locale = translationsFields.vars.name %}
            {% if is_granted('ROLE_TRANSLATOR_FR') %}
                {% set currentLocale = 'fr' %}
            {% elseif is_granted('ROLE_TRANSLATOR_EN') %}
                {% set currentLocale = 'en' %}
            {% elseif is_granted('ROLE_TRANSLATOR_ZH') %}
                {% set currentLocale = 'zh' %}
            {% endif %}
            <div class="{% if app.request.get('code') is not null %}popin-a2lix-{{ locale }}{% else %}main-a2lix-{{ locale }}{% endif %} a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    Informations de base
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.title) }}
                                    {{ form_row(translationsFields.subTitle) }}
                                    {{ form_row(translationsFields.header) }}
                                    {% if form.vars.default_locale != locale %}
                                        {{ form_row(translationsFields.status) }}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}
                            {% include 'BaseAdminBundle:TranslationFormBundle:components/publish_parameters.html.twig' %}
                        {% else %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label class="control-label">
                                                {{ 'form.label.service_title'|trans }}
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.title }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                {{ 'form.label.service_sub_title'|trans }}
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.subTitle }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                {{ 'form.label.service_header'|trans }}
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.header|raw }}
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    {% if form.vars.default_locale == locale %}
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.widgets'|trans }}
                                    </h4>
                                </div>

                                <div class="box-body">
                                    <div class="fdc-widgets" data-form-widget="collection">
                                        {% for widget in form.parent.children.widgets.children %}
                                            <div class="item base-widget">
                                                {% if widget.children._type.vars.value == 'service_widget_product_type' %}
                                                    <h4><strong>{{ 'form.widget.service_product'|trans }}</strong></h4>
                                                {% endif %}
                                                {{ form_row(widget._type) }}
                                                {{ form_row(widget.position) }}
                                                {{ form_row(widget.gallery) }}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}

                                                <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                    <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                </a>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {{ 'form.news.helper_widgets'|trans }}<br/>
                                    <a class="btn btn-primary btn-add-base-widget"
                                       data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.service_widget_product_type)|escape }}"><i
                                                class="icon-plus"></i>{{ 'form.widget.service_product'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-md-8">
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.widgets'|trans }}
                                    </h4>
                                </div>

                                <div class="box-body">
                                    <div class="fdc-widgets" data-form-widget="collection">
                                        {% for widget in form.parent.children.widgets.children %}
                                            <div class="item base-widget">
                                                {% if widget.children._type.vars.value == 'service_widget_product_type' %}
                                                    <h4><strong>{{ 'form.widget.service_product'|trans }}</strong></h4>
                                                {% endif %}
                                                {{ form_row(widget._type) }}
                                                {{ form_row(widget.position) }}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        {% for widget in form.parent.children.widgets.children %}
                                            <div class="item base-widget">
                                                {% if widget.children._type.vars.value == 'service_widget_product_type' %}
                                                    <h4><strong>{{ 'form.widget.service_product'|trans }}</strong></h4>
                                                    <div class="form-group">
                                                        <label>
                                                            {{ 'form.label.service_widget_product_url'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.translations.fr.vars.value is not null %}
                                                                {{ widget.children.translations.fr.vars.value.url }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>
                                                            {{ 'form.label.service_widget_product_title'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.translations.fr.vars.value is not null %}
                                                                {{ widget.children.translations.fr.vars.value.title }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>
                                                            {{ 'form.label.service_widget_product_sub_title'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.translations.fr.vars.value is not null %}
                                                                {{ widget.children.translations.fr.vars.value.subTitle }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>
                                                            {{ 'form.label.service_widget_product_body'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.translations.fr.vars.value is not null %}
                                                                {{ widget.children.translations.fr.vars.value.body|raw }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label>
                                                            {{ 'form.label.service_widget_product_toggled_body'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.translations.fr.vars.value is not null %}
                                                                {{ widget.children.translations.fr.vars.value.toggledBody|raw }}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    Bloc de contenu
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.showContentBlock) }}
                                    {{ form_row(translationsFields.contentBlockTitle) }}
                                    {{ form_row(translationsFields.contentBlockBody) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>