{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
    {% include 'BaseAdminBundle:Block:languages.tabs.html.twig' %}

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="{% if app.request.get('code') is not null %}popin-a2lix-{{ locale }}{% else %}main-a2lix-{{ locale }}{% endif %} a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">

                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        {{ 'group.main_infos'|trans }}
                                    </h4>
                                </div>
                            </div>
                            <div class="box-body">
                                {{ form_row(translationsFields.mainTitle) }}
                                {{ form_row(translationsFields.mainIcon) }}
                                {{ form_row(translationsFields.mainDescription) }}
                            </div>
                        </div>
                        <div class="box box-success">
                            <div class="box-header">
                                {% if form.vars.default_locale == locale %}
                                    <div class="clearfix">
                                        <h4 class="box-title">
                                            Modules Ã©ditoriaux
                                        </h4>
                                    </div>
                                    <div class="fdc-widgets" data-form-widget="collection">

                                        {% for widget in form.parent.children.widgets.children %}

                                            <div class="item base-widget">
                                                {% if widget.children._type.vars.value == 'fdc_page_participate_section_widget_typeone_type' %}
                                                    <h4><strong>Type 1</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typetwo_type' %}
                                                    <h4><strong>Type 2</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typethree_type' %}
                                                    <h4><strong>Type 3</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typefour_type' %}
                                                    <h4><strong>Type 4</strong></h4>
                                                {% endif %}
                                                {{ form_row(widget._type) }}
                                                {{ form_row(widget.position) }}
                                                {% if widget.children._type.vars.value == 'fdc_page_participate_section_widget_typeone_type' %}
                                                    {{ form_row(widget.image) }}
                                                    {{ form_row(attribute(widget.children.translations, locale)) }}
                                                {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typetwo_type' %}
                                                    {{ form_row(widget.image) }}
                                                    {{ form_row(attribute(widget.children.translations, locale)) }}
                                                {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typethree_type' %}
                                                    {{ form_row(attribute(widget.children.translations, locale)) }}
                                                {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typefour_type' %}
                                                    {{ form_row(widget.image) }}
                                                    {{ form_row(attribute(widget.children.translations, locale)) }}
                                                {% endif %}
                                                {{ form_row(widget.lockedContent) }}
                                                <div class="clearfix">
                                                    <div class="fdc-widget-remove-btn">
                                                        <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                            <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                    <a class="btn btn-primary btn-add-base-widget"
                                       data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_participate_section_widget_typeone_type)| escape }}"><i
                                                class="icon-plus"></i>Type 1</a>
                                    <a class="btn btn-primary btn-add-base-widget"
                                       data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_participate_section_widget_typetwo_type)| escape }}"><i
                                                class="icon-plus"></i>Type 2</a>
                                    <a class="btn btn-primary btn-add-base-widget"
                                       data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_participate_section_widget_typethree_type)| escape }}"><i
                                                class="icon-plus"></i>Type 3</a>
                                    <a class="btn btn-primary btn-add-base-widget"
                                       data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_participate_section_widget_typefour_type)| escape }}"><i
                                                class="icon-plus"></i>Type 4</a>
                                {% else %}
                                    {% for widget in form.parent.children.widgets.children %}

                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'fdc_page_participate_section_widget_typeone_type' %}
                                                <h4><strong>Type 1</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typetwo_type' %}
                                                <h4><strong>Type 2</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typethree_type' %}
                                                <h4><strong>Type 3</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typefour_type' %}
                                                <h4><strong>Type 4</strong></h4>
                                            {% endif %}
                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.position) }}
                                            {% if widget.children._type.vars.value == 'fdc_page_participate_section_widget_typeone_type' %}
                                                {{ form_row(widget.image) }}
                                                {{ form_row(attribute(widget.children.translations, locale)) }}
                                            {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typetwo_type' %}
                                                {{ form_row(widget.image) }}
                                                {{ form_row(attribute(widget.children.translations, locale)) }}
                                            {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typethree_type' %}
                                                {{ form_row(attribute(widget.children.translations, locale)) }}
                                            {% elseif widget.children._type.vars.value == 'fdc_page_participate_section_widget_typefour_type' %}
                                                {{ form_row(widget.image) }}
                                                {{ form_row(attribute(widget.children.translations, locale)) }}
                                            {% endif %}
                                            {{ form_row(widget.lockedContent) }}
                                            <div class="clearfix">
                                                <div class="fdc-widget-remove-btn">
                                                    <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                        <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% endif %}

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.publish_parameters'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group fdc-input-border">
                                            {{ form_widget(form.parent.children.translate) }}
                                            {{ form_label(form.parent.children.translate) }}
                                            {{ form_widget(form.parent.children.translateOptions) }}
                                            {{ form_row(form.parent.children.priorityStatus) }}
                                        </div>
                                    </div>
                                    <div class="status-hidden">
                                        {{ form_row(translationsFields.status) }}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans|nl2br }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <h4 class="box-title">
                                        Informations de base
                                    </h4>
                                    <div>
                                        <label>
                                            Titre
                                        </label>
                                            <span>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.mainTitle }}
                                                    {{ form.children.fr.vars.value.mainIcon }}
                                                    {{ form.children.fr.vars.value.mainDescription }}
                                                </div>
                                            {% endif %}
                                            </span>
                                    </div>
                                </div>
                            </div>
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.publish_parameters'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_widget(translationsFields.status) }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

            </div>
        {% endfor %}
    </div>
</div>
