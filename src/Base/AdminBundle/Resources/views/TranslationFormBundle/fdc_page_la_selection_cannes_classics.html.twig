{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
    {% include 'BaseAdminBundle:Block:languages.tabs.html.twig' %}

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}

            <div class="{% if app.request.get('code') is not null %}popin-a2lix-{{ locale }}{% else %}main-a2lix-{{ locale }}{% endif %} a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
                <div class="row">
                    {% if form.vars.default_locale == locale %}
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'form.fdc_page_web_tv_trailers.content_page'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(form.parent.children.image) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'form.fdc_page_la_selection_cannes_classics.page_title'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.titleNav) }}
                                    {{ form_row(translationsFields.title) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if form.vars.default_locale == locale %}
                    <div class="col-md-12">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    {{ 'group.news.widgets'|trans }}
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="fdc-widgets" data-form-widget="collection">
                                    {% for widget in form.parent.children.widgets.children %}
                                        <div class="item base-widget">
                                            {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_text_type' %}
                                                <h4><strong>{{ 'form.widget.text'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_type' %}
                                                <h4><strong>{{ 'form.widget.video'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_youtube_type' %}
                                                <h4><strong>{{ 'form.widget.video_youtube'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_audio_type' %}
                                                <h4><strong>{{ 'form.widget.audio'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_type' %}
                                                <h4><strong>{{ 'form.widget.image'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_dual_align_type' %}
                                                <h4><strong>{{ 'form.widget.image_dual_align'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_quote_type' %}
                                                <h4><strong>{{ 'form.widget.quote'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_subtitle_type' %}
                                                <h4><strong>{{ 'form.widget.subtitle'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_movie_type' %}
                                                <h4><strong>{{ 'form.widget.movie'|trans }}</strong></h4>
                                            {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_intro_type' %}
                                                <h4><strong>{{ 'form.widget.intro'|trans }}</strong></h4>
                                            {% endif %}

                                            {{ form_row(widget._type) }}
                                            {{ form_row(widget.position) }}
                                            {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_text_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_youtube_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_quote_type' or
                                            widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_intro_type' or
                                            widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_subtitle_type'
                                            %}
                                                {{ form_widget(attribute(widget.children.translations, locale)) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_movie_type' %}
                                                {{ form_row(widget.films) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_audio_type'
                                            %}
                                                {{ form_row(widget.file) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_youtube_type' %}
                                                {{ form_row(widget.image) }}
                                            {% endif %}
                                            {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_type' or
                                            widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_dual_align_type'
                                            %}
                                                {{ form_row(widget.gallery) }}
                                            {% endif %}
                                            <a class="btn btn-danger btn-sm btn-outline remove_item">
                                                <i class="fa fa-minus-circle"></i> {{ 'action_delete'|trans({}, 'SonataAdminBundle') }}
                                            </a>
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ 'form.news.helper_widgets'|trans }}<br/>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_text_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.text'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_video_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.video'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_video_youtube_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.video_youtube'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_audio_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.audio'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_image_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.image'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_image_dual_align_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.image_dual_align'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_quote_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.quote'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_subtitle_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.subtitle'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_intro_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.intro'|trans }}</a>
                                <a class="btn btn-primary btn-add-base-widget" data-prototype="{{ form_widget(form.parent.children.widgets.vars.prototypes.fdc_page_la_selection_cannes_classics_widget_movie_type) | escape }}"><i class="icon-plus"></i>{{ 'form.widget.movie'|trans }}</a>

                            </div>
                        </div>
                    </div>
                    {% else %}
                        <div class="col-md-12">
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.widgets'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="fdc-widgets" data-form-widget="collection">
                                        {% for widget in form.parent.children.widgets.children %}
                                            <div class="item base-widget">
                                                {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_text_type' %}
                                                    <h4><strong>{{ 'form.widget.text'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_type' %}
                                                    <h4><strong>{{ 'form.widget.video'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_youtube_type' %}
                                                    <h4><strong>{{ 'form.widget.video_youtube'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_audio_type' %}
                                                    <h4><strong>{{ 'form.widget.audio'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_type' %}
                                                    <h4><strong>{{ 'form.widget.image'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_dual_align_type' %}
                                                    <h4><strong>{{ 'form.widget.image_dual_align'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_quote_type' %}
                                                    <h4><strong>{{ 'form.widget.quote'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_subtitle_type' %}
                                                    <h4><strong>{{ 'form.widget.subtitle'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_movie_type' %}
                                                    <h4><strong>{{ 'form.widget.movie'|trans }}</strong></h4>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_intro_type' %}
                                                    <h4><strong>{{ 'form.widget.intro'|trans }}</strong></h4>
                                                {% endif %}

                                                {{ form_row(widget._type) }}
                                                {{ form_row(widget.position) }}
                                                {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_text_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_youtube_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_quote_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_intro_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_subtitle_type'
                                                %}
                                                    {{ form_widget(attribute(widget.children.translations, locale)) }}
                                                {% endif %}
                                                {% if widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_type' %}
                                                {% set fileTranslations = (widget.children.file.vars.data is not null) ? widget.children.file.vars.data.translations : null %}
                                                <div class="form-group">
                                                    <label class="control-label">
                                                        {{ 'form.label_file'|trans }}
                                                    </label>
                                                    <div>
                                                        <div class="form-group">
                                                            <div>
                                                                <b>{{ 'form.label_title'|trans }}:</b>
                                                                {% if fileTranslations and fileTranslations.get(locale) is not null %}
                                                                    {{ fileTranslations.get(locale).title }}
                                                                {% endif %}
                                                            </div>
                                                        </div>
                                                        {% if widget.children.file.vars.value is not null %}
                                                            <a target="_blank" href="{{ path('admin_base_core_mediavideo_edit', {'id': widget.children.file.vars.value}) }}">
                                                                modifier les traductions
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_video_youtube_type' %}
                                                    {% set imageTranslations = (widget.children.image.vars.data is not null) ? widget.children.image.vars.data.translations : null %}
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            {{ 'form.label_image'|trans }}
                                                        </label>
                                                        <div>
                                                            <div class="form-group">
                                                                <div>
                                                                    <b>{{ 'form.label_alt_img'|trans }}:</b>
                                                                    {% if imageTranslations is not null and imageTranslations.get(locale) is not null %}
                                                                        {{ imageTranslations.get(locale).alt }}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            {% if widget.children.image.vars.value is not null %}
                                                                <a target="_blank" href="{{ path('admin_base_core_mediaimagesimple_edit', {'id': widget.children.image.vars.value}) }}">
                                                                    modifier les traductions
                                                                </a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% elseif widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_audio_type' %}
                                                    {% set fileTranslations = (widget.children.file.vars.data is not null) ? widget.children.file.vars.data.translations : null %}
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            {{ 'form.label_file'|trans }}
                                                        </label>
                                                        <div>
                                                            <div class="form-group">
                                                                <div>
                                                                    <b>{{ 'form.label_title'|trans }}:</b>
                                                                    {% if fileTranslations and fileTranslations.get(locale) is not null %}
                                                                        {{ fileTranslations.get(locale).title }}
                                                                    {% endif %}
                                                                </div>
                                                            </div>
                                                            {% if widget.children.file.vars.value is not null %}
                                                                <a target="_blank" href="{{ path('admin_base_core_mediaaudio_edit', {'id': widget.children.file.vars.value}) }}">
                                                                    modifier les traductions
                                                                </a>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% elseif
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_type' or
                                                widget.children._type.vars.value == 'fdc_page_la_selection_cannes_classics_widget_image_dual_align_type'
                                                %}
                                                    <div class="form-group">
                                                        <label class="control-label">
                                                            {{ 'form.label_header_gallery'|trans }}
                                                        </label>
                                                        <div>
                                                            {% if widget.children.gallery.vars.data.medias is defined and widget.children.gallery.vars.data.medias is not null %}
                                                                {% for media in widget.children.gallery.vars.data.medias %}
                                                                    <div class="form-group">
                                                                        <label>Media {{ loop.index }}</label>
                                                                        {% set mediaTranslations = (media.media.translations is not null) ? media.media.translations : null %}
                                                                        <div>
                                                                            <b>{{ 'form.label_legend_img'|trans }}:</b>
                                                                            {% if mediaTranslations.get(locale) is not null %}
                                                                                {{ mediaTranslations.get(locale).legend }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_alt_img'|trans }}:</b>
                                                                            {% if mediaTranslations.get(locale) is not null %}
                                                                                {{ mediaTranslations.get(locale).alt }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <div>
                                                                            <b>{{ 'form.label_copyright'|trans }}:</b>
                                                                            {% if mediaTranslations.get(locale) is not null %}
                                                                                {{ mediaTranslations.get(locale).copyright }}
                                                                            {% endif %}
                                                                        </div>
                                                                        <a target="_blank" href="{{ path('admin_base_core_mediaimage_edit', {'id': media.media.id }) }}">
                                                                            modifier les traductions
                                                                        </a>
                                                                    </div>
                                                                {% endfor %}
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        {% endfor %}
                                    </div>
                                    {{ 'form.news.helper_widgets'|trans }}<br/>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        {{ 'group.seo'|trans }}
                                    </h4>
                                </div>
                                <div class="base-admin-padding-helper help-block sonata-ba-field-widget-help">
                                    {{ 'group.helper_seo'|trans|nl2br }}
                                </div>
                            </div>
                            <div class="box-body">
                                {{ form_row(translationsFields.seoTitle) }}
                                {{ form_row(translationsFields.seoDescription) }}
                                {% if form.vars.default_locale == locale %}
                                    {{ form_row(form.parent.children.seoFile) }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        {% if form.vars.default_locale == locale %}
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    <div class="form-group fdc-input-border">
                                        {{ form_widget(form.parent.children.translate) }}
                                        {{ form_label(form.parent.children.translate) }}
                                        {{ form_widget(form.parent.children.translateOptions) }}
                                        {{ form_row(form.parent.children.priorityStatus) }}
                                    </div>
                                    <div class="status-hidden">
                                        {{ form_row(translationsFields.status) }}
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.status) }}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>