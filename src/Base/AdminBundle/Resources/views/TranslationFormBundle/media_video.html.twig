{% trans_default_domain 'BaseAdminBundle' %}
{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    {% set currentLocale = (app.request.get('locale')) ? app.request.get('locale') : form.vars.default_locale %}
    {% include 'BaseAdminBundle:Block:languages.tabs.html.twig' %}

    <div class="a2lix_translationsFields tab-content">
        {% for translationsFields in form %}
            {% set locale = translationsFields.vars.name %}
            <div class="{% if app.request.get('code') is not null %}popin-a2lix-{{ locale }}{% else %}main-a2lix-{{ locale }}{% endif %} a2lix_translationsFields-{{ locale }} tab-pane {% if currentLocale == locale %}active{% endif %}">
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <h4 class="box-title">
                                    Informations de base
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    {{ form_row(translationsFields.title) }}
                                    {{ form_row(form.parent.children.theme) }}
                                    {{ form_row(translationsFields.file) }}
                                    {{ form_row(form.parent.children.image) }}
                                    {{ form_row(form.parent.children.tags) }}
                                    {{ form_row(form.parent.children.associatedFilms) }}

                                    {% if form.vars.default_locale == locale %}
                                    <div class="form-group">
                                        {{ form_widget(form.parent.children.displayedAll) }}
                                        {{ form_label(form.parent.children.displayedAll) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.parent.children.displayedHome) }}
                                        {{ form_label(form.parent.children.displayedHome) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.parent.children.displayedWebTv) }}
                                        {{ form_label(form.parent.children.displayedWebTv) }}
                                    </div>
                                    {{ form_row(form.parent.children.webTv) }}
                                    <div class="form-group">
                                        {{ form_widget(form.parent.children.displayedTrailer) }}
                                        {{ form_label(form.parent.children.displayedTrailer) }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        {% if form.vars.default_locale == locale %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.news.publish_parameters'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    {% if form.parent.children.createdAt.vars.data and form.parent.children.createdBy.vars.data %}
                                        <div class="fdc-help form-group">
                                            {{ 'entity.created_infos'|trans(
                                            {
                                                'date': form.parent.children.createdAt.vars.data|date('d/m/Y H:i'),
                                                'user': form.parent.children.createdBy.vars.data.fullName
                                            }
                                            )|raw }}
                                        </div>
                                    {% endif %}
                                    {% if form.parent.children.updatedAt.vars.data and form.parent.children.updatedBy.vars.data %}
                                        <div class="fdc-help form-group">
                                            {{ 'entity.updated_infos'|trans(
                                            {
                                                'date': form.parent.children.updatedAt.vars.data|date('d/m/Y H:i'),
                                                'user': form.parent.children.updatedBy.vars.data.fullName
                                            }
                                            )|raw }}
                                        </div>
                                    {% endif %}
                                    <div class="sonata-ba-collapsed-fields">
                                        {{ form_row(form.parent.children.sites) }}
                                        <div class="form-group">
                                            {{ form_widget(form.parent.children.displayedMobile) }}
                                            {{ form_label(form.parent.children.displayedMobile) }}
                                        </div>
                                        {{ form_row(form.parent.children.publishedAt) }}
                                        {{ form_row(form.parent.children.publishEndedAt) }}
                                        {{ form_row(translationsFields.status) }}
                                        <div class="form-group fdc-input-border">
                                            {{ form_widget(form.parent.children.translate) }}
                                            {{ form_label(form.parent.children.translate) }}
                                            {{ form_widget(form.parent.children.translateOptions) }}
                                            {{ form_row(form.parent.children.priorityStatus) }}
                                        </div>
                                    </div>
                                    {% if app.request.get('id') is not null %}
                                        <button type="submit" class="btn btn-success" name="btn_update_and_edit"><i class="fa fa-save"></i> Mettre à jour</button>
                                        <button type="submit" class="btn btn-success" name="btn_update_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Mettre à jour et fermer</button>
                                    {% else %}
                                        <button type="submit" class="btn btn-success" name="btn_create_and_edit"><i class="fa fa-save"></i> Créer</button>
                                        <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Créer et retourner à la liste</button>
                                    {% endif %}
                                </div>
                            </div>
                        {% else %}
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label class="control-label">
                                                Titre
                                            </label>
                                            {% if form.children.fr.vars.value is not null %}
                                                <div>
                                                    {{ form.children.fr.vars.value.title }}
                                                </div>
                                            {% endif %}
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Seo Titre
                                            </label>
                                            <div>
                                                {% if form.children.fr.vars.value is not null %}
                                                    {{ form.children.fr.vars.value.seoTitle }}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label">
                                                Seo Description
                                            </label>
                                            <div>
                                                {% if form.children.fr.vars.value is not null %}
                                                    {{ form.children.fr.vars.value.seoDescription }}
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="box box-success">
                            <div class="box-header">
                                <div class="clearfix">
                                    <h4 class="box-title">
                                        {{ 'group.seo'|trans }}
                                    </h4>
                                </div>
                                <div class="base-admin-padding-helper help-block sonata-ba-field-widget-help">
                                    {{ 'group.helper_seo'|trans|nl2br }}
                                </div>
                            </div>
                            <div class="box-body">
                                {{ form_row(translationsFields.seoTitle) }}
                                {{ form_row(translationsFields.seoDescription) }}
                                {{ form_row(form.parent.children.seoFile) }}
                            </div>
                        </div>
                    </div>
                    {% if form.vars.default_locale == locale %}
                        <div class="col-md-4">
                            <p>
                                {{ 'group.helper_seo_example'|trans|nl2br }}
                            </p>
                        </div>
                    {% else %}
                        <div class="col-md-4">
                            <div class="box box-success">
                                <div class="box-header">
                                    <h4 class="box-title">
                                        {{ 'group.french_version'|trans|nl2br }}
                                    </h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <div class="form-group">
                                            <label>
                                                {{ 'form.label_seo_title'|trans }}
                                            </label>
                                            <div>
                                                {{ form.parent.children.translations.children.fr.children.seoTitle.vars.value }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>
                                                {{ 'form.label_seo_description'|trans }}
                                            </label>
                                            <div>
                                                {{ form.parent.children.translations.children.fr.children.seoDescription.vars.value }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
                {% if form.vars.default_locale != locale %}
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(translationsFields.status) }}
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>