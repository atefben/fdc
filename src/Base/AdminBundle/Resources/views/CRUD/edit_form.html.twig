            $(document).ready(function(){
                {% if app.request.get('id') == 1 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_competition'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 2 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_certain_regard'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 3 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_hors_competition'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 4 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_seances_speciales'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 5 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_cinefondation'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 6 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_courts_metrages'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 7 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_cannes_classics'|trans({}, 'BaseAdminBundle') }}';
                {% elseif app.request.get('id') == 8 %}
                    var repaceTitleWith = '{{ 'dashboard.link.fdc_page_web_tv_trailers_cinema_plage'|trans({}, 'BaseAdminBundle') }}';
                {% endif %}
                jQuery('.sonata-ba-form h4.box-title').first().html(repaceTitleWith);
            });
        </script>
    {% endif %}
    {% endjavascripts %}
{% endblock %}

