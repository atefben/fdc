{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    <div>
        {% if object.publishedAt and object.publishEndedAt %}
            Du {{ object.publishedAt|localizeddate('long', 'none', locale_fallback) }} au {{ object.publishedAt|localizeddate('long', 'none', locale_fallback) }}
        {% elseif object.publishedAt and object.publishEndedAt is null %}
            {{ object.publishedAt|localizeddate('long', 'none', locale_fallback) }}
        {% endif %}
    </div>
{% endblock %}