{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
        {% for locale in locales %}
            {% set trans = object.findTranslationByLocale(locale) %}
            <a class="fdc-has-lock" href="{{ admin.generateObjectUrl('edit', object) }}?locale={{ locale }}">
                <div class="fdc-list-translation-type-square{% if trans is not null %} {{ trans.status|translate_status_to_admin_class }} {% endif %}">
                    {{ locale }}
                </div>
            </a>
        {% endfor %}
    {% endif %}
{% endblock %}