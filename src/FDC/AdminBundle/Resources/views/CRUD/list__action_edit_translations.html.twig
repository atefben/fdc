{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') %}
    {% for locale in locales %}
        <a href="{{ admin.generateObjectUrl('edit', object) }}?locale={{ locale }}" class="btn btn-sm btn-default edit_link" title="{{ 'action_edit'|trans({}, 'SonataAdminBundle') }}">
            {{ locale }}
        </a>
    {% endfor %}
    
{% endif %}