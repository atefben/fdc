{{ form_errors(form) }}
<div class="a2lix_translations tabbable">
    <ul class="a2lix_translationsLocales nav nav-tabs">
    {% for translationsFields in form %}
        {% set locale = translationsFields.vars.name %}

        <li {% if form.vars.default_locale == locale %}class="active"{% endif %}>
            <a href="#" data-toggle="tab" data-target=".a2lix_translationsFields-{{ locale }}">
                {{ locale|capitalize }}
                {% if form.vars.default_locale == locale %}[MASTER]{% endif %}
                {% if translationsFields.vars.required %}*{% endif %}
            </a>
        </li>
    {% endfor %}
    </ul>

    <div class="a2lix_translationsFields tab-content">
    {% for translationsFields in form %}
        {% set locale = translationsFields.vars.name %}

        <div class="a2lix_translationsFields-{{ locale }} tab-pane {% if form.vars.default_locale == locale %}active{% endif %}">
            <div class="row">
                <div class="col-md-8">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Informations de base
                            </h4>
                        </div>
                        {% if form.vars.default_locale == locale %}
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.title) }}
                                {{ form_row(form.parent.children.theme) }}
                                {{ form_row(form.parent.children.tags) }}
                                {{ form_row(form.parent.children.header) }}
                                {{ form_row(translationsFields.introduction) }}
                            </div>
                        </div>
                        {% else %}
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.title) }}
                                <div class="form-group">
                                    <label class="control-label">
                                        Theme
                                    </label>
                                    <div>
                                        {{ form.parent.children.theme.vars.value }}
                                    </div>
                                </div>
                                {{ form_row(translationsFields.introduction) }}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Paramètres de publication
                            </h4>
                        </div>
                        <div class="box-body">
                            <div class="sonata-ba-collapsed-fields">
                                {{ form_row(translationsFields.sites) }}
                                {{ form_row(translationsFields.publishedAt) }}
                                {{ form_row(translationsFields.publishEndedAt) }}
                                {{ form_row(form.parent.children.status) }}
                            </div>
                            <div>
                                <button class="btn btn-success" type="submit" name="btn_create_and_edit"><i class="fa fa-save"></i> Créer</button>
                                <button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Créer et retourner à la liste</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Modules éditoriaux
                            </h4>
                        </div>
                        <div class="box-body">
                            {{ form_widget(translationsFields.widgets) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-success">
                        <div class="box-header">
                            <h4 class="box-title">
                                Articles associés
                            </h4>
                        </div>
                        <div class="box-body">
                            {{ form_widget(form.parent.children.associations) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>