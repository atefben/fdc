                                                {% set translations = associatedArticle.image.findTranslationByLocale(app.request.locale) %}
                                                <img src="{% path associatedArticle.image|trans_fallback('file'), 'reference' %}" alt="{{ translations.alt }}"/>
                                            {% endif %}
                                        </div>
                                        <a href="{{ path('ccm_news_detail',{'slug':articleTranslation.slug}) }}"></a>
                                        <span class="picto"><i class="icon icon_{{ associatedArticle.getType != 'image' ? associatedArticle.getType : 'photo' }}"></i></span>
                                        <a href="#" class="read-later"><i class="icon icon_lire-plus-tard"></i><span>{#Ajouter à ma sélection#}{{ 'ccm.news.add_to_selection'|trans }}</span></a>
                                    </div>
                                    <div class="info">
                                        <a href="{{ path('ccm_news_detail',{'slug':articleTranslation.slug}) }}" class="category">{{ associatedArticle.theme.findTranslationByLocale(app.request.locale).name }}</a>
                                        <a href="{{ path('ccm_news_detail',{'slug':articleTranslation.slug}) }}">
                                            <span class="date">{{ associatedArticle.publishedAt|date('d.m.y') }}</span> .
                                            <span class="hour">{{ associatedArticle.publishedAt|date('H:i') }}</span>
                                        </a>
                                        <h3><a href="{{ path('ccm_news_detail',{'slug':articleTranslation.slug}) }}">{{ articleTranslation.title }}</a></h3>
                                    </div>
                                </article>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
                <div class="same-day">
                    <h2 class="title">Le même jour</h2>
                    <div class="articles center">
