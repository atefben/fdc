{% set translation = widget.file.findTranslationByLocale(app.request.locale) %}
<div class="audio-container"
     data-file='[{"file":"{{ s3_server_audio ~ translation.mp3Url }}"}]'
     data-img="{% path widget.file.image|trans_fallback('file'), '1950x1232' %}"
     data-aid="{{ translation.id }}">
    <div class="audio-player">
        <div id="audio-player-{{ translation.id }}" class="audio-player-container"></div>
        <div class="image" style="background-image: url({% path widget.file.image|trans_fallback('file'), '1950x1232' %});"></div>
        <button class="play-btn play"><i class="icon icon_play"></i></button>
        <div class="off">
            <div class="vCenter">
                <div class="vCenterKid">
                    <div class="picto"><i class="icon icon_audio"></i></div>
                    <div class="info">
                        <span class="category">{{ widget.file.theme|trans_fallback('name') }}</span><span class="date">{{ widget.file.updatedAt|date("d.m.Y") }}</span> . <span class="hour">{{ widget.file.updatedAt|date("H:i") }}</span>
                        <p>{{ translation.title }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="on"></div>
    </div>
</div>
