{% set translation = widget.findTranslationByLocale(app.request.locale) %}
<div class="video-container state-init video youtube-news-widget"
     data-name="{{ translation.title }}"
     data-file='[{"file":"{{ translation.url }}"}]'
     data-img="{% path widget.image|trans_fallback('file'), 'reference' %}">
    <div id="{{ widget.id }}" class="video-player"></div>
    <div class="video-overlay"></div>
    <div class="infos-bar">
        <div class="picto"><i class="icon icon_video"></i></div>
        <div class="info">
            <div class="vCenter">
                <div class="vCenterKid">
                    <p>{{ translation.title }}</p>
                </div>
            </div>
        </div>
    </div>
</div>

