<div class="small-pres container half-photos">
    {% for image in widget.gallery.medias %}
        <div class="half-photo">
            <div class="photo-container">
                <img src="{% path image.media|trans_fallback('file'), 'reference' %}" alt="{{ image.media|trans_fallback('alt') }}" title="{{ image.media|trans_fallback('alt') }}">
                <p class="caption">{{ image.media|trans_fallback('legend') ~ ' Â© ' ~ image.media|trans_fallback('copyright') }}</p>
            </div>
        </div>
    {% endfor %}
</div>