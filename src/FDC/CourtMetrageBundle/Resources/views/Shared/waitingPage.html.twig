{% extends 'FDCCourtMetrageBundle::base.html.twig' %}

{% block main %}
    <div id="main" class="list-article landing-page loading">
        <div class="bandeau-list">
            <div class="bandeau-list-img bandeau-head vCenter" style="background-image:url({% path waitingPage.translatable.image|trans_fallback('file'), 'reference' %}" alt="">
                <div class="vCenterKid">
                    <h2 class="title title-list-header">{{ 'ccm.competition.page_title'|trans }}</h2>
                </div>
            </div>
            <ul class="sub-nav-list nav-list">
                <li>
                    <a href="{{ path('fdc_court_metrage_competition_selection') }}" class='{{ isSelection ? 'active ' : ' ' }}'>{{ selectionTab.name }}</a>
                </li>
                <li>
                    <a href="{{ path('fdc_court_metrage_competition_jury') }}" class="{{ isJury ? 'active ' : ' ' }}">{{ juryTab.name }}</a>
                </li>
                <li>
                    <a href="{{ path('fdc_court_metrage_competition_palmares') }}" class="{{ isPalmares ? 'active ' : ' ' }}">{{ palmaresTab.name }}</a>
                </li>
            </ul>
        </div>
        <div class="container">
            {{ waitingPage.content|raw }}
        </div>
        {% include 'FDCCourtMetrageBundle:Competition/partials:retrospective.html.twig' %}
    </div>
{% endblock %}
