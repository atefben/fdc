{% trans_default_domain "FDCCourtMetrageBundle" %}
<p style="margin-bottom:10.0pt">
    <span style="font-size:8.0pt;font-family:'Arial','sans-serif';color:#c8a461">
        {% if artist is defined and artist is not null %}{{ artist|profession_gender('profession') }} - {{ artist.nationality|trans_fallback('name') }} {% if artist.nationality2 %}, {{ artist.nationality2|trans_fallback('name') }}{% endif %}{% else %}{{ section|upper }} - {{ detail }}{% endif %}
    </span>
</p>
<h2><span style="font-size:22.0pt;color:#262626;font-weight:normal" >{{ title }}</span></h2>
<div style="font-size:11.0pt;font-family:'Arial','sans-serif';color:#404040">{{ description|raw }}</div>
<p style="margin-bottom:12.0pt">
    <span style="font-size:11.0pt;font-family:'Arial','sans-serif';color:#404040">{{ 'Retrouvez cet article sur le site du Cannes Court Métrage'|trans ~ ' :' }}  </span>
    <span style="font-size:11.0pt;font-family:'Arial','sans-serif';color:#c8a461">{{ url }}</span>
</p>

<hr size="1" width="100%" noshade="" style="color:#bfbfbf; margin: 15px;" align="center">

<p style="margin-bottom:12.0pt">
    <span style="font-size:10.0pt;font-family:'Arial','sans-serif';color:#c8a461">{{ 'MESSAGE DE L’EXPÉDITEUR'|trans }}</span>
</p>

<p style="font-size:11.0pt;font-family:'Arial','sans-serif';color:#404040">{{ message }}</p>



