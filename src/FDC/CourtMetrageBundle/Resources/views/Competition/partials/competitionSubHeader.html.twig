{% if isSelection %}
    {% set translations = selectionTab.translatable.image.findTranslationByLocale(app.request.locale) %}
    {% set backgroundImage = selectionTab.translatable.image %}
{% endif %}
{% if isJury %}
    {% set translations = juryTab.translatable.image.findTranslationByLocale(app.request.locale) %}
    {% set backgroundImage = juryTab.translatable.image %}
{% endif %}
<div class="bandeau-list">
    <div class="bandeau-list-img bandeau-head vCenter" style="background-image:url({% path backgroundImage|trans_fallback('file'), 'reference' %}" alt="{{ translations.alt }})">
        <div class="vCenterKid">
            <h2 class="title title-list-header">Les courts en compétition</h2>
        </div>
    </div>
    <ul class="sub-nav-list nav-list">
        <li>
            <a href="{{ path('fdc_court_metrage_competition_selection') }}" class='{{ isSelection ? 'active ' : ' ' }}'>{{ selectionTab.name }}</a>
        </li>
        <li>
            <a href="{{ path('fdc_court_metrage_competition_jury') }}" class="{{ isJury ? 'active ' : ' ' }}">Jury</a>
        </li>
        <li>
            <a href="#" class="ajax">Palmarès</a>
        </li>
    </ul>
</div>
