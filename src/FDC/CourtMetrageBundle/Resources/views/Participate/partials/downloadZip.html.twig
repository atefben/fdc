<div class="download">
    {% for tab in tabs[widget.translatable.id][column] %}
        <div class="item">
            <strong class="title-dowload">{{ tab.buttonsSectionTitle }}</strong>
            <div class="buttons buttons-02 a-left s-margin-top">
                {% for fileWidget in files[tab.translatable.id] %}
                    <a href="{% path fileWidget.file, 'reference' %}" class="button"><i class="icon icon-download"></i> {{ fileWidget.fileTitle }}</a>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div> <!-- fin download -->