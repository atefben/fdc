{% if module.translations[app.request.getLocale()] is defined and module.translations[app.request.getLocale()] is not null %}
    {% set translation = module.translations[app.request.getLocale()] %}
    {% if translation.picto1 or translation.title1 or translation.description1 %}
        <div class="item visible">
            {% if translation.picto1 is not null %}
                <i class="icon {{ translation.picto1 }}"></i>
            {% endif %}
            <strong class="transport">{{ translation.title1 }}</strong>
            <span class="time">{{ translation.description1|raw }}</span>
        </div>
    {% endif %}
