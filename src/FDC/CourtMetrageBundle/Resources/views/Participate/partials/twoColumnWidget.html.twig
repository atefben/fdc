<div class="contain-infos">
    <div class="two-images">
        <div class="item-img small">

            <div class="contain-img vFlexAlign">
                <img src="{% path widget.translatable.image|trans_fallback('file'), 'reference' %}" alt="image">
            </div>

            <div class="download no-flex wysiwyg">
                <span class="title-img">{{ widget.title }}</span>
                <p class="caption"><span class="italic">{{ widget.legend|raw }}</p>
            </div>

            {% if twoColumnsTabs[widget.translatable.id][1] is defined %}
                {% include 'FDCCourtMetrageBundle:Participate:partials/downloadZip.html.twig' with {
                    'widget': widget,
                    'tabs': twoColumnsTabs,
                    'files': twoColumnsFiles,
                    'column': 1
                } %}
            {% endif %}
            {% if constraints and constraints[0] %}
                <a href="#" class="link a-left modal-toggle-label" data-content="{{ constraints[0]|json_encode }}">{{ 'ccm.widget.technical_constraints'|trans }}</a>
            {% endif %}
        </div>

        <div class="item-img big">

            <div class="contain-img vFlexAlign">
                <img src="{% path widget.translatable.image2|trans_fallback('file'), 'reference' %}" alt="image">
            </div>

            <div class="download no-flex wysiwyg">
                <span class="title-img">{{ widget.title2 }}</span>
                <p class="caption"><span class="italic">{{ widget.legend2|raw }}</span></p>
            </div>

            {% if twoColumnsTabs[widget.translatable.id][2] is defined %}
                {% include 'FDCCourtMetrageBundle:Participate:partials/downloadZip.html.twig' with {
                    'widget': widget,
                    'tabs': twoColumnsTabs,
                    'files': twoColumnsFiles,
                    'column': 2
                } %}
            {% endif %}
            {% if constraints and constraints[1] %}
                <a href="#" class="link a-left modal-toggle-label" data-content="{{ constraints[1]|json_encode }}">{{ 'ccm.widget.technical_constraints'|trans }}</a>
            {% endif %}
        </div> <!--fin item-img-->
    </div> <!-- fin two-image-->
</div> <!-- fin contain-infos -->
