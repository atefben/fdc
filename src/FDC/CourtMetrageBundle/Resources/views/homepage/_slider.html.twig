<div id="slider-movies" class="owl-carousel">
    {% for slide in sliders %}
        <div>
            <a href="{{ slide.url }}" {% if fdc_court_metrage_domain not in slide.url %}target="_blank"{% endif %}>
                <div class="video">
                    <div class="img" style="background-image:url({% path slide.translatable.image|trans_fallback('file'), 'reference' %})"></div>
                </div>
                <div class="textVideo">
                    <div class="info">
                        <div class="vCenter">
                            <div class="container">
                                <div class="vCenterKid">
                                    <h2>{{ slide.whiteTitle }}</br><span class="goldColor">{{ slide.goldenTitle }}</span></h2>
                                    <div class="alignButton">
                                        <div class="programmButton">{{ slide.buttonLabel }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
