{% for movie in movies %}
    <div class="item">
        <figure>
            <div class="image">
                {% include 'FDCCourtMetrageBundle:Shared:filmPoster.html.twig' with ({
                film: movie,
                film_format: '366x488',
                film_attrs: {
                alt: movie|trans_fallback('title')?:movie.titleVO,
                'data-object-fit': 'cover'
                },
                film_image_default: 'bundles/fdccourtmetrage/img/palmares/film_w181.jpg'
                }) %}
            </div>
            <figcaption>
                <div class="title">
                    <a href="{{ path('fdc_ccm_movie_show', {'slug': movie.slug}) }}">
                        {% if movie|trans_fallback_movie('title') != null and movie.titleVo != null and movie|trans_fallback_movie('title')|lower != movie.titleVo|lower %}
                            <h5 class="name">{{ movie.titleVo }}</h5>
                            <h5 class="sub-name">({{ movie|trans_fallback_movie('title') }})</h5>
                        {% else %}
                            <h5 class="name">{{ movie|trans_fallback('title')?:movie.titleVo }}</h5>
                        {% endif %}
                    </a>
                    {% for director in movie.getDirectors() %}
                        <a href="{{ path('fdc_court_metrage_artist', {'slug': director.person.slug}) }}">
                            <h4 class="author">{{ director.person.fullName|trim }}{{ loop.last == true ? '':', '}}</h4>
                        </a>
                    {% endfor %}
                </div>
            </figcaption>
        </figure>
    </div>
{% endfor %}
