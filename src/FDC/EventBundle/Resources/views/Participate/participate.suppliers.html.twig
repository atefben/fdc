{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
    {#<div id="main" class="list-article participate loading">#}
    <div id="main" class="list-article participate contractor">
        <div class="bandeau-list vCenter">
            <div class="bandeau-list-img vCenterKid" style="background-image:url({{ asset('bundles/fdcevent/img/participate/bandeau4.png') }})">
                <h2 class="title title-list-header">
                    {% image '@FDCEventBundle/Resources/public/img/participate/fournisseurs.png' %}
                    <img src="{{ asset_url }}" class="logo" alt="{{ 'participer.prepare.title.fournisseurs'|trans }}" />
                    {% endimage %}
                    <br> {{ 'participer.prepare.title.fournisseurs'|trans }}
                </h2>
            </div>
        </div>
        <section class="content-contractor">
            <div class="contain-section participate-active">
                <h3 class="title-section">Fournisseurs officiels</h3>
                {% for supplier in suppliers %}
                    <div class="item-contractor">
                        <div class="contain-img">
                            <img src="{{ supplier.img }}" alt="{{ supplier.alt }}">
                        </div>
                        <div class="text-contractor">
                            <h4 class="title-contractor">{{ supplier.title }}</h4>
                            <p class="descrip-contractor">
                            {{ supplier.description }}
                            </p>
                            {% if supplier.website %}
                                <a href="{{ supplier.website }}" class="link" >{{ 'participer.supplier.btn.siteinternet'|trans }}</a>
                            {% endif %}
                            {% if supplier.contact %}
                                <a href="{{ supplier.contact }}">{{ 'participer.supplier.btn.contact'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}