{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle:Search:base.html.twig' %}
{% block content %}
    {% for artist in items %}
        <div class="person big">
            <a href="{{ path('fdc_event_artist_get', {'slug': artist.slug }) }}">
                <div class="image">
                    {% if artist.portraitImage and artist.portraitImage|trans_fallback('file') %}
                        <img src="{% path artist.portraitImage|trans_fallback('file'), 'search' %}"
                             alt="{{ artist.firstname }} {{ artist.lastname }}">
                    {% else %}
                        {% set media = artist|film_media(constant('Base\\CoreBundle\\Entity\\FilmFilmMedia::TYPE_JURY'))|first %}
                        {% if media is empty %}
                            {% set media = artist|film_media(constant('Base\\CoreBundle\\Entity\\FilmFilmMedia::TYPE_PERSON'))|first %}
                        {% endif %}
                        {% if media is empty %}
                            {% set photo = artist|film_media(constant('Base\\CoreBundle\\Entity\\FilmFilmMedia::TYPE_DIRECTOR'))|first %}
                        {% endif %}

                        {% if media is not empty %}
                            <img src="{% path media, 'search' %}"
                                 alt="{{ artist.firstname }} {{ artist.lastname }}">
                        {% else %}
                            <img width="170" height="231" src="{{ asset('bundles/fdcevent/img/jurys/member.jpg') }}"
                                 alt="{{ artist.firstname }} {{ artist.lastname }}">
                        {% endif %}
                    {% endif %}
                </div>
            </a>

            <div class="info">
                <div class="vCenter">
                    <div class="vCenterKid">
                        <h2>
                            {% include 'FDCEventBundle:Movie:widgets/check_asian_name.html.twig' with {'person': artist} %}
                        </h2>

                        {% set profession = artist|trans_fallback('profession') %}
                        {% if profession %}
                            <span class="category">
                                {{ profession }}
                            </span>
                        {% endif %}
                        <span class="country">{{ artist.nationality }}</span>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}