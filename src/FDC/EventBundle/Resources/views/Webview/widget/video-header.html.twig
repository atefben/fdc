{% set video = widget.video %}
{% if video.image.file is defined and video.image.file is not null %}
	{% set image = video.image|trans_fallback('file') %}
{% endif %}

{% set trans = video.findTranslationByLocale(app.request.locale) %}
{% if trans is null or trans.file is null or trans.jobMp4State != 3 or trans.mp4Url is null or trans.webmUrl is null %}
    {% set trans = video.findTranslationByLocale('fr') %}
{% endif %}
{{ video|trans_fallback('imageAmazonUrl') }}
{% if trans.imageAmazonUrl is defined and trans.imageAmazonUrl is not null %}
	{{ s3_server_video ~ trans.imageAmazonUrl }}
{% elseif image is defined and image is not null %}
	{% path image, 'reference' %}
{% endif %}
<div id="videoplayer-{{ random() }}" class="Article-videoPlayer" 
data-poster="" 
data-file="{{ s3_server_video ~ video|trans_fallback('mp4Url') }}" 
data-title=""
data-desc=""
id="videoPlayer1">
</div>