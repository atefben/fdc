{% if widget.gallery is defined %}
	{% set imgObject = widget.gallery.medias[0].media %}
{% else %}
	{% set imgObject = widget.header %}
{% endif %}
{% set img = imgObject|trans_fallback('file') %}
<div class="Article-content">
	<img src="{% path img, 'reference' %}"/>
	{% if imgObject|trans_fallback('copyright') %}
    <div class="Article-picture-caption"><strong>{{ imgObject|trans_fallback('legend')}}</strong> ©{{ imgObject|trans_fallback('copyright')|replace({'©': ''}) }}</div>
    {% endif %}
</div>