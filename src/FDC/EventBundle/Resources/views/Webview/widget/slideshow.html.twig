<div class="Article-slider-wrapper">
          <a class="Article-slider-prev" href="#"></a>
          <a class="Article-slider-next" href="#"></a>
          <div class="Article-slider">
            {% for key, gallery in widget.gallery.medias %}
            <div class="Article-slider-item">
              <img src="{% path gallery.media|trans_fallback('file'), 'reference' %}"/>
              <span class="Article-slider-caption"><strong>{{ gallery.media|trans_fallback('legend')}}</strong> © FDC / Théophile Delange</span> 
            </div>
            {% endfor %}
          </div>
          <div class="Article-slider-count"><strong>1</strong>/5</div>
        </div>