
    {% if widget.gallery is not empty %}
    <div class="Article-picture-dual">
      {% if widget.gallery.medias[0] is not null %}
        {% set galleryItemFirst = widget.gallery.medias[0] %}{{ dump(galleryItemFirst) }}
      <div class="Article-picture-dual-col">
        <img src="{% path galleryItemFirst|trans_fallback('file'), 'reference' %}"/>
        <div class="Article-picture-caption">
            {% if galleryItemFirst.media|trans_fallback('legend') %}
            <strong>{{ galleryItemFirst.media|trans_fallback('legend') }}</strong> 
            {% endif %}
            {% if galleryItemFirst.media.copyright is not null %}
            ©{{ galleryItemFirst.media|trans_fallback('copyright')|replace({'©': ''}) }}
            {% endif %}
            </div>
      </div><!--{% endif %}{% if widget.gallery.medias[1] is not null %}--><div class="Article-picture-dual-col">
        {% set galleryItemLast = widget.gallery.medias[0] %}
        <img src="{% path galleryItemLast|trans_fallback('file'), 'reference' %}"/>
        <div class="Article-picture-caption">
            {% if galleryItemLast.media|trans_fallback('legend') %}
            <strong>{{ galleryItemLast.media|trans_fallback('legend') }}</strong>
            {% endif %}
            {% if galleryItemLast.media|trans_fallback('copyright') %}
             ©{{ galleryItemLast.media|trans_fallback('copyright')|replace({'©': ''}) }}
            {% endif %}
        </div>
      </div>
      {% endif %}
    </div>
    {% endif %}