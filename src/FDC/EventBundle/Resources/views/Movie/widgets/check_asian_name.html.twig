{% if person.asianName %}
    <a href="{{ path('fdc_event_artist_get', {slug: person.slug }) }}"><span class="nom-item">{{ person.lastName ~ ' ' ~ person.firstName }}</span></a>
{% else %}
    <a href="{{ path('fdc_event_artist_get', {slug: person.slug }) }}"><span class="nom-item">{{ person.fullName }}</span></a>
{% endif %}