                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                    {% for section in content.sections %}
                    <section class="categorie-items">
                        {% if section.title is defined  %}
                            <div class="title-list-cat title-film-detail">
                                <h2 class="title">{{ section.title }}</h2>
                            {% if section.description is defined %}
                                <p class="title-item">
                                    {{ section.description }}
                                </p>
                            {% endif %}
                            </div>
                        {% endif %}

                        {% for film in section.film %}
                            <article style="background-image:url({{ film.image.path }})">
                                <div class="bck-hover">
