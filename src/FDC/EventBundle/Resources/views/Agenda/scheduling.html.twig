                                        {% if schedulingEvents.place.salleBunuel is defined %}
                                            {% for event in schedulingEvents.place.salleBunuel.events %}
                                                {% include 'FDCEventBundle:Agenda:widgets/event.html.twig' %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="contact-press">
        </div>
    </div>
{% endblock body %}