{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
    <div id="main" class="press press-programmation loading calendar-open events-site">
        <div class="header-press">
            <div class="container">
                <h2>{{ 'programmation.title.programmation'|trans }}</h2>
                <div class="buttons">
                    <a href="#" class="button subnav"><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerhoraireprojectionpresse'|trans }}</a>
                    <a href="#" class="button list"><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatpdf'|trans }}</a>
                    <a href="#" class="button list"><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatics'|trans }}</a>
                </div>
            </div>
        </div>
        <div class="wrapper">
            <div id='calendar'>
                <div id="calendar-wrapper">
                    <h2 class="title-calendar">{{ 'programmation.title.monagenda'|trans }}</h2>
                    <div id="mycalendar" class="side"></div>
                    <p class="link">
                        <a href="{{ path('fdc_event_agenda_get') }}">
                            <i class="icon icon_fleche-right"></i>
                            {{ 'programmation.btn.toutmonagenda'|trans }}
                        </a>
                    </p>
                    <div class="drag">
                        <h2>{{ 'programmation.title.preparezvotresejour'|trans }}</h2>
                        {% image '@FDCEventBundle/Resources/public/img/svg/main-drag.svg' %}
                        <img src="{{ asset_url }}" width="43">
                        {% endimage %}
                        <p>
                            {{ 'programmation.text.cliquezdeposezlesevenementsdansvotragenda'|trans|raw }}
                        </p>
                        <a href="#" id="okDrag">OK</a>
                    </div>
                </div>
            </div>
            <div class="programmation">
                <div id="calendar-programmation">

                    {% include 'FDCEventBundle:Agenda:components/filters.html.twig' %}

                    <div id="timeline">
                        <span class="arrow left"><i class="icon icon_flecheGauche"></i></span>
                        <div class="timeline-container">
                            {% for day in schedulingDays %}
                                <a href="#" class="" data-date="{{ day.date|date('Y-m-d') }}">{{ day.date|localizeddate('full', 'none', app.request.locale)|truncate(3, false, "") }}<span class="day">{{ day.date|date('d') }}</span></a>
                            {% endfor %}
                        </div>
                        <span class="arrow right"><i class="icon icon_fleche-right"></i></span>
                    </div>
                    <div class="calendar">
                        <div class="timeCol">
                            <div class="empty"></div>
                            <div class="time">08H</div>
                            <div class="time">09H</div>
                            <div class="time">10H</div>
