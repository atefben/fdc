{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
    <div id="main" class="press press-programmation loading calendar-open events-site {{ is_granted("ROLE_FDC_PRESS_REPORTER") ? 'conected' : 'lock' }} ">
        <div class="header-press">
            <div class="container">
                <h2>{{ 'programmation.title.programmation'|trans }}</h2>
                <div class="buttons">
                    <a href="#" class="button subnav"><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerhoraireprojectionpresse'|trans }}</a>
                    <a href="#" class="button list"><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatpdf'|trans }}</a>
                    <a href="#" class="button list"><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatics'|trans }}</a>
                </div>
            </div>
        </div>
        {% include 'FDCPressBundle:Global:components/login.html.twig' %}
        <div class="wrapper">
            <div id='calendar'>
                <div id="calendar-wrapper">
                    <h2 class="title-calendar">{{ 'programmation.title.monagenda'|trans }}</h2>
                    <div id="mycalendar" class="side"></div>
                    <p class="link">
                        <a href="{{ path('fdc_event_agenda_get') }}">
                            <i class="icon icon_fleche-right"></i>
                            {{ 'programmation.btn.toutmonagenda'|trans }}
                        </a>
                    </p>
                    <div class="drag">
                        <h2>{{ 'programmation.title.preparezvotresejour'|trans }}</h2>
                        {% image '@FDCEventBundle/Resources/public/img/svg/main-drag.svg' %}
                        <img src="{{ asset(asset_url) }}" width="43">
                        {% endimage %}
                        <p>
                            {{ 'programmation.text.cliquezdeposezlesevenementsdansvotragenda'|trans|raw }}
                        </p>
                        <a href="#" id="okDrag">OK</a>
                    </div>
                </div>
            </div>
            <div class="programmation">
                <div id="calendar-programmation">

                    {% include 'FDCEventBundle:Agenda:components/filters.html.twig' %}

                    <div id="timeline">
                        <span class="arrow left"><i class="icon icon_flecheGauche"></i></span>
                        <div class="timeline-container">
                            {% for day in schedulingDays %}
                                <a href="#" class="ajaxi {% if day == date %}active{% endif %}" data-date="{{ day|date('Y-m-d') }}">
                                    {{ day|localizeddate('full', 'none', app.request.locale)|truncate(3, false, "") }}
                                    <span class="day">{{ day|date('d') }}</span>
                                </a>
                            {% endfor %}
                        </div>
                        <span class="arrow right"><i class="icon icon_fleche-right"></i></span>
                    </div>

                    <div class="calendar">
                        <div class="timeCol">
                            <div class="empty"></div>
                            <div class="time">08H</div>
                            <div class="time">09H</div>
                            <div class="time">10H</div>
                            <div class="time">11H</div>
                            <div class="time">12H</div>
                            <div class="time">13H</div>
                            <div class="time">14H</div>
                            <div class="time">15H</div>
                            <div class="time">16H</div>
                            <div class="time">17H</div>
                            <div class="time">18H</div>
                            <div class="time">19H</div>
                            <div class="time">20H</div>
                            <div class="time">21H</div>
                            <div class="time">22H</div>
                            <div class="time">23H</div>
                            <div class="time">00H</div>
                            <div class="time">01H</div>
                            <div class="time">02H</div>
                            <div class="time">03H</div>
                        </div>
                        <div class="venues">
                            <a href="#" class="nav prev"><i class="icon icon_flecheGauche"></i></a>
                            <a href="#" class="nav next"><i class="icon icon_fleche-right"></i></a>
							<div class="v-wrapper">
                                {% for room in rooms %}
                                    <div class="venue">
                                        <div class="v-head">{{ room.name }}</div>
                                        <div class="v-container">
                                            {% for event in projections[room.id] %}
                                                {% include 'FDCEventBundle:Agenda:widgets/event.html.twig' %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endfor %}
							</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="contact-press">
        </div>
    </div>
{% endblock body %}