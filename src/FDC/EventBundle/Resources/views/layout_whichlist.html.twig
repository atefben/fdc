{% trans_default_domain 'FDCEventBundle' %}
{% set festival_date = festival_date() %}

<!DOCTYPE html>
<html {{ sonata_seo_html_attributes() }} lang="{{ app.request.locale }}">
    <head {{ sonata_seo_head_attributes() }}>
        {{ sonata_seo_title() }}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ 'header.whishlist.label'|trans }} - Festival de Cannes 2016</title>
        <meta name='description' content="All the news of the Festival de Cannes, the live events, in articles, photos, audio and videos." />
        <meta property="title" content="Festival de Cannes 2016 - {{ 'header.whishlist.label'|trans }}">
        <meta name='keywords' content="Festival de Cannes 2016 - {{ 'header.whishlist.label'|trans }}" />
        <meta property='twitter:card' content='summary' />
        <meta property='twitter:url' content='http://www.festival-cannes.com' />
        <meta property='twitter:title' content='Festival de Cannes 2016: {{ 'header.whishlist.label'|trans }}' />
        <meta property='twitter:site:id' content='Festival_Cannes' />
        <meta property='twitter:creator:id' content='@Festival_Cannes' />
        <meta property='twitter:description' content='Festival de Cannes 2016: from 11th to 22th May 2016.  All the latest from the Festival de Cannes on the official website' />
        <meta property='twitter:image:src' content='http://affif-sitepublic-vendor-prod.s3-website-eu-west-1.amazonaws.com/bundles/fdcevent/img/wishlist-share.jpg' />
        <meta property='og:title' content='Festival de Cannes 2016 : {{ 'header.whishlist.label'|trans }}' />
        <meta property='og:type' content='website' />
        <meta property='og:image' content='http://affif-sitepublic-vendor-prod.s3-website-eu-west-1.amazonaws.com/bundles/fdcevent/img/wishlist-share.jpg' />
        <meta property='og:site_name' content='Festival de Cannes' />
        <meta property='og:description' content='Festival de Cannes 2016: from 11th to 22th May 2016. All the latest from the Festival de Cannes on the official website' />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% include 'FDCEventBundle:Base:stylesheet.html.twig' %}
        {% include 'FDCEventBundle:Base:javascript_head.html.twig' %}
    </head>
    <body>
    {% trans_default_domain 'FDCEventBundle' %}
    <header>
        <div id="logo-wrapper">
            <div class="container">
                <div id="logo" class="wichlist">
                    <a href="/{{app.request.locale}}/">
                        {% image '@FDCEventBundle/Resources/public/img/svg/palme.svg'  %}
                        <img src="{{ asset(asset_url) }}" class="palm" alt="{{ 'header.img.palme'|trans }}" />
                        {% endimage %}
                    </a>
                    <h1>
                        <a href="/{{app.request.locale}}/">
                            {% image '@FDCEventBundle/Resources/public/img/svg/logo.svg' %}
                            <img width="200" src="{{ asset(asset_url) }}" alt="{{ 'header.logo.img.cannes'|trans }}" />
                            {% endimage %}
                        </a>
                    </h1>
                    <h2>
                        {{ render(controller('FDCEventBundle:Header:date')) }}
                    </h2>
                    <p class="stick">
                        <a href="/{{app.request.locale}}/">
                            {% image '@FDCEventBundle/Resources/public/img/svg/logo.svg' %}
                            <img width="178" src="{{ asset(asset_url) }}" alt="{{ 'header.logo.img.cannes'|trans }}" />
                            {% endimage %}
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </header>

        {% block body %}
        {% endblock %}
    <div id="landscape" style="display:none;">
        <div class="content vCenter">
            <div class="vCenterKid">
                {% image '@FDCEventBundle/Resources/public/img/MobileTurn.svg' %}
                <img src="{{ asset_url }}" alt="">
                {% endimage %}
                <p>{{ 'Tournez votre smartphone pour acc√©der au site'|trans }}</p>
            </div>
        </div>
    </div>
        {% include 'FDCEventBundle:Global:cookies.html.twig' %}
        {% include 'FDCEventBundle:Base:javascript_footer.html.twig' %}
        {% include 'FDCEventBundle:Base:javascript.html.twig' %}
    </body>
</html>