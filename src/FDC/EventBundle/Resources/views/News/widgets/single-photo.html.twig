{% trans_default_domain 'FDCEventBundle' %}

<div class="single-photo">
    <div class="photo-container">
        {% set trans = photo.findTranslationByLocale(app.request.locale) %}
        {% if trans is null or trans.file is null %}
            {% set trans = photo.findTranslationByLocale('fr') %}
        {% endif %}
        {% set file = trans.file %}
        {% set copyright = photo|trans_fallback('copyright') %}
        {% thumbnail file, '1950x1232' with {'alt': photo|trans_fallback('alt'), 'title': photo|trans_fallback('legend') } %}
        <p class="caption">{{ photo|trans_fallback('legend') }}{% if copyright is not empty %} Â© {{ copyright }}{% endif %}</p>
    </div>
</div>