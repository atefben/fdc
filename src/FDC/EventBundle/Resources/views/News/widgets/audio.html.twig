{% trans_default_domain 'FDCEventBundle' %}
{% set file = widget.file %}
{% set trans = file.findTranslationByLocale(app.request.locale) %}
{% if trans is null or trans.file is null %}
    {% set trans = file.findTranslationByLocale('fr') %}
{% endif %}
{% set file = trans.file %}
<div class="audio-player audio" data-sound="{% path file, 'reference' %}">
    <div class="image" style="background-image: url({% path widget.file.image, '1950x1232' %});"></div>
    <a href="#" class="playpause"><i class="icon icon_video"></i></a>
    <div class="off">
        <div class="vCenter">
            <div class="vCenterKid">
                <div class="picto">
                    <i class="icon icon_audio"></i>
                </div>
                <div class="info">
                    <a href="#" class="category">{{ widget.file.theme|trans_fallback('name') }}</a>
                    <span class="date">{{ news.publishedAt|date('d.m.y') }}</span> . <span class="hour">{{ news.publishedAt|date('H:i') }}</span>
                    <p>{{ widget.file.image.copyright }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="on">
        <div class="vCenter">
            <div class="vCenterKid">
                <div class="duration">
                    <span class="curr">0:00</span>/<span class="total">0:00</span>
                </div>
                <div class="wave-container"></div>
                <div class="volume">
                    <span></span>
                    <i class="icon icon_son"></i>
                </div>
                <a href="#" class="fullscreen"><i class="icon icon_fullscreen"></i></a>
            </div>
        </div>
    </div>
</div>