{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
<div id="main" class="all-photos grid loading">
    <h2 class="title">{{ 'article.photos.title.touslesaudios'|trans }}</h2>

    {% include 'FDCEventBundle:News:components/filters.html.twig' %}

    <div id="gridPhotos" class="grid-wrapper" data-type="audios">
        <div class="grid-sizer"></div>

        {% for audio in audios %}
            {% set trans = audio.findTranslationByLocale('fr') %}
            {% if trans is null or trans.image is null %}
                {% set trans = audio.findTranslationByLocale('fr') %}
            {% endif %}
            <div class="item {{ audio.theme|trans_fallback('slug') }} {{ audio|trans_fallback('createdAt')|date('d-m-y') }} shadow-bottom video" data-sound="{% path trans.file , 'small'%}">
                <img src="{% path trans.image , 'big' %}" srcset="{% path trans.image , 'big' %} 1x, {% path trans.image , 'big' %} 2x" alt="">
                <div class="picto">
                    <i class="icon icon_audio"></i>
                </div>
                <div class="info">
                    <div class="vCenter">
                        <div class="vCenterKid">
                            <a href="#" class="category">{{ audio.theme|trans_fallback('name') }}</a><span class="date">{{ audio|trans_fallback('createdAt')|date('d.m.y') }}</span>
                            <p>{{ audio|trans_fallback('title') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

<!-- BREADCRUMB -->
{% include "FDCEventBundle:Global:breadcrumb.html.twig" with
{"breadcrumb":
[
    {
        "name" : 'header.mainnav.nav.jourapresjour'|trans ,
        "url"  : path('fdc_event_news_index')
    },
    {
        "name" : 'header.mainnav.nav.audios'|trans ,
        "url"  : path('fdc_event_news_getaudios')
    },
]
} %}
{% endblock %}

