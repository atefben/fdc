{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
<div id="main" class="all-photos grid loading">
    <h2 class="title">{{ 'article.photos.title.touslesaudios'|trans }}</h2>

    {% include 'FDCEventBundle:News:components/filters.html.twig' %}

    <div id="gridPhotos" class="grid-wrapper" data-type="audios">
        <div class="grid-sizer"></div>

        {% for audio in audios %}
            <div class="item {{ audio.filter.theme }} {{ audio.filter.date }} shadow-bottom video" data-sound="{{ audio.sound }}">

                <img src="{{ audio.image.src }}" srcset="{{ audio.image.src }} 1x, {{ audio.image.large }} 2x" alt="">
                <div class="picto"></div>
                <div class="info">
                    <div class="vCenter">
                        <div class="vCenterKid">
                            <a href="#" class="category">{{ audio.theme }}</a><span class="date">{{ audio.createdAt|date('d.m.y') }}</span>
                            <p>{{ audio.title }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>
{% endblock %}

