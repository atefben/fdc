{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
<div id="main" class="all-photos grid loading">
    <h2 class="title">{{ 'article.photos.title.touteslesvideos'|trans }}</h2>

    {% include 'FDCEventBundle:News:components/filters.html.twig' %}

    <div id="gridPhotos" class="grid-wrapper">
        <div class="grid-sizer"></div>

        {% for video in videos %}
            <div class="item {{ video.filter.theme }} {{ video.filter.date }} shadow-bottom video">
                <a id="video1" class="ajax chocolat-image" href="{{ video.image.path }}"
                   title='<span class="category">{{ video.theme }}</span><span class="date">{{ video|trans_fallback('createdAt')|date('d.m.y') }}</span><h2>{{ video|trans_fallback('title') }}</h2>'
                   data-credit="{{ video.copyright }}"></a>
                {% set trans = video.image.findTranslationByLocale(app.request.locale) %}
                {% if trans is null or trans.file is null %}
                    {% set trans = video.image.findTranslationByLocale('fr') %}
                {% endif %}
                {% set file = trans.file %}
                {% thumbnail file, 'big' with {'alt': video.image|trans_fallback('alt') } %}
                <div class="picto"></div>
                <div class="info">
                    <div class="vCenter">
                        <div class="vCenterKid">
                            <a href="#" class="category">{{ video.theme }}</a><span class="date">{{ video|trans_fallback('createdAt')|date('d.m.y') }}</span>
                            <p>{{ video|trans_fallback('title') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>
</div>

<!-- BREADCRUMB -->
{% include "FDCEventBundle:Global:breadcrumb.html.twig" with
{"breadcrumb":
[
    {
        "name" : 'header.mainnav.nav.jourapresjour'|trans ,
        "url"  : path('fdc_event_news_index')
    },
    {
        "name" : 'header.mainnav.nav.videos'|trans ,
        "url"  : path('fdc_event_news_getvideos')
    },
]
} %}
{% endblock %}
