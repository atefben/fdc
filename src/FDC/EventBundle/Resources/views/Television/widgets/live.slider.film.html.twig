{% trans_default_domain 'FDCEventBundle' %}

<div class="vid shadow-bottom">
    <div class="image-wrapper">
        <img src="{% path video.image|trans_fallback('file'), '1950x1232' %}"
             srcset="{% path video.image|trans_fallback('file'), '1950x1232' %} 1x, {% path video.image|trans_fallback('file'), '1950x1232' %} 2x"
             alt="">
    </div>
    <a class="linkVid" href="#"></a>
    <div class="info">
        <div class="picto"><i class="icon icon_video"></i>
        </div>
        <div class="info-container">
            <div class="vCenter">
                <div class="vCenterKid">
                    <a href="" class="category">{{ video.theme }}</a>
                    <span class="date">{{ video.publishedAt|date('d.m.Y') }}</span> .
                    <span   class="hour">{{ video.publishedAt|date('H.i') }}</span>
                    <a href="#" class="titleLink">{{ video|trans_fallback('title') }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
