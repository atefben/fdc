{% trans_default_domain 'FDCEventBundle' %}
<nav>
    <ul class="main">
        {% for menu in menus %}
            {% if menu.id < 7 %}
                <li>
                    {% if menu.route == 'fdc_event_television_trailers' or
                    menu.route == 'fdc_event_movie_selection' %}
                        <a href="{{ path(menu.route, { 'slug': 'competition' }) }}"
                           class="{% if app.request.attributes.get('_route') in routes %}active{% endif %}">
                            {{ menu.transName|trans }}
                        </a>
                    {% elseif menu.route == 'fdc_event_jury_get' %}
                        <a href="{{ path(menu.route, { 'type': '1' }) }}"
                           class="{% if app.request.attributes.get('_route') in routes %}active{% endif %}">
                            {{ menu.transName|trans }}
                        </a>
                    {% elseif menu.route == 'fdc_event_palmares_get' %}
                        <a href="{{ path(menu.route, { 'section': 'competition' }) }}"
                           class="{% if app.request.attributes.get('_route') in routes %}active{% endif %}">
                            {{ menu.transName|trans }}
                        </a>
                    {% else %}
                        <a href="{{ path(menu.route) }}"
                           class="{% if app.request.attributes.get('_route') in routes %}active{% endif %}">
                            {{ menu.transName|trans }}
                        </a>
                    {% endif %}
                    <ul class="tcenter">
                        {% if menu['__children'] is defined %}
                            {% for child in menu['__children'] %}
                                {% if child.enabled %}
                                <li>
                                    <a href="{{ path(child.route) }}"
                                       class="{% if app.request.attributes.get('_route') in routes %}active{% endif %}">
                                        {{ child.transName|trans }}
                                    </a>
                                </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </ul>
                </li>
            {% endif %}
        {% endfor %}
    </ul>

    <ul class="user">
        {% for menu in menus %}
            {% if menu.id > 6 %}
                {% if menu.route == 'fdc_event_agenda_scheduling' %}
                    <li class="programmation-wrapper">
                        <a href="{{ path(menu.route) }}" class="programmation">
                            <i class="icon icon_programmation"></i>{{ menu.transName|trans }}
                        </a>
                        <ul>
                        {% if menu['__children'] is defined %}
                            {% for child in menu['__children'] %}
                                {% if child.enabled %}
                                    <li>
                                        <a href="{{ path(child.route) }}">
                                            {{ child.transName|trans }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        </ul>
                    </li>
                {% else %}
                    <li class="participate-wrapper">
                        <a href="{{ path(menu.route) }}" class="participate">
                            <i class="icon icon_participer"></i>{{ menu.transName|trans }}
                        </a>
                        <ul>
                        {% if menu['__children'] is defined %}
                            {% for child in menu['__children'] %}
                                {% if child.enabled %}
                                    <li><a href="{{ path(child.route) }}"> {{ child.transName|trans }}</a></li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        </ul>
                    </li>
                {% endif %}
            {% endif %}
        {% endfor %}
        <li>
            <a href="{{ path('fdc_press_news_home') }}" class="press">
                <i class="icon icon_espace-presse"></i>{{ 'header.mainnav.nav.espacepresse'|trans }}
            </a>
        </li>
    </ul>
</nav>