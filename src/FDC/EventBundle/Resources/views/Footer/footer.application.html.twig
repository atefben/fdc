{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventBundle::layout.html.twig' %}

{% block body %}
    {#<div id="main" class="sitemap loading">#}
    <div id="main" class="app">
        <div class="contain-app">
            <h1>{{ 'appli.title'|trans|raw }}</h1>
            <h2>{{ 'appli.description'|trans|raw }}</h2>
            <div class="logo-app">
                <a href="">
                    {% image '@FDCEventBundle/Resources/public/img/appstore.png' %}
                    <img src="{{ asset_url }}" alt="apple" />
                    {% endimage %}
                </a>
                <a href="">
                    {% image '@FDCEventBundle/Resources/public/img/appgoogle.png' %}
                    <img src="{{ asset_url }}" alt="android" />
                    {% endimage %}
                </a>
            </div>
        </div>
    </div>
{% endblock %}