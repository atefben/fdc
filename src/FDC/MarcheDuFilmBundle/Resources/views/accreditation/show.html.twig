{% extends 'FDCMarcheDuFilmBundle::base.html.twig' %}

{% block main %}
    <div id="main" class="home loading">
        {% if accreditationContent is not empty %}
            {% if accreditationContent.state != 2 %}
                <div class="accredidationsMessage customClass5Bckg">
                    {% if accreditationContent.state == 0 %}
                        <div class="accredMsg customClass5BckgColor">{{ accreditationContent.subtitle|truncate(130, true, "...") }}</div>
                        <a href="{{ accreditationContent.activeUrl }}"><div class="accredRegister customClass6BckgColor">{{ 'accrediation.bandeau.subscribe'|trans }}</div></a>
                    {% elseif accreditationContent.state == 1 %}
                        <div class="noAvail">{{ accreditationContent.subtitle|truncate(130, true, "...") }}</div>
                    {% endif %}
                </div>
            {% endif %}
            <div class="text-presentation accredidationsDetails greyBckg mdf customClass5 customClass2Bckg">
                <h3>{{ accreditationContent.title }}</h3>
            </div>
            <div class="greyBckg">
                <div class="midContainer">
                    <h5 class="getMargin customClass1">{{ accreditationContent.description|raw }}</h5>
                    <div id="accordion-menu">
                        <ul>
                            {% for accreditationWidget in accreditationWidgets %}
                                <li>
                                    <div class="open">{{ accreditationWidget.title }}<span class="openPlus">+</span><span class="openMinus">-</span></div>
                                    <div class="content">
                                        <p>{{ accreditationWidget.description }}</p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="accreditations customClass2Bckg accreditationsCustom">
                    <div class="bigContainer">
                        <h3>{{ accreditationContent.promotionsTitle|raw }}</h3>
                        <div class="pricesContainer">
                            <div class="innerWrapper">
                                <div class="articles {% if accreditationContent.promotionState1 %}pricesNoavail{% endif %}">
                                    {% if accreditationContent.promotionState1 %}
                                        <div class="articlesOverlay"></div>
                                    {% endif %}
                                    {% if accreditationContent.isEarlyBird %}
                                        <span class="earlyBird"><img src="{{ asset('bundles/fdcmarchedufilm/img/early-bird.png') }}"></span>
                                    {% endif %}
                                    <div class="articles-content {% if accreditationContent.isEarlyBird %}primo{% endif %}">
                                        <div class="textWrapper">
                                            <span>{{ accreditationContent.promotionTitle1 }}</span>
                                            <h6 class="customClass1">{{ accreditationContent.promotionPrice1 }} <span class="ht customClass1">{{ accreditationContent.promotionInformation1 }}</span></h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="articles {% if accreditationContent.promotionState2 %}pricesNoavail{% endif %}">
                                    {% if accreditationContent.promotionState2 %}
                                        <div class="articlesOverlay"></div>
                                    {% endif %}
                                    <div class="articles-content">
                                        <div class="textWrapper">
                                            <span>{{ accreditationContent.promotionTitle2 }}</span>
                                            <h6 class="customClass1">{{ accreditationContent.promotionPrice2 }} <span class="ht customClass1">{{ accreditationContent.promotionInformation2 }}</span></h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="articles {% if accreditationContent.promotionState3 %}pricesNoavail{% endif %}">
                                    {% if accreditationContent.promotionState3 %}
                                        <div class="articlesOverlay"></div>
                                    {% endif %}
                                    <div class="articles-content">
                                        <div class="textWrapper">
                                            <span>{{ accreditationContent.promotionTitle3 }}</span>
                                            <h6 class="customClass1">{{ accreditationContent.promotionPrice3 }} <span class="ht customClass1">{{ accreditationContent.promotionInformation3 }}</span></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="pricesContent">
                            <div class="innerWrapper">
                                {#{{ dump() }}#}
                                {% if accreditationContent.promotionDetailsTitle1 or accreditationContent.promotionDetailsPricePrefix1 or accreditationContent.promotionDetailsPrice1 or accreditationContent.promotionDetailsPriceSuffix1 or accreditationContent.promotionDetailsInformation1 %}
                                    <div class="plusPrices">
                                        {% if accreditationContent.promotionDetailsTitle1 or accreditationContent.promotionDetailsPricePrefix1 or accreditationContent.promotionDetailsPrice1 or accreditationContent.promotionDetailsPriceSuffix1 %}
                                            {% set verticalAlign1 = false %}
                                            <div class="plusPricesdetails">
                                                <span class="customClass3">{{ accreditationContent.promotionDetailsTitle1|raw }}</span>
                                                <h6><span class="plusColor customClass3">{{ accreditationContent.promotionDetailsPricePrefix1 }}</span>{{ accreditationContent.promotionDetailsPrice1 }} <span class="ht">{{ accreditationContent.promotionDetailsPriceSuffix1 }}</span></h6>
                                            </div>
                                        {% else %}
                                            {% set verticalAlign1 = true %}
                                            <div class="plusPricesdetails">
                                                <span class="customClass3"></span>
                                                <h6><span class="plusColor customClass3"></span><span class="ht"></span></h6>
                                            </div>
                                        {% endif %}

                                        {% if verticalAlign1 %}
                                            <div class="v-middle-anchor"></div>
                                        {% endif %}
                                        <div class="plusPricestext">
                                            {{ accreditationContent.promotionDetailsInformation1|raw }}
                                        </div>
                                    </div>
                                {% endif %}
                                {% if accreditationContent.promotionDetailsTitle2 or accreditationContent.promotionDetailsPricePrefix2 or accreditationContent.promotionDetailsPrice2 or accreditationContent.promotionDetailsPriceSuffix2 or accreditationContent.promotionDetailsInformation2 %}
                                    <div class="plusPrices">
                                        {% if accreditationContent.promotionDetailsTitle2 or accreditationContent.promotionDetailsPricePrefix2 or accreditationContent.promotionDetailsPrice2 or accreditationContent.promotionDetailsPriceSuffix2 %}
                                            {% set verticalAlign2 = false %}
                                            <div class="plusPricesdetails">
                                                <span class="customClass3">{{ accreditationContent.promotionDetailsTitle2|raw }}</span>
                                                <h6><span class="plusColor customClass3">{{ accreditationContent.promotionDetailsPricePrefix2 }}</span>{{ accreditationContent.promotionDetailsPrice2 }} <span class="ht">{{ accreditationContent.promotionDetailsPriceSuffix2 }}</span></h6>
                                            </div>
                                        {% else %}
                                            {% set verticalAlign2 = true %}
                                        {% endif %}
                                        {% if verticalAlign2 %}
                                            <div class="v-middle-anchor"></div>
                                        {% endif %}
                                        <div class="{% if verticalAlign2 %}plusPricestextCustom{% else %}plusPricestext{% endif %}">
                                            {{ accreditationContent.promotionDetailsInformation2|raw }}
                                        </div>
                                    </div>
                                {% endif %}
                                {% if accreditationContent.promotionDetailsTitle3 or accreditationContent.promotionDetailsPricePrefix3 or accreditationContent.promotionDetailsPrice3 or accreditationContent.promotionDetailsPriceSuffix3 or accreditationContent.promotionDetailsInformation3 %}
                                    <div class="plusPrices">
                                        {% if accreditationContent.promotionDetailsTitle3 or accreditationContent.promotionDetailsPricePrefix3 or accreditationContent.promotionDetailsPrice3 or accreditationContent.promotionDetailsPriceSuffix3 %}
                                            {% set verticalAlign3 = false %}
                                            <div class="plusPricesdetails">
                                                <span class="customClass3">{{ accreditationContent.promotionDetailsTitle3|raw }}</span>
                                                <h6><span class="plusColor customClass3">{{ accreditationContent.promotionDetailsPricePrefix3 }}</span>{{ accreditationContent.promotionDetailsPrice3 }} <span class="ht">{{ accreditationContent.promotionDetailsPriceSuffix3 }}</span></h6>
                                            </div>
                                        {% else %}
                                            {% set verticalAlign3 = true %}
                                        {% endif %}
                                        {% if verticalAlign3 %}
                                            <div class="v-middle-anchor"></div>
                                        {% endif %}
                                        <div class="{% if verticalAlign3 %}plusPricestextCustom{% else %}plusPricestext{% endif %}">
                                            {{ accreditationContent.promotionDetailsInformation3|raw }}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    {% include 'FDCMarcheDuFilmBundle::partials/newsBlock.html.twig' with { 'news': news } %}
    {% include 'FDCMarcheDuFilmBundle::partials/contactBlock.html.twig' with { 'contact': contact } %}

{% endblock main %}
