{% extends 'FDCMarcheDuFilmBundle::base.html.twig' %}

{% block main %}

    <div id="main" class="home loading">
        <div class="bigContainer">

            <div class="our-news newsPage servicesPage">
                <h3>{{ serviceContent.title  }}</h3>
                <p>{{ serviceContent.description }}</p>
                <div class="innerWrapper">
                    {% for serviceWidget in serviceWidgets %}
                        <div class="articles">
                            <a href="{{ serviceWidget.seeMoreUrl }}">
                                <div class="readMore">...</div>
                                <div class="articles-img">
                                    <img class="fitImg" src="/img/slider/slider03.jpg">
                                    <div class="normalImg">
                                        <img src="/img/plus.png" alt="MarchÃ© du film">
                                    </div>
                                </div>
                                <div class="articles-content">
                                    <h6>{{ serviceWidget.title }}</h6>
                                    <span>{{ serviceWidget.subTitle }}</span>
                                    <p>{{ serviceWidget.description }}</p>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                    <div class="articles">
                        <div class="articles-content">
                            <div class="lastArticle">
                                <h6>{{ serviceContact.title|raw }}</h6>
                                <p>{{ serviceContact.description }}</p>
                                <a href="{{ serviceContact.seeMoreUrl }}">
                                    <div class="blackBtn">En Savoir Plus</div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'FDCMarcheDuFilmBundle::partials/newsBlock.html.twig' with { 'news': news } %}
    {% include 'FDCMarcheDuFilmBundle::partials/accreditationBlock.html.twig' %}
    {% include 'FDCMarcheDuFilmBundle::partials/contactBlock.html.twig' with { 'contact': contact } %}

{% endblock main %}
