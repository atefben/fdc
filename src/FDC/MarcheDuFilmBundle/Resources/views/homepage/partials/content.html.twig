<div class="container">
    <div class="text-presentation">
        <span>{{ contentBlock.category }}</span>
        <h3>{{ contentBlock.title }}</h3>
        <h5>{{ contentBlock.description|raw }}</h5>
        <div class="">

            {% if contentBlock.url %}
                <a href="{{ contentBlock.url }}"><p>en savoir plus</p></a>
            {% endif %}
        </div>
    </div>
</div>

<div class="owlContainer innerWrapper ">
    <div id="owl-mid" class="owl-carousel owl-theme">
        {% for item in slider %}
            <div class="item">
                <img src="{{ item.translatable.image }}" alt="">
                <div class="image-caption">{{ item.legend }}</div>
            </div>
        {% endfor %}
    </div>
</div>
