<div class="container">
    <div class="text-presentation">
        {% if contentBlock %}
        <span class="customClass1">{{ contentBlock.category }}</span>
        <h3>{{ contentBlock.title }}</h3>
        <h5>{{ contentBlock.description|raw }}</h5>
        <div class="">

            {% if contentBlock.url %}
                <a href="{{ contentBlock.url }}"><p class="savoirPlus">{{ 'read_more'|trans }}</p></a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<div class="owlContainer innerWrapper ">
    <div id="owl-mid" class="owl-carousel owl-theme">
        {% if contentBlock.translatable is defined %}
            {% for item in contentBlock.translatable.gallery.medias %}
                {% set translations = item.media.findTranslationByLocale(app.request.locale) %}
                <div class="item">
                    <img src="{% path item.media|trans_fallback('file'), 'reference' %}" alt="{{ translations.alt }}" style="width: 977px; height: 551px;">
                    <div class="image-caption">{{ translations.legend ~ ' - Â©' ~ translations.copyright }}</div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>
