<div id="owl-top" class="owl-carousel owl-theme">

    {% for item in sliderTop %}
        <div class="item">
            <img src="{{ item.translatable.image }}" alt="">
            <div class="owl-Title">
                <h2>{{ item.title }}</h2>
                <p>{{ item.subTitle }}</p>
                <span>{{ item.dateText }}</span>
            </div>
        </div>
    {% endfor %}
</div>

<div id="owl-second" class="owl-carousel owl-theme">
    {% for item in slider %}
        <div class="item">
            <div class="owl-Title">
                <a href="{{ item.url }}"><h2>{{ item.title|raw }}</h2></a>
                <a href="{{ item.url }}"><img src="{{ asset('bundles/fdcmarchedufilm/img/plus.png') }}" alt=""></a>
            </div>
            <img class="fitImg" src="{{ item.translatable.image }}" alt="">
        </div>
    {% endfor %}
</div>
