<div class="our-news dynamic customClass3Bckg">
    <span>DECOUVREZ</span>
    <h3>les derniÈrEs actualités</h3>
    <div class="innerWrapper">
        {% for newsItem in news %}
            <div class="articles {% if loop.index == 3 %}noShow{% endif %}">
                <a class="color-inherit" href="#"><div class="readMore">...</div></a>
                {% if newsItem.translatable.image is not empty %}
                    <div class="articles-img"><img src="{% path newsItem.translatable.image|trans_fallback('file'), 'reference' %}"></div>
                {% endif %}
                <div class="articles-content">
                    {% if newsItem.translatable.image is not empty %}<a href="#">{% endif %}
                    <span class="customClass4">{{ newsItem.newsTheme }} <span class="article-date">{{ newsItem.translatable.publishedAt|date("d M Y") }}</span></span>
                    <h6>{{ newsItem.newsTitle }}</h6>
                    <p>{{ newsItem.description|raw }}</p>
                    {% if newsItem.translatable.image is not empty %}</a>{% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
