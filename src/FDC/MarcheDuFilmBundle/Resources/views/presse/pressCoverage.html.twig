{% extends 'FDCMarcheDuFilmBundle::base.html.twig' %}

{% block main %}
    <div id="main" class="home loading">
        {% include 'FDCMarcheDuFilmBundle::shared/pressSubHeader.html.twig' %}
        <div class="bigContainer">
            <div class="our-news newsPage pressReview">
                <h3>{{ pressCoverageContent.title }}</h3>
                <div class="innerWrapper">
                    {% for pressCoverageWidget in pressCoverageWidgets %}
                        <a href="{{ pressCoverageWidget.link }}" target="_blank">
                            <div class="articles">
                                <div class="readMore">
                                    <i class="icon icon_flecheGauche reverse"></i>
                                    <a href="{{ pressCoverageWidget.link }}" target="_blank">{{ 'read_the_article'|trans }}</a>
                                </div>
                                <div class="articles-content">
                                    <span>publi√© le <span class="article-date customClass4">{{ pressCoverageWidget.translatable.publishedAt|date("d M Y") }}</span></span>
                                    <h6>{{ pressCoverageWidget.title }}</h6>
                                    <span>{{ 'article_by'|trans }}{#Par#} <span class="article-date customClass4">{{ pressCoverageWidget.source }}</span></span>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
            <a href="#">
                <div class="moreArticles">
                    <span>{{ 'display_more'|trans }}</span>
                </div>
            </a>
        </div><!--CONTAINER-->
    </div>
{% endblock %}
