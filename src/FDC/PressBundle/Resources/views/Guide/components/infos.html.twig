{% trans_default_domain 'FDCPressBundle' %}

<div class="contain-title-pg">
    <h3 class="title-pguide ">
        <span class="logo">
            {% image '@FDCEventBundle/Resources/public/img/press/svg/informations-grey.svg' %}
            <img src="{{ asset_url }}" class="svg" alt="{{ section.title }}" />
            {% endimage %}
        </span>
        {{ section.title }}
    </h3>
    <span class="plus"></span>
</div>

<div class="contain-article">
    <div class="aside">
        <img src="{{ section.aside.image.path }}" alt="">
        {% for block in section.aside.block %}
            <div class="container-infos">
                <h5 class="container-title">{{ block.title }}</h5>
                {% for info in block.info %}
                    <div class="infos">
                        {{ info.content|raw }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    <div class="texts">
        {{ section.article.content|raw }}
    </div>
</div>

<div class="contain-article">
    <div class="aside">
        <img src="{{ section.secondArticle.image.path }}" alt="">
    </div>
    <div class="texts">
        {{ section.secondArticle.content|raw }}
    </div>
</div>
