{% trans_default_domain 'FDCPressBundle' %}
{% extends 'FDCPressBundle::layout.html.twig' %}

{% block body %}
    <div id="main"
         class="press press-programmation loading calendar-open {{ (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'conected' : 'lock' }}">
        <div class="header-press">
            <div class="head">
                <span><i class="icon icon_espace-presse"></i>{{ 'press.header.label.espacepresse'|trans }}</span>
            </div>
            <div class="container">
                <h2>{{ 'programmation.title.programmation'|trans }}</h2>
                {% if app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER") and pressProjection.pressScheduling is not null %}
                    <div class="buttons full">
                        <a href="#" class="button subnav"><i
                                    class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatpdf'|trans }}
                        </a>
                        <a href="{% path pressProjection.pressScheduling, 'reference' %}" class="button pdf" download
                           target="_blank"><i
                                    class="icon icon_telecharger"></i>{{ pressProjection|trans_fallback('pressSchedulingLabel') }}
                        </a>
                        <a href="{% path pressProjection.scheduling, 'reference' %}" class="button pdf" download
                           target="_blank"><i
                                    class="icon icon_telecharger"></i>{{ pressProjection|trans_fallback('schedulingLabel') }}
                        </a>
                        {#<a href="#" class="button list" download><i class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatics'|trans }}</a>#}
                    </div>
                    {% else %}
                    <div class="buttons">
                        <a href="#" class="button subnav"><i
                                    class="icon icon_telecharger"></i>{{ pressProjection|trans_fallback('schedulingLabel') }}
                        </a>
                        <a href="{% path pressProjection.scheduling, 'reference' %}" class="button list pdf" download
                           target="_blank"><i
                                    class="icon icon_telecharger"></i>{{ 'programmation.btn.telechargerformatpdf'|trans }}
                        </a>
                    </div>
                    {% endif %}
            </div>
        </div>

        {% include 'FDCPressBundle:Global:components/login.html.twig' %}

        <div class="wrapper">
            {% include 'FDCPressBundle:Agenda:components/calendar.html.twig' %}
            <div class="programmation">
                <div id="calendar-programmation">

                    {% include 'FDCEventBundle:Agenda:components/filters.html.twig' %}

                    <div id="timeline">
                        <span class="arrow left"><i class="icon icon_flecheGauche"></i></span>
                        <div class="timeline-container">


                            {% for day in schedulingDays %}
                                <a href="#" class="ajaxi {% if day == date %}active{% endif %}" data-date="{{ day|date('Y-m-d') }}">
                                    {{ day|localizeddate('full', 'none', app.request.locale)|truncate(3, false, "") }}
                                    <span class="day">{{ day|date('d') }}</span>
                                </a>
                            {% endfor %}
                        </div>
                        <span class="arrow right"><i class="icon icon_fleche-right"></i></span>
                    </div>
                    <div class="calendar">
                        <div class="timeCol">
                            <div class="empty"></div>
                            <div class="time">08H</div>
                            <div class="time">09H</div>
                            <div class="time">10H</div>
                            <div class="time">11H</div>
                            <div class="time">12H</div>
                            <div class="time">13H</div>
                            <div class="time">14H</div>
                            <div class="time">15H</div>
                            <div class="time">16H</div>
                            <div class="time">17H</div>
                            <div class="time">18H</div>
                            <div class="time">19H</div>
                            <div class="time">20H</div>
                            <div class="time">21H</div>
                            <div class="time">22H</div>
                            <div class="time">23H</div>
                            <div class="time">00H</div>
                            <div class="time">01H</div>
                            <div class="time">02H</div>
                            <div class="time">03H</div>
                        </div>
                        <div class="venues">
                            <a href="#" class="nav prev"><i class="icon icon_flecheGauche"></i></a>
                            <a href="#" class="nav next"><i class="icon icon_fleche-right"></i></a>
                            <div class="v-wrapper">
                                {%- for room in rooms -%}
                                    <div class="venue">
                                        <div class="v-head">{{  room.name }}</div>
                                        <div class="v-container">
                                            {%- for event in projections[room.id] -%}
                                                {% include 'FDCEventBundle:Agenda:widgets/event.html.twig' %}
                                            {%- endfor -%}
                                        </div>
                                    </div>
                                {%- endfor -%}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ render(controller('FDCPressBundle:Global:contact')) }}

    </div>
{% endblock body %}