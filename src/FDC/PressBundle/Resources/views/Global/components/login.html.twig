{% trans_default_domain 'FDCPressBundle' %}

{% if app.security.token is null or (app.security.token is not null and 'ROLE_FDC_PRESS_REPORTER' not in app.security.token.roles) %}

    {{ render(controller('FDCPressBundle:Security:setCurrentRoute', {'originalRequest': app.request})) }}

{% else %}
    {% for k,flash_message in app.session.flashbag.get('loginSuccess') %}
        {% if loop.first %}
            <div class="locked">
                <div class="vCenter">
                    <div class="vCenterKid">
                        <p class="access">{{ 'press.header.success.contenusdebloques'|trans|raw }}</p>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endif %}