{% trans_default_domain 'FDCPressBundle' %}
{% set trans = widget.image.findTranslationByLocale(app.request.locale) %}
{% if trans is null or trans.file is null %}
    {% set trans = widget.image.findTranslationByLocale('fr') %}
{% endif %}
{% set image = trans.file %}

{% set sizeClass = 'portrait' %}
{% set format = '240x320' %}
{% if image.width > image.height %}
{% set sizeClass = 'landscape' %}
{% set format = '543x326' %}
{% endif %}

<div class="{{ sizeClass }}">
    <img src="{% path image, format %}" alt="{{ widget.image|trans_fallback('alt') }}" />
    <span class="caption">Â© {{ widget|trans_fallback('copyright') }}</span>
    <p>{{ widget|trans_fallback('label')|raw }}</p>
    {{ widget|trans_fallback('content')|raw }}
    <div class="buttons {% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) %}active-btn{% endif %}">
        <a href="{% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) %}{% path widget.file, 'reference' %}{% endif %}" class="button" target="_blank" download>
            <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'telecharger' : 'cadenas' }}"></i>
            {{ widget|trans_fallback('btnLabel') }}
        </a>
        {% if widget.secondFile is not null %}
            <a href="{% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) %}{% path widget.secondFile, 'reference' %}{% endif %}" class="button"  target="_blank" download>
                <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'telecharger' : 'cadenas' }}"></i>
                {{ widget|trans_fallback('secondBtnLabel') }}
            </a>
        {% endif %}
        {% if widget.thirdFile is not null %}
            <a href="{% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) %}{% path widget.thirdFile, 'reference' %}{% endif %}" class="button"  target="_blank" download>
                <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'telecharger' : 'cadenas' }}"></i>
                {{ widget|trans_fallback('secondBtnLabel') }}
            </a>
        {% endif %}
    </div>
</div>