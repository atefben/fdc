{% trans_default_domain 'FDCPressBundle' %}
{% set trans = widget.image.findTranslationByLocale(app.request.locale) %}
{% if trans is null or trans.file is null %}
    {% set trans = widget.image.findTranslationByLocale('fr') %}
{% endif %}
{% set file = trans.file %}
<div class="contain-player">
    <div class="player">
        <img src="{% path file, '976x535' %}" alt="{{ widget.image|trans_fallback('alt') }}" />
    </div>
    <span class="caption">
        {{ widget|trans_fallback('copyright') }} <br>
        {{ widget|trans_fallback('label') }}
    </span>
    <div class="buttons {% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER"))S_REPORTER") %}active-btn{% endif %}">
        <a href="{% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER"))S_REPORTER") %}{% path widget.file, 'reference' %}{% endif %}" target="_blank" class="mov extention button" target="_blank" download>
            <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER"))S_REPORTER") ? 'telecharger' : 'cadenas' }}"></i>
            {{ widget|trans_fallback('btnLabel') }}
        </a>
        {% if widget.secondFile is not null %}
            <a href="{% if widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER"))S_REPORTER") %}{% path widget.secondFile, 'reference' %}{% endif %}" target="_blank" class="gif extention button" target="_blank" download>
                <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not null and is_granted("ROLE_FDC_PRESS_REPORTER"))S_REPORTER") ? 'telecharger' : 'cadenas' }}"></i>
                {{ widget|trans_fallback('secondBtnLabel') }}
            </a>
        {% endif %}
    </div>
</div>