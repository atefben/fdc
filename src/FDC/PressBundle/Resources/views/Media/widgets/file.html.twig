{% trans_default_domain 'FDCPressBundle' %}

<div class="contain-dp">
    <div class="buttons {% if widget.lockedContent == 0 %}active-btn{% endif %}">
        {% if widget.secondFile is not null %}
        <a href="{% if widget.lockedContent == 0 %}{% path widget.file, 'reference' %}{% endif %}" class="button large" target="_blank" download>
            <i class="icon icon_{{ widget.lockedContent == 0 ? 'telecharger' : 'cadenas' }}"></i>{{ widget|trans_fallback('secondBtnLabel') }}
            {{ widget|trans_fallback('btnLabel') }}
        </a>
        <a href="{% if widget.lockedContent == 0 %}{% path widget.secondFile, 'reference' %}{% endif %}" class="button large" target="_blank" download>
            <i class="icon icon_{{ widget.lockedContent == 0 ? 'telecharger' : 'cadenas' }}"></i>{{ widget|trans_fallback('secondBtnLabel') }}
        </a>
        {% else %}
        <a href="{% if widget.lockedContent == 0 %}{% path widget.file, 'reference' %}{% endif %}" class="button" target="_blank" download>
            <i class="icon icon_{{ widget.lockedContent == 0 ? 'telecharger' : 'cadenas' }}"></i>{{ widget|trans_fallback('secondBtnLabel') }}
            {{ widget|trans_fallback('btnLabel') }}
        </a>
        {% endif %}
    </div>
    <p class="infos">
        <strong>{{ 'press.home.label.miseajourle'|trans }} : </strong>
        {{ widget.updateddAt|date('d.m.y') }} . {{ widget.updateddAt|date('H:i') }}
    </p>
</div>