{% trans_default_domain 'FDCPressBundle' %}

<div class="filters">

    <div id="date" class="filter">
        <span class="label">{{ 'press.actu.filter.label.annees'|trans }} :</span>
        <span class="select">
            {% for key,date in filters.dates %}
                {% if key == 0 %}
                    <span class="active" data-filter="d{{ date.content }}">
                        {{ date.content }}
                    </span>
                {% else %}
                    <span data-filter="d{{ date.content }}">
                        {{ date.content }}
                    </span>
                {% endif %}
            {% endfor %}
            <i class="icon icon_fleche-down"></i>
        </span>
    </div>

    <div id="type" class="filter">
        <span class="label">{{ 'press.actu.filter.label.types'|trans }} :</span>
        <span class="select">
            <span class="active" data-filter="all">{{ 'press.actu.filter.type.tous'|trans }}</span>
            <span data-filter="communique">{{ 'press.actu.filter.type.communiques'|trans }}</span>
            <span data-filter="info">{{ 'press.actu.filter.type.infos'|trans }}</span>
            <i class="icon icon_fleche-down"></i>
        </span>
    </div>

    <div id="theme" class="filter">
        <span class="label">{{ 'press.actu.filter.label.themes'|trans }} :</span>
        <span class="select">
            {% for key, theme in filters.themes %}
                <span class="{% if key == 0 %}active{% endif %}" data-filter="{% if key != 0 %}theme-{% endif %}{{ theme.id }}">{{ theme.content }}</span>
            {% endfor %}
            <i class="icon icon_fleche-down"></i>
        </span>
    </div>

    <div id="format" class="filter">
        <span class="label">{{ 'press.actu.filter.label.format'|trans }} :</span>
        <span class="select">
            {% for key, format in filters.format %}
                <span class="{% if key == 0 %}active{% endif %}" data-filter="{{ format.slug }}">{% if key == 0 %}{{ format.content }}{% endif %}{{ ('filter.type.'~format.content)|trans({},'FDCEventBundle')  }}</span>
            {% endfor %}
            <i class="icon icon_fleche-down"></i>
        </span>
    </div>


</div>