        </div>
        <div class="affiche">
            <div class="container">
                <h3 class="title-press">{{ 'press.home.title.afficheofficielle'|trans }}</h3>
                {% for download in pressFestivalDownloads %}
                        <div class="portrait">
                            <img src="{{ asset('bundles/fdcevent/img/press/press-' ~ download.format ~ '.jpg') }}" alt="" />
                            <span class="caption">{{ download.caption }}</span>
                            <p>Format {{ download.format }}</p>
                            <div class="buttons">
                                {% for resolution in download.resolution %}
                                    <a href="#" class="button">{{ resolution.size }}</a>
                                {% endfor %}
                            </div>
                        </div>
                {% endfor %}
            </div>
        </div>
