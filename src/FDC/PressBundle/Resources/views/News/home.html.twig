                </p>
            </div>
            <div id="calendar-programmation">
                <div id="timeline">
                    {% for day in schedulingDays %}
                        <a href="#" class="" data-date="{{ day.date|date('Y-m-d') }}">{{ day.date|localizeddate('full', 'none', app.request.locale)|truncate(3, false, "") }}<span class="day">{{ day.date|date('d') }}</span></a>
