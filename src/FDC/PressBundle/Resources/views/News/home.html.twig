                        <div class="time">{{ currentHour }}</div>
                        <div class="time">{{ currentHour + 1}}</div>
                        <div class="time">{{ currentHour + 2}}</div>
                        <div class="time">{{ currentHour + 3}}</div>
                        <div class="time">{{ currentHour + 4}}</div>
                        <div class="time">{{ currentHour + 5}}</div>
                    </div>
