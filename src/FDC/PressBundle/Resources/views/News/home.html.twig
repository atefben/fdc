        <div class="mediatheque">
            <div class="chap">
                <h3 class="title-press">{{ 'press.home.title.mediatheque'|trans }}</h3>
                <p class="link">
                    <a href="press-media.php">
                        <i class="icon icon_fleche-right"></i>
                        {{ 'press.home.btn.toutelamediatheque'|trans }}
                    </a>
                </p>
            </div>
            <div class="table">
                {% for media in pressMedias %}
                    <div class="line">
                        <div class="container">
                            <div class="info">
                                <img src="{{ media.image.path }}" alt="" />
                                <div class="txt">
                                    <div class="vCenter">
                                        <div class="vCenterKid">
                                            <p>{{ media.title }}
                                                <a href="#" class="director">{{ media.author.fullName }}</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="media folder">
                                <span>{{ 'press.home.label.dossiersdepresse'|trans }}</span> ({{ media.folder }})
