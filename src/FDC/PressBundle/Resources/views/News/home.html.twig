                            <div class="media photo"><span>{{ 'press.home.label.photos'|trans }}</span> ({{ media.photo }})</div>
                            <a class="button" href="press-media.php">
                                {{ 'press.home.btn.decouvrir'|trans }}
                            </a>
                        </div>
