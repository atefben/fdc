{% trans_default_domain 'FDCPressBundle' %}

<header class="press">
    <div id="top-bar">
        <ul class="main-nav">
            <li>
                <a href="/{{app.request.locale}}/" class="active" > {{ 'header.topbar.nav.festival'|trans }} </a>
            </li>
            <li>
                <a href="{{ attribute(_context, 'header_fdc_'~ app.request.locale) }}" target="_blank" > {{ 'header.topbar.nav.festivalcannes'|trans }} </a>
            </li>
            <li>
                <a href="{{ attribute(_context, 'header_cine_'~ app.request.locale) }}" target="_blank" > {{ 'header.topbar.nav.cinefondation'|trans }} </a>
            </li>
            <li>
                <a href="{{ attribute(_context, 'header_ccm_'~ app.request.locale) }}" target="_blank" > {{ 'header.topbar.nav.courtmetrage'|trans }} </a>
            </li>
            <li>
                <a href="{{ attribute(_context, 'header_mdf_'~ app.request.locale) }}" target="_blank" > {{ 'header.topbar.nav.marche'|trans }} </a>
            </li>
        </ul>
        <ul class="user-nav">
            <li>
                <a href="{{ header_account }}" class="account" target="_blank" >
                    <i class="icon icon_mon-compte"></i>{{ 'header.usernav.nav.moncompte'|trans }}
                </a>
            </li>
            <li class="lang">
                <a href="#" class="language">
                    <i class="icon icon_langue"></i>{{ app.request.locale|upper }}
                </a>
                <ul class="sub-languages">
                    {% for locale in locales %}
                        {% if locale != app.request.locale %}
                            <li>
                                {% set params = {'_locale' : locale} %}
                                {% if localeSlugs is defined and localeSlugs[app.request.locale] %}
                                    {% set params = params|merge({'slug': localeSlugs[locale]}) %}
                                {% endif %}
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(params)) }}">
                                    {{ locales[loop.index0]|upper }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </li>
        </ul>
    </div>
    <div id="logo-wrapper">
        <div class="container">
            <div id="logo">
                <a href="/{{app.request.locale}}/">
                    {% image '@FDCEventBundle/Resources/public/img/svg/palme.svg'  %}
                    <img src="{{ asset_url }}" class="palm" alt="{{ 'header.img.palme'|trans }}" />
                    {% endimage %}
                </a>
                <h1>
                    <a href="/{{app.request.locale}}/">
                        {% image '@FDCEventBundle/Resources/public/img/svg/logo.svg' %}
                        <img width="200" src="{{ asset_url }}" alt="{{ 'header.logo.img.cannes'|trans }}" />
                        {% endimage %}
                    </a>
                </h1>
                <h2>
                    {{ render(controller('FDCEventBundle:Header:date')) }}
                </h2>
                <p class="stick">
                    <a href="/{{app.request.locale}}/">
                        {% image '@FDCEventBundle/Resources/public/img/svg/logo.svg' %}
                        <img width="178" src="{{ asset_url }}" alt="{{ 'header.logo.img.cannes'|trans }}" />
                        {% endimage %}
                    </a>
                </p>
            </div>
            <div id="partners">
                <a href="{{ attribute(_context, 'partner_chopard_'~ app.request.locale) }}" target="_blank">
                    {% image '@FDCEventBundle/Resources/public/img/header/Logo_Chopard.svg' %}
                    <img width="84" src="{{ asset(asset_url) }}" class="chopard" alt="{{ 'header.partners.img.chopard'|trans }}" />
                    {% endimage %}
                </a>
                <a href="{{ attribute(_context, 'partner_loreal_'~ app.request.locale) }}" target="_blank">
                    {% image '@FDCEventBundle/Resources/public/img/header/loreal.svg' %}
                    <img width="75" src="{{ asset(asset_url) }}" class="oreal" alt="{{ 'header.partners.img.loreal'|trans }}" />
                    {% endimage %}
                </a>
                <a href="{{ attribute(_context, 'partner_hp_'~ app.request.locale) }}" target="_blank">
                    {% image '@FDCEventBundle/Resources/public/img/header/hp.svg' %}
                    <img width="28" src="{{ asset(asset_url) }}" class="hp" alt="{{ 'header.partners.img.hp'|trans }}" />
                    {% endimage %}
                </a>
                <a href="{{ attribute(_context, 'partner_kering_'~ app.request.locale) }}" target="_blank">
                    {% image '@FDCEventBundle/Resources/public/img/header/Kering-logo.svg' %}
                    <img width="82" src="{{ asset(asset_url) }}" class="kering" alt="{{ 'header.partners.img.kering'|trans }}" />
                    {% endimage %}
                </a>
                <a href="{{ attribute(_context, 'partner_renault_'~ app.request.locale) }}" target="_blank">
                    {% image '@FDCEventBundle/Resources/public/img/header/renault.svg' %}
                    <img width="95" src="{{ asset(asset_url) }}" class="renault" alt="{{ 'header.partners.img.renault'|trans }}" />
                    {% endimage %}
                </a>
                <a href="{{ attribute(_context, 'partner_mastercard_'~ app.request.locale) }}" target="_blank">
                    {% image '@FDCEventBundle/Resources/public/img/header/mastercard.png' %}
                    <img width="57" src="{{ asset(asset_url) }}" class="mastercard" alt="{{ 'header.partners.img.mastercard'|trans }}" />
                    {% endimage %}
                </a>
            </div>
            <div id="search">
                <a href="#" class="search"><i class="icon icon_recherche"></i></a>
            </div>
            <div id="sticky-user">
                <ul class="user-nav">
                    <li>
                        <a href="http://sub.festival-cannes.fr/" class="account" target="_blank" >
                            <i class="icon icon_mon-compte"></i>{{ 'header.usernav.nav.moncompte'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="#" class="search">
                            <i class="icon icon_recherche"></i>{{ 'header.usernav.nav.rechercher'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="navigation">
        <div class="container">
            {{ render(controller('FDCPressBundle:Global:menu', {route : app.request.get('_route')})) }}
        </div>
    </div>
    <div id="searchContainer">
        <div class="container">
            {{ render(controller('FDCEventBundle:Global:search')) }}
            <ul id="suggest"></ul>
        </div>
    </div>
</header>