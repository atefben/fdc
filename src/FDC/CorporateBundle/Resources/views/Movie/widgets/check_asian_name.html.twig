{% spaceless %}
    {% if link is defined and link == false %}
        {% if person.asianName %}
            {{person.lastName ~ ' ' ~ person.firstName}}
        {% else %}
            {{person.fullName}}
        {% endif %}
    {% else %}
        {% if person.asianName %}
            <a href="{{ path('fdc_corporate_artist_get', {slug: person.slug }) }}">
                {{- person.lastName|trim ~ ' ' ~ person.firstName|trim -}}
            </a>
        {% else %}
            <a href="{{ path('fdc_corporate_artist_get', {slug: person.slug }) }}">
                {{- person.fullName|trim -}}
            </a>
        {% endif %}
    {% endif %}
{% endspaceless %}