{% trans_default_domain 'FDCEventBundle' %}
{% set medias = movie|film_media(constant('Base\\CoreBundle\\Entity\\FilmFilmMedia::TYPE_PRESS_PDF'), true) %}

{% set active = true %}

{% if corpo is defined %}
    {% if (medias|length == 0 or movie.selfkitPdfFiles|length == 0) and movie.contacts|length == 0 %}
        {% set active = false %}
    {% endif %}
{% endif %}

{% if active %}
    <div class="press" data-section="press">
        <div class="info-press">
            <div class="wrapper">
                <div class="vCenter">
                    <div class="vCenterKidTop">
                        {% if medias|length or movie.selfkitPdfFiles|length %}
                            <h3 class="gold">{{ 'movie.presse.title.infospresse'|trans }}</h3>
                            <div class="folder">
                                <div class="vCenter">
                                    <div class="vCenterKid">
                                        <div class="img">
                                            {% include 'FDCEventBundle:Global:components/film.poster.html.twig' with
                                            ({
                                            film: movie,
                                            film_format: '135x145',
                                            film_attrs: {
                                            alt: movie|trans_fallback('title')?:movie.titleVO,
                                            },
                                            film_image_default: 'bundles/fdcevent/img/palmares/film135x145.jpg',
                                            film_image_default_attrs: 'style="width: 135px;height: 145px;"'
                                            }) %}
                                        </div>
                                        <h3>{{ 'movie.presse.title.dossierdepresse'|trans }}</h3>
                                        {% for media in medias %}
                                            <a download target="_blank"
                                               href="{% path media.file, 'reference' %}">{% if app.request.locale == 'fr' %}{{ media.titleVf }}{% else %}{{ media.titleVa }}{% endif %}</a>
                                        {% endfor %}
                                        {% if not movie.festival or movie.festival.year not in [2014, 2015] %}
                                            {% for media in movie.selfkitPdfFiles %}
                                                <a download target="_blank"
                                                   href="{% path media, 'reference' %}">{% if app.request.locale == 'fr' %}{{ media.name }}{% else %}{{ media.name }}{% endif %}</a>
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                        {% if movie.website or movie.facebook or movie.twitter %}
                            <div class="links">
                                <p class="sub">{{ 'movie.presse.label.liens'|trans }}</p>
                                {% if movie.website %}
                                    <a href="{{ (('http' in movie.website  or 'https' in  movie.website ) ? '' : 'http://') ~ movie.website }}"
                                       target="_blank">{{ 'movie.presse.liens.website'|trans }}</a>
                                {% endif %}
                                {% if movie.facebook %}
                                    <a href="{{ (('http' in movie.facebook or 'https' in movie.facebook ) ? '' : 'http://') ~ movie.facebook }}"
                                       target="_blank">{{ 'movie.presse.liens.facebook'|trans }}</a>
                                {% endif %}
                                {% if movie.twitter %}
                                    <a href="{{ (('http' in movie.twitter or 'https' in movie.twitter ) ? '' : 'https://twitter.com/') ~  movie.twitter }}"
                                       target="_blank">{{ 'movie.presse.liens.twitter'|trans }}</a>
                                {% endif %}
                            </div>
                        {% endif %}
