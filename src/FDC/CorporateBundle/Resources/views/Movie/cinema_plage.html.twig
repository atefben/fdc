{% extends 'FDCCorporateBundle::layout.html.twig' %}
{% block bodyClass %}retrospective selection retrospective-home restrospective-init dark{% endblock %}

{% block body %}
<section class="border-bottom s-slider-retrospective">

    {% include 'FDCCorporateBundle:Retrospective:components/years_slider_mini.html.twig' %}

    <div class="ajax-section"><div class="contain-ajax">

            {% include 'FDCCorporateBundle:Retrospective:components/menu.html.twig' %}

            {% include 'FDCCorporateBundle:Movie:components/filters.html.twig' %}

            <div class="all-contain">

                <div class="contain-title contain-title-small vFlexAlign border-bottom">
                    <h2 class="title-04">Les projections du Cinéma de la Plage, qui se jouent chaque soir sous les étoiles, sont ouvertes au public.</h2>
                </div>

                {% for projection in projections %}
                    {%  if projection.programmationFilms|length > 0 %}
                        {% set film = projection.programmationFilms[0].film %}
                        {% include 'FDCCorporateBundle:Movie:widgets/movie.html.twig' with {'film': film, 'projection': projection, 'restauration': true} %}
                    {% endif %}
                {% endfor %}

            </div> <!-- end all contain -->
        </div>
    </div>
</section>
{% endblock %}