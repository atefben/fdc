{% trans_default_domain 'FDCCorporateBundle' %}

<footer class=""> <!-- add class loading -->
    <div class="block-01 dark">
        <h2 class="title">{{ 'footer.newsletter.title.newsletter'|trans }}</h2>
        <h3 class="subtitle">{{ 'footer.newsletter.title.toutelactualite'|trans }}</h3>

        {{ render(controller('FDCEventBundle:Global:newsletter')) }}

        <div class="social">
            <p><img width="230" src="{{ asset('bundles/fdccorporate/img/header/logo-white.svg') }}" alt="Festival de Cannes" /></p>
            <ul>
                <li><a class="appli" href="{{ path('fdc_event_footer_static', {'page': social_appli}) }}" target="_blank"><i class="icon icon-app"></i></a></li>
                <li><a class="facebook" href="//www.facebook.com/pages/Festival-de-Cannes-PageOfficielle/197710070249937" target="_blank"><i class="icon icon-facebook"></i></a></li>
                <li><a class="twitter" href="//twitter.com/Festival_Cannes" target="_blank"><i class="icon icon-twitter"></i></a></li>
                <li><a class="instagram" href="//instagram.com/festivaldecannes" target="_blank"><i class="icon icon-instagram"></i></a></li>
                <!--li><a class="tumblr" href="//festivaldecannesofficiel.tumblr.com/" target="_blank"><i class="icon icon-tumblr"></i></a></li-->
                <li><a class="rss" href="{{ attribute(_context, 'social_rss_'~ app.request.locale) }}" target="_blank"><i class="icon icon-rss"></i></a></li>
                <li><a class="youtube" href="//www.youtube.com/user/TVFestivaldeCannes" target="_blank"><i class="icon icon-youtube"></i></a></li>
                <li><a class="dailymotion" href="//www.dailymotion.com/CannesFestTV" target="_blank"><i class="icon icon-dailymotion"></i></a></li>
                <li><a class="podcast" href="{{ attribute(_context, 'social_podcast_'~ app.request.locale) }}" target="_blank"><i class="icon icon-podcast"></i></a></li>
            </ul>
        </div>

        {{ render(controller('FDCCorporateBundle:Global:footer', {route : app.request.get('_route')})) }}

    </div>
</footer>
<div id="siteLoader" class="canvasloader"></div>