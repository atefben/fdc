{{ form_errors(form) }}
{{ form_start(form) }}
<div class="vFlexAlign">
    <label for="{{ form.search.vars.id }}" class="search-txt vFlexAlign"><i
                class="icon icon-search"></i>
        {{ form_widget(form.search, { 'attr': {'class': 'searchBar'} }) }}
        <span class="close-suggest">✕</span>
        <div>
            <ul class="suggest" style="line-height:normal;">
            </ul>
        </div>
    </label>
    <label for="{{ form.news.vars.id }}" class="icon-s vFlexAlign "><i class="icon icon-article"></i><span
                class="text">{{ form_label(form.news) }}</span>{{ form_widget(form.news) }}</label>
    <label for="{{ form.photos.vars.id }}" class="icon-s vFlexAlign"><i class="icon icon-photo"></i><span
                class="text">{{ form_label(form.photos) }}</span>{{ form_widget(form.photos) }}</label>
    <label for="{{ form.videos.vars.id }}" class="icon-s vFlexAlign"><i class="icon icon-video"></i><span
                class="text">{{ form_label(form.videos) }}</span>{{ form_widget(form.videos) }}</label>
    <label for="{{ form.audios.vars.id }}" class="icon-s vFlexAlign"><i class="icon icon-audio"></i><span
                class="text">{{ form_label(form.audios) }}</span>{{ form_widget(form.audios) }}</label>
    <label for="{{ form.events.vars.id }}" class="icon-s vFlexAlign last"><i class="icon icon-event"></i><span
                class="text">{{ form_label(form.events) }}</span>{{ form_widget(form.events) }}</label>
</div>
<div class="slider-selection">
    <span id="slider-snap-value-lower" class="number"></span>
    <div class="container-timelapse">
        <div class="timelapse" id="timelapse"></div>
    </div>
    <span id="slider-snap-value-upper" class="number"></span>
</div>
{{ form_widget(form.yearStart,{ 'attr': {'class': 's-yearstart'} }) }}
{{ form_widget(form.yearEnd, { 'attr': {'class': 's-yearend'} }) }}
<div class="tabs-two vFlexAlign">
    <label for="{{ form.artists.vars.id }}" class="icon-s tab-s vFlexAlign"><i class="icon icon-user-round"></i><span
                class="text">{{ form_label(form.artists) }}</span>{{ form_widget(form.artists) }}</label>
    <label for="{{ form.movies.vars.id }}" class="icon-s tab-s vFlexAlign last"><i
                class="icon icon-movie-clap"></i><span
                class="text">{{ form_label(form.movies) }}</span>{{ form_widget(form.movies) }}</label>
</div>

<table class="more-search">
    <tr>
        <td>
            <div class="tab-1 tab">

                <div class="tab-selection" id='tab1'>
                    {{ form_widget(form.artistCountry) }}
                    <span class="close-suggest">✕</span>
                    <div>
                        <ul class="suggest">
                        </ul>
                    </div>
                </div>

                <div class="sub-tab">
                    <div class="jobs">
                        <div class="title-cont">{{ 'search.form.label.profession'|trans }} <i
                                    class="icon icon-create"></i></div>
                        {% for profession in form.professions %}
                            {{ form_widget(profession) }} <label
                                for="{{ profession.vars.id }}">{{ form_label(profession)|trans }}</label>
                        {% endfor %}
                    </div>
                </div>

                <div class="sub-tab">
                    <div class="type">
                        <div class="title-cont">{{ 'search.form.label.genre'|trans }} <i class="icon icon-create"></i>
                        </div>
                        {% for genre in form.genres %}
                            {{ form_widget(genre) }} <label for="{{ genre.vars.id }}">{{ form_label(genre) }}</label>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </td>
        <td>
            <div class="tab-2 tab">

                <div class="tab-selection" id="tab2">
                    {{ form_widget(form.movieCountry) }}
                    <span class="close-suggest">✕</span>
                    <div>
                        <ul class="suggest">
                        </ul>
                    </div>
                </div>

                <div class="sub-tab">
                    <div class="price">
                        <div class="title-cont">prix <i class="icon icon-create"></i></div>
                        {% for prize in form.prizes %}
                            {{ form_widget(prize) }} <label for="{{ prize.vars.id }}">{{ form_label(prize) }}</label>
                        {% endfor %}
                    </div>
                </div>

                <div class="sub-tab active">
                    <div class="format">
                        <div class="title-cont">{{ 'search.form.label.format'|trans }} <i class="icon icon-minus"></i>
                        </div>
                        {% for format in form.formats %}
                            {{ form_widget(format) }} <label for="{{ format.vars.id }}">{{ form_label(format) }}</label>
                        {% endfor %}
                    </div>
                </div>

                <div class="sub-tab active">
                    <div class="selection-type">
                        <div class="title-cont">{{ 'search.form.label.selection'|trans }} <i
                                    class="icon icon-minus"></i></div>
                        {% for selection in form.selections %}
                            {{ form_widget(selection) }} <label
                                for="{{ selection.vars.id }}">{{ form_label(selection) }}</label>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </td>
    </tr>
</table>

<div class="buttons-02">
    <button type="submit" class="button button-submit-02"><i
                class="icon icon-search"></i>{{ 'search.form.label.submitsearch'|trans }}</button>
</div>

{{ form_end(form) }}