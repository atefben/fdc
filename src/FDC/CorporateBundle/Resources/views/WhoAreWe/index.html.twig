{% trans_default_domain 'FDCCorporateBundle' %}
{% extends 'FDCCorporateBundle::layout.html.twig' %}
{% block bodyClass %}
    who who-fdc bright article-single
{% endblock bodyClass %}
{% block body %}

<section id="main">
    <div class="block-push block-push-top" style="background-image: url({{ asset('bundles/fdccorporate/media/images/who-fdc-01.jpg') }}); background-position: 0px 116px;">
        <div class="vFlexAlign">
            <div class="txts">
                <h1 class="title-3">qui sommes nous ?</h1>
            </div>
        </div>
    </div> <!-- end block push -->

    <div class="ajax-section"><div class="contain-ajax">
            <nav class="navigation-sticky">
                <ul>
                    {% for page in pages %}
                        <li>
                            <a href="{{ path('fdc_corporate_whoarewe_show', {'slug': page|trans_fallback('slug')}) }}"
                               class="{% if app.request.attributes.get('slug') == page|trans_fallback('slug') %}active{% endif %}">
                                {{ page|trans_fallback('title') }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>

            <div class="all-contain">

                <div class="contain-title vFlexAlign block-01-s">
                    {{ currentPage|trans_fallback('chapo')|raw }}
                </div>

                <div class="buttons buttons-01">
                    <a id="share-article" href="#" class="button"><i class="icon icon-share"></i>Partager</a>
                    <a href="#" class="button" onclick="window.print()"><i class="icon icon-print"></i>Imprimer</a>
                </div>

                <div class="block-01-xs">
                    {% for widget in currentPage.widgets %}
                        {% if widget is fdc_page_la_selection_cannes_classics_widget_text %}
                            {% set transWidget = widget.findTranslationByLocale(app.request.locale) %}
                            <div class="small-pres text">
                                {{ transWidget.content|raw }}
                            </div>
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_quote %}
                            {% set transWidget = widget.findTranslationByLocale(app.request.locale) %}
                            <div class="quote">
                                <blockquote>
                                    {{ transWidget.content }}
                                </blockquote>
                            </div>
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_audio %}
                            {% include 'FDCEventBundle:News:widgets/audio.html.twig' %}
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_video_youtube %}
                            {% include 'FDCEventBundle:News:widgets/video-youtube.html.twig' with {'widget': widget} %}
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_video %}
                            {% include 'FDCEventBundle:News:widgets/video.html.twig' with {'widget': widget} %}
                        {% elseif widget is  fdc_page_la_selection_cannes_classics_widget_image and widget.gallery.medias is defined and widget.gallery.medias|length == 1 %}
                            <div class="contain-img-honneur">
                                {% set photo = widget.gallery.medias[0].media %}
                                {% include 'FDCEventBundle:News:widgets/single-photo.html.twig' with {'photo' : photo, 'hideCopyright': true } %}
                                {% set copyright = photo|trans_fallback('copyright') %}
                                <span class="copy">{% if copyright is not empty %} Â© {{ copyright }}{% endif %}</span>
                            </div>
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_image and widget.gallery.medias is defined and widget.gallery.medias|length > 1 %}
                            <div class="small-pres half-div container">
                                {% include 'FDCEventBundle:News:widgets/slideshow.html.twig' %}
                            </div>
                        {% elseif widget is  fdc_page_la_selection_cannes_classics_widget_image_dual_align %}
                            <div class="small-pres half-div container">
                                {% include 'FDCEventBundle:News:widgets/dual-photo.html.twig' with {'hideHalfDiv': true} %}
                            </div>
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_movie %}
                            {% if widget.widgetMovie is not null and widget.widgetMovie.films|length > 0 %}
                                {% for film in widget.widgetMovie.films %}
                                    {% include 'FDCEventBundle:Movie:widgets/movie.html.twig' with {'film': film.film, 'restauration': true} %}
                                {% endfor %}
                            {% endif %}
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_intro %}
                            {% set transWidget = widget.findTranslationByLocale(app.request.locale) %}
                            <div class="pres-honneur">
                                {{ transWidget.introduction|raw }}
                            </div>
                        {% elseif widget is fdc_page_la_selection_cannes_classics_widget_subtitle %}
                            {% set transWidget = widget.findTranslationByLocale(app.request.locale) %}
                            <div class="title-list-cat">
                                {% if transWidget.subtitle|trim %}
                                    <h2 class="title">{{ transWidget.subtitle }}</h2>
                                {% endif %}
                                {% if transWidget.paragraph|trim %}
                                    <p class="title-item">{{ transWidget.paragraph }}</p>
                                {% endif %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <div class="border-top">
                    <strong class="title-9">Partager la page</strong>
                    <div class="relative">
                        <div class="block-social-network block-social-network-all">
                            <a class="facebook" href="http://www.facebook.com/dialog/feed?app_id=1198653673492784&amp;link=http://www.festival-cannes.com/fr/films/bacalaureat&amp;picture=&#10;http://affif-sitepublic-media-prod.s3-website-eu-west-1.amazonaws.com/film_poster/0001/02/thumb_1458_film_poster_293x397.jpeg&amp;name=BACALAUREAT%20-%20Festival%20de%20Cannes&amp;caption=&amp;description=Romeo%2C%20m%C3%A9decin%20dans%20une%20petite%20ville%20de%20Transylvanie%2C%20a%20tout%20mis%20en%20%C5%93uvre%20pour%20que%20sa%20fille%2C%20Eliza%2C%20soit%20accept%C3%A9e%20dans%20une%20universit%C3%A9%20anglaise.%20%0D%0AIl%20ne%20reste%20plus%20%C3%A0%20la%20jeune%20fille%2C%20tr%C3%A8s%20bonne%20%C3%A9l%C3%A8ve%2C%20qu%E2%80%99une%20formalit%C3%A9%20qui%20ne%20devrait%20pas%20poser%20de%20probl%C3%A8me%20%3A%20obtenir%20son%20baccalaur%C3%A9at.%20%0D%0AMais%20Eliza%20se%20fait%20agresser%20et%20le%20pr%C3%A9cieux%20s%C3%A9same%20semble%20brutalement%20hors%20de%20port%C3%A9e.%20Avec%20lui%2C%20c%E2%80%99est%20toute%20la%20vie%20de%20Romeo%20qui%20est%20remise%20en%20question%20quand%20il%20oublie%20alors%20tous%20les%20principes%20qu%E2%80%99il%20a%20inculqu%C3%A9s%20%C3%A0%20sa%20fille%2C%20entre%20%20compromis%20et%20compromissions%E2%80%A6&amp;redirect_uri=http://www.festival-cannes.com/fr/sharing&amp;display=popup"><i class="icon icon-facebook"></i></a><!--
                --><a class="twitter" href="https://twitter.com/intent/tweet?text=BACALAUREAT%20http://www.festival-cannes.com/fr/films/bacalaureat"><i class="icon icon-twitter"></i></a><!--
                --><a href="#" rel="nofollow" class="link self" data-clipboard-text="http://l3-html.festival-cannes-2016.com.ohwee.fr/build/who-fdc1.html"><i class="icon icon-link"></i></a><!--
                --><a href="#" class="popin-mail-open"><i class="icon icon-letter"></i></a><!--
                --><a href="#" onclick="window.print()" class="print"><i class="icon icon-print"></i></a>
                        </div>
                        <div class="texts-clipboard"></div>
                    </div>
                </div>
            </div> <!-- end all contain -->
        </div></div>
</section>

{% endblock %}