{% trans_default_domain 'FDCCorporateBundle' %}


<div class="grid-01 isotope-01 add-ajax-request">
    <div class="grid-sizer"></div>
    {% for article in articles %}
        {% include 'FDCCorporateBundle:News/list/include:article.html.twig' %}
    {% endfor %}
</div>

<script type="text/javascript">
    {% if not last %}
    $('#news-more').attr('href', '{{ path('fdc_corporate_news_getarticlesajax', {'time': time, 'year': festival.year}) }}');
    {% else %}
    $('#news-more').removeClass('read-more block-01 ajax-request').attr('href', '');
    {% endif %}
</script>