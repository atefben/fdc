                                        <h2><a>{{ featuredVideo|trans_fallback('titleHomeCorpo') }}</a></h2>
                                        <div class="text-01">
                                            {{ featuredVideo|trans_fallback('introductionHomeCorpo')|raw }}
                                        </div>
                                    </div> <!-- end block texts-->

                                </div> <!-- end block info -->
                            </div> <!-- end block legend-->

                        </div> <!-- end block 01 -->

                    </div> <!-- end block 02 -->
                    {# endif #}
                {% endif %}
            {% endif %}

