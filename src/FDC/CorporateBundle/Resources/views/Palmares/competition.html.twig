{% if award_associations[page.selectionLongsMetrages.id] and award_associations[page.selectionLongsMetrages.id]|length %}
    {% if all is defined and all == true %}
        <div class="contain-title-grey vFlexAlign">
            <h1 class="title">{{ (page|trans_fallback('nameLongsMetrages'))?:(page.selectionLongsMetrages|trans_fallback('name')) }}</h1>
        </div>
    {% else %}
        <div class="contain-title vFlexAlign border-bottom border-top">
            <h1 class="title-01">{{ (page|trans_fallback('nameLongsMetrages'))?:(page.selectionLongsMetrages|trans_fallback('name')) }}</h1>
        </div>
    {% endif %}
    {% for award_association in award_associations[page.selectionLongsMetrages.id] %}
        {% include 'FDCCorporateBundle:Palmares:widgets/movie.html.twig' %}
    {% endfor %}
{% endif %}

