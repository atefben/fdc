{% trans_default_domain 'FDCPressBundle' %}

<div class="contain-dp">
    <div class="buttons {% if widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) %}active-btn{% endif %}">
        <div class="buttons-{% if widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) %}unlocked{% else %}locked{% endif %}">
            {% if widget.secondFile is not null %}
                <a href="{% if widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) %}{% path widget.file, 'reference' %}{% endif %}" class="button large {{ widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ?: 'button-locked' }}" target="_blank" download>
                    <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'telecharger' : 'cadenas' }}"></i>
                    {{ widget|trans_fallback('btnLabel') }}
                </a>
                <a href="{% if widget.lockedContent == 0 or (app.user is not empty and (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER"))) %}{% path widget.secondFile, 'reference' %}{% endif %}" class="button large {{ widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ?: 'button-locked' }}" target="_blank" download>
                    <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'telecharger' : 'cadenas' }}"></i>
                    {{ widget|trans_fallback('secondBtnLabel') }}
                </a>
            {% else %}
                <a href="{% if widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) %}{% path widget.file, 'reference' %}{% endif %}" class="button large {{ widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ?: 'button-locked' }}" style="border-bottom: 1px solid #b0b0b0;" target="_blank" download>
                    <i class="icon icon_{{ widget.lockedContent == 0 or (app.user is not empty and is_granted("ROLE_FDC_PRESS_REPORTER")) ? 'telecharger' : 'cadenas' }}"></i>
                    {{ widget|trans_fallback('btnLabel') }}
                </a>
            {% endif %}
            <p class="infos">
                <strong>{{ 'press.home.label.miseajourle'|trans }} : </strong>
                {{ widget.updateddAt|date('d.m.y') }} - {{ agenda_leftbar_translate_hour(widget.updateddAt|date('H:i'),true,true) }}
            </p>
        </div>
    </div>
</div>