<div class="section competition">
    <h3 class="title-section">{{ movie.selectionSection|trans_fallback('name') }} {{ "now"|date('Y') }}</h3>
    <div id="slider-competition" class="owl-carousel competition-carousel">
        {% for movie in movies %}


            {#<div data-id="film1" class="thumb active">#}
                {#<a href="movie.html"></a>#}
                {#<div class="img-container" style="background-image:url(./img/movie/001.jpg)"></div>#}
                {#<div class="info">#}
                    {#<p>Carol</p>#}
                    {#<a class="director" href="#">Todd HAYNES</a>#}
                {#</div>#}
            {#</div>#}


            <div data-id="film{{ loop.index }}" class="thumb active">
                <div class="img-container" style="background-image:url(
                {% include 'FDCEventMobileBundle:Global:components/film.poster.html.twig' with ({
                    film: movie,
                    display_film_path: true,
                    film_format: 'mobile',
                    film_image_default: 'bundles/fdcevent/img/palmares/film_w210.jpg'
                }) %})"></div>
                <a class="linkVid" href="{{ path('fdc_event_movie_get', {'slug': movie.slug}) }}"></a>
                <div class="info">
                    <p>
                        {% if movie|trans_fallback('title') is not empty %}
                            {{ movie|trans_fallback('title')|truncate(20) }}
                        {% else %}
                            {{ movie.titleVO|truncate(20) }}
                        {% endif %}
                    </p>
                    {% set directors = movie|film_function(constant('Base\\CoreBundle\\Entity\\FilmFunction::FUNCTION_DIRECTOR')) %}
                    {% for director in directors %}
                        {% include 'FDCEventMobileBundle:Movie:widgets/check_asian_name.html.twig' with {'person': director} %}
                        {% if loop.index != directors|length %}
                            ,
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>


