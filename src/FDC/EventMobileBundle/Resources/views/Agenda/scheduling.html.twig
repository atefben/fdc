                    </div>
                    <div class="venues">
                        <div class="v-wrapper v-wrapper-content list">
                            {% for room in rooms %}
                                <div class="venue item-list item">
                                    <div class="v-head">{{ room.name }}</div>
                                    <div class="v-container">
                                        {% for event in projections[room.id] %}
                                            {#{{ dump(event) }}#}
