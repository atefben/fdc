{% trans_default_domain 'FDCEventBundle' %}

<ul class="sub-nav-list">
    {% for tab in pages %}
        {% set tabActive = (app.request.attributes.get('slug') == tab|trans_fallback('slug')) ? true : false %}
        {% set tabPath = path('fdc_event_palmares_get', {'slug': tab|trans_fallback('slug') }) %}
        <li>
            <a href="{{ tabPath }}" class="{% if tabActive %}active{% endif %} ajax">
                {{ tab|trans_fallback('name') }}
            </a>
        </li>
    {% endfor %}
</ul>