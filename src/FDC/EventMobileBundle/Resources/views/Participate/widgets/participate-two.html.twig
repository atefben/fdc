{% trans_default_domain 'FDCPressBundle' %}

<div class="partner">
    <div class="img-container">
        {% if widget.image is not null %}
            {% set trans = widget.image.findTranslationByLocale(app.request.locale) %}
            {% if trans is null or trans.file is null %}
                {% set trans = widget.image.findTranslationByLocale('fr') %}
            {% endif %}
            {% set image = trans.file %}
            <img src="{% path image, '60x81' %}" alt="{{ widget.image|trans_fallback('alt') }}" />
        {% endif %}
    </div>
    <h4 class="title-contain">{{widget|trans_fallback('title')}}</h4>
    {{ widget|trans_fallback('content')|raw }}
    {% if widget.sponsorImage is not null %}
        {% set trans = widget.sponsorImage.findTranslationByLocale(app.request.locale) %}
        {% if trans is null or trans.file is null %}
            {% set trans = widget.sponsorImage.findTranslationByLocale('fr') %}
        {% endif %}
        {% set image = trans.file %}
        <div class="portrait">
            <img src="{% path image, '60x81' %}" alt="{{ widget.sponsorImage|trans_fallback('alt') }}" />
            <span class="name"><strong>{{ widget|trans_fallback('sponsorLastName') }} {{ widget|trans_fallback('sponsorFirstName') }}</strong></span><br>
            <span class="rank">{{ widget|trans_fallback('sponsorRole') }}</span>
        </div>
    {% endif %}
</div>

