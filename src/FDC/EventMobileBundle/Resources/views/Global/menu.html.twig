{% trans_default_domain 'FDCEventBundle' %}
<nav class="st-menu st-effect" id="menu">
    <div id="top-menu" class="owl-carousel sliderDrag">
        <div class="item">
            <a href="/" class="active" > {{ 'header.topbar.nav.festival'|trans }} </a>
        </div>
        <div class="item">
            <a href="{{ header_fdc }}" target="_blank" > {{ 'header.topbar.nav.festivalcannes'|trans }} </a>
        </div>
        <div class="item">
            <a href="{{ header_cine }}" target="_blank" > {{ 'header.topbar.nav.cinefondation'|trans }} </a>
        </div>
        <div class="item">
            <a href="{{ header_ccm }}" target="_blank" > {{ 'header.topbar.nav.courtmetrage'|trans }} </a>
        </div>
        <div class="item">
            <a href="{{ header_mdf }}" target="_blank" > {{ 'header.topbar.nav.marche'|trans }} </a>
        </div> 
    </div>
   
    <div id="logo">
        <a href="/">
            {% image '@FDCEventMobileBundle/Resources/public/img/palme.svg'  %}
            <img src="{{ asset_url }}" class="palm" alt="{{ 'header.img.palme'|trans }}" />
            {% endimage %}
        </a>
        <h1>
            <a href="/">
                {% image '@FDCEventMobileBundle/Resources/public/img/logo.svg' %}
                <img width="225" src="{{ asset_url }}" alt="{{ 'header.logo.img.cannes'|trans }}" />
                {% endimage %}
            </a>
        </h1>
        <h2>
            {{ render(controller('FDCEventMobileBundle:Header:date')) }}
        </h2>
    </div>

    <div id="main-nav" class="menu-section">

        <ul id="main-nav-list" class="">
            {% for menu in menus %}
                {% if menu.id < 7 %}
                    <li class=" {% if menu.route == 'fdc_event_news_index' %} actu {% elseif menu.route == 'fdc_event_television_live' %} webtv {% elseif menu.route == 'fdc_event_movie_selection' %} selection {% elseif menu.route == 'fdc_event_jury_get' %} jury {% elseif menu.route == 'fdc_event_palmares_get' %} palmares {% elseif menu.route == 'fdc_event_event_getevents' %} events {% endif %}">
                        <div class="section-title has-subsection">
                            <!-- trailers -->
                            {% if menu.route == 'fdc_event_television_trailers' and menu.enabled == true %}
                                <a href="{{ path(menu.route, { 'slug': 'competition' }) }}"
                                   class="{% if route =='fdc_event_television_trailers' %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            <!-- selection -->
                            {% elseif menu.route == 'fdc_event_movie_selection' and menu.enabled == true %}
                                <a href="{{ path(menu.route) }}"
                                   class="{% if route =='fdc_event_movie_selection' %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            <!-- jury -->
                            {% elseif menu.route == 'fdc_event_jury_get' and menu.enabled == true %}
                                <a href="{{ path(menu.route, { 'type': '1' }) }}"
                                   class="{% if route == 'fdc_event_jury_get' %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            <!-- palmares -->
                            {% elseif menu.route == 'fdc_event_palmares_get' and menu.enabled == true %}
                                <a href="{{ path(menu.route) }}"
                                   class="{% if route == 'fdc_event_palmares_get' %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            <!-- actualités -->
                            {% elseif menu.route == 'fdc_event_news_index' and menu.enabled == true %}
                                <a href="{{ path(menu.route) }}"
                                   class="{% if route in routesArticles %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            <!-- webtv -->
                            {% elseif menu.route == 'fdc_event_television_live' and menu.enabled == true  %}
                                <a href="{{ path(menu.route) }}"
                                   class="{% if route in routesWebTv %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            <!-- événements -->
                            {% elseif menu.route == 'fdc_event_event_getevents' and menu.enabled == true  %}
                                <a href="{{ path(menu.route) }}"
                                   class="{% if route == 'fdc_event_event_getevents' %}active{% endif %}">
                                    {{ menu.transName|trans }}
                                </a>
                            {% endif %}
                        </div>
                        <div class="section-contain subsection-1">
                            <ul class="section-menu">
                                {% if menu['__children'] is defined %}
                                    {% for child in menu['__children'] %}
                                        {% if child.enabled %}
                                            <li>
                                                <a href="{{ path(child.route) }}"
                                                   class="{% if route == child.route %}active{% endif %}">
                                                    {{ child.transName|trans }}
                                                </a>
                                            </li>
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>

        <div class="small-separator"></div>

        <ul class="second-nav">
            {% for menu in menus %}
                {% if menu.id > 6 %}
                    {% if menu.route == 'fdc_event_agenda_scheduling' and menu.enabled == true %}
                        <li class="prog">
                            <div class="section-title has-subsection">
                                <h3 class="title-menu"><i class="icon icon_programmation"></i>{{ menu.transName|trans }}<span class="more-minus">+</span></h3>
                            </div>
                            {% if menu['__children'] is defined %}
                                <div class="section-contain subsection-4">
                                    <ul class="section-menu">
                                        {% for child in menu['__children'] %}
                                            {% if child.enabled %}
                                                <li>
                                                    <a href="{{ path(child.route) }}">{{ child.transName|trans }}</a>
                                                </li>
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </li>
                    {% elseif menu.route == 'fdc_event_participate_prepare' %}
                        {% if menu.enabled == true %}
                            <li class="participate">
                                <div class="section-title has-subsection">
                                    <h3 class="title-menu"><i class="icon-mobile-participer"></i>{{ menu.transName|trans }} <span class="more-minus">+</span></h3>
                                </div>
                                {% if menu['__children'] is defined %}
                                    <div class="section-contain subsection-3">
                                        <ul class="section-menu">
                                            {% for child in menu['__children'] %}
                                                {% if child.enabled %}
                                                    <li><a href="{{ path(child.route) }}">{{ child.transName|trans }}</a></li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </div>
                                {% endif %}
                            </li>
                        {% endif %}
                    {% elseif menu.route == 'fdc_press_news_home' %}
                        {% if menu.enabled == true %}
                            <li class="press">
                                <div class="section-title">
                                    <h3 class="title-menu"><a href="{{ path(menu.route) }}" class="press"><i class="icon icon_espace-presse"></i>{{ menu.transName|trans }} </a></h3>
                                </div>
                            </li>
                        {% endif %}
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>

        <div class="small-separator"></div>

        <ul class="third-nav">
            <li class="search-nav">
                <a href="search.html">
                    <i class="icon icon_recherche"></i>
                    {{ 'header.usernav.nav.rechercher'|trans }}
                </a>
            </li>
            <li class="">
                <a href="{{ header_account }}" rel="nofollow" class="account" target="_blank">
                    <i class="icon icon_mon-compte"></i>
                    {{ 'header.usernav.nav.moncompte'|trans }}
                </a>
            </li>
            <li class="language">
                <i class="icon icon_langue"></i>
                <ul class="hide">
                    {% for locale in locales %}
                        {% if locale != app.request.locale %}
                            <li class="active-language">
                                {% set params = {'_locale' : locale} %}
                                {% if localeSlugs is defined and localeSlugs[app.request.locale] %}
                                    {% set params = params|merge({'slug': localeSlugs[locale]}) %}
                                {% endif %}
                                <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(params)) }}">
                                    {{ locales[loop.index0]|upper }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </li>
        </ul>
    </div>

    <div class="menu-section socials">
        <h3 class="menu-section-title">
            {% image '@FDCEventMobileBundle/Resources/public/img/logo-white.svg'  %}
            <img width="302" src="{{ header_ccm }}" alt="Festival de Cannes">
            {% endimage %}
        </h3>
        <ul>
            <li><a class="appli" href="{{ path('fdc_event_footer_static', {'page': social_appli}) }}" target="_blank"><i class="icon icon_appli"></i></a></li>
            <li><a class="facebook" href="{{ social_facebook }}" target="_blank"><i class="icon icon_facebook"></i></a>
            </li><li><a class="twitter" href="{{ social_twitter }}" target="_blank"><i class="icon icon_twitter"></i></a>
            </li><li><a class="instagram" href="{{ social_instagram }}" target="_blank"><i class="icon icon_instagram"></i></a>
            </li><li><a class="tumblr" href="{{ social_tumblr }}" target="_blank"><i class="icon icon_tumblr"></i></a>
            </li><li><a class="rss" href="{{ social_rss }}" target="_blank"><i class="icon icon_rss"></i></a>
            </li><li><a class="youtube" href="{{ social_youtube }}" target="_blank"><i class="icon icon_youtube"></i></a>
            </li><li><a class="dailymotion" href="{{ social_dailymotion }}" target="_blank"><i class="icon-mobile-dailymotion"></i></a>
            </li><li><a class="podcast" href="{{ social_podcast }}" target="_blank"><i class="icon icon_podcast"></i></a></li>
        </ul>
    </div>

    <div class="menu-section">
        <div id="partners">
            <a href="{{ partner_chopard }}" target="_blank">
                {% image '@FDCEventMobileBundle/Resources/public/img/menu/Logo_Chopard.svg' %}
                <img width="131" src="{{ asset_url }}" class="chopard" alt="{{ 'header.partners.img.chopard'|trans }}" />
                {% endimage %}
            </a>
            <a href="{{ partner_loreal }}" target="_blank">
                {% image '@FDCEventMobileBundle/Resources/public/img/menu/loreal.svg' %}
                <img width="98" src="{{ asset_url }}" class="oreal" alt="{{ 'header.partners.img.loreal'|trans }}" />
                {% endimage %}
            </a>
            <a href="{{ partner_hp }}" target="_blank">
                {% image '@FDCEventMobileBundle/Resources/public/img/menu/hp.svg' %}
                <img width="40" src="{{ asset_url }}" class="hp" alt="{{ 'header.partners.img.hp'|trans }}" />
                {% endimage %}
            </a>
            <a href="{{ partner_kering }}" target="_blank">
                {% image '@FDCEventMobileBundle/Resources/public/img/menu/Kering-logo.svg' %}
                <img width="131" src="{{ asset_url }}" class="kering" alt="{{ 'header.partners.img.kering'|trans }}" />
                {% endimage %}
            </a>
            <a href="{{ partner_renault }}" target="_blank">
                {% image '@FDCEventMobileBundle/Resources/public/img/menu/renault.svg' %}
                <img width="124" src="{{ asset_url }}" class="renault" alt="{{ 'header.partners.img.renault'|trans }}" />
                {% endimage %}
            </a>
            <a href="{{ partner_mastercard }}" target="_blank">
                {% image '@FDCEventMobileBundle/Resources/public/img/menu/mastercard.png' %}
                <img width="85" src="{{ asset_url }}" class="mastercard" alt="{{ 'header.partners.img.mastercard'|trans }}" />
                {% endimage %}
            </a>
        </div>

        <div class="footer-menu">
            <p>{{ 'footer.nav.copyright'|trans }} {{ 'now'|date('Y') }}</p>
            <ul>
                {% for element in footer %}
                    {% if element.route == 'fdc_event_footer_contact' and element.enabled == true %}
                        <li class="contact">
                            <a href="{{ path('fdc_event_footer_contact') }}">
                                {{ 'footer.nav.contact'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.faq' and element.enabled == true %}
                        <li class="faq">
                            <a href="{{ path('fdc_event_footer_static', {'page': 'faq'}) }}">
                                {{ 'footer.nav.faq'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.credit' and element.enabled == true %}
                        <li class="credits">
                            <a href="{{ path('fdc_event_footer_static', {'page': 'credits'}) }}">
                                {{ 'footer.nav.credit'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.mentionslegales' and element.enabled == true %}
                        <li class="legals">
                            <a href="{{ path('fdc_event_footer_static', {'page': 'mentions-legales'}) }}">
                                {{ 'footer.nav.mentionslegales'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.nousrejoindre' and element.enabled == true %}
                        <li class="">
                            <a href="{{ path('fdc_event_footer_static', {'page': 'nous-rejoindre'}) }}">
                                {{ 'footer.nav.nousrejoindre'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.plandusite' and element.enabled == true %}
                        <li class="">
                            <a href="{{ path('fdc_event_footer_static', {'page': 'plan-du-site'}) }}">
                                {{ 'footer.nav.plandusite'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.politiqueconfidentialite' and element.enabled == true %}
                        <li class="sitemap">
                            <a href="{{ path('fdc_event_footer_static', {'page': 'politique-confidentialite'}) }}">
                                {{ 'footer.nav.politiqueconfidentialite'|trans }}
                            </a>
                        </li>
                    {% elseif element.transName == 'footer.nav.boutique' and element.enabled == true  %}
                        <li class="privacy_policy">
                            <a href="{{ footer_boutique }}">
                                {{ 'footer.nav.boutique'|trans }}
                            </a>
                        </li>
                    {% endif %}

                {% endfor %}
            </ul>
            <div class="clear"></div>
        </div>
    </div>
</nav>