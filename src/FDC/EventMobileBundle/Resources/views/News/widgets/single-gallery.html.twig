{% trans_default_domain 'FDCEventBundle' %}

{% set hasPublishedMedias = false %}
{% for key, gallery in news.gallery.medias if not hasPublishedMedias %}
    {% set trans = gallery.media.findTranslationByLocale(app.request.locale) %}
    {% if trans is null or trans.file is null %}
        {% set trans = gallery.media.findTranslationByLocale('fr') %}
    {% endif %}
    {% if
        trans.isPublishedOnFDCEvent and
        trans|publish_date
    %}
        {% set hasPublishedMedias = true %}
    {% endif %}
{% endfor %}

{% if hasPublishedMedias == true %}
    <div class="section photos">
        <div class="slideshow">
            <div class="slideshow-img">
                <div class="images">
                    {% for key, gallery in news.gallery.medias %}
                        {% set trans = gallery.media.findTranslationByLocale(app.request.locale) %}
                        {% if trans is null or trans.file is null %}
                            {% set trans = gallery.media.findTranslationByLocale('fr') %}
                        {% endif %}
                        {% if
                            trans.isPublishedOnFDCEvent and
                            trans|publish_date
                        %}
                            {% set file = trans.file %}
                            {% set copyright = gallery.media|trans_fallback('copyright') %}
                            <div class="img {% if key == 0 %}active{% endif %}">
                                <a id="photo{{ gallery.media.id }}"
                                   class="chocolat-image ajax"
                                   href="{% path file, '2560x1620' %}"
                                   title="<span class='category'>{{ gallery.media.theme|trans_fallback('name') }}</span><span class='date'>{{ gallery.media.createdAt|date('d.m.y H:i') }}</span><h2>{{ gallery.media|trans_fallback('legend')  }}</h2><span>{{ 'slider.credit_image'|trans }} / {{ copyright }}</span">
                                    <img src="{% path file, '2560x1620' %}" alt="{{ trans.alt }}">
                                </a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                {% set firstLegend = '' %}
                {% set firstCopyright = '' %}
                <div class="owl-carousel thumbnails">
                    {% for key, gallery in news.gallery.medias %}
                        {% set trans = gallery.media.findTranslationByLocale(app.request.locale) %}
                        {% if trans is null or trans.file is null %}
                            {% set trans = gallery.media.findTranslationByLocale('fr') %}
                        {% endif %}
                        {% if
                            trans.isPublishedOnFDCEvent and
                            trans|publish_date
                        %}
                            {% set photo = gallery.media %}
                            {% if loop.index == 1 %}
                                {% set firstLegend = photo|trans_fallback('legend') %}
                                {% set firstCopyright = photo|trans_fallback('copyright') %}
                            {% endif %}
                            {% set file = trans.file %}
                            {% set copyright = photo|trans_fallback('copyright') %}
                            <div data-id="photo{{ gallery.media.id }}" data-caption="<strong>{{ photo|trans_fallback('legend') }}</strong>{% if copyright is not empty %} Â© {% endif %}{{ copyright }}" class="thumb {% if key == 0 %}active{% endif %}">
                                {% thumbnail file, '197x142' %}
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endif %}