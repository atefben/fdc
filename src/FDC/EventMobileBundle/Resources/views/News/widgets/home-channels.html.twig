{% trans_default_domain 'FDCEventBundle' %}

<div class="image-wrapper">
    {%  if channel.image is defined and channel.image is not null  %}
        {% set transImage = channel.image.findTranslationByLocale(app.request.locale) %}
        {% if transImage is null or transImage.file is null %}
            {% set transImage = channel.image.findTranslationByLocale('fr') %}
        {% endif %}
        {% thumbnail transImage.file, '586x370' %}
    {% elseif channel.availableChannels|last.image is defined and channel.availableChannels|last.image != null %}
        <img src="{{ media_public_url(channel.availableChannels|last.image|trans_fallback('file'), '293x185') }}" alt="">
    {% else %}
        <img src="{{ s3_server_global ~ channel.availableChannels|last|trans_fallback('imageAmazonUrl') }}" alt="">
    {% endif %}
</div>
<a class="linkVid" href="{{ path('fdc_eventmobile_television_getchannel', { 'slug': channel|trans_fallback('slug') }) }}"></a>
<div class="info">
    <div class="picto">
        <i class="icon icon_playlist"></i>
    </div>
    <div class="info-container">
        <div class="vCenter">
            <div class="vCenterKid">
                <a href="{{ path('fdc_eventmobile_television_getchannel', { 'slug': channel|trans_fallback('slug') }) }}" class="category">{{ channel|trans_fallback('name') }}</a>
                <span>
                    {{ 'webtv.direct.nb_videos'|transchoice(channel.availableChannels|length) }}
                </span>
            </div>
        </div>
    </div>
</div>

