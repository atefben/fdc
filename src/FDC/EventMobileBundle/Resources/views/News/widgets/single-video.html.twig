{% trans_default_domain 'FDCEventBundle' %}

{% set file = news.video %}
{% set trans = file.findTranslationByLocale(app.request.locale) %}
{% if trans is null or trans.file is null or trans.jobMp4State != 3 or trans.mp4Url is null or trans.webmUrl is null %}
    {% set trans = file.findTranslationByLocale('fr') %}
{% endif %}

{% set header = news.header %}
{% if header is not null %}
    {% set imageTrans = news.header.findTranslationByLocale(app.request.locale) %}
    {% if imageTrans is null or imageTrans.file is null %}
        {% set imageTrans = news.header.findTranslationByLocale('fr') %}
    {% endif %}
{% endif %}
{% if news.video.image is not null %}
    {% if imageTrans is defined %}
        {% set image = imageTrans.file %}
    {% else %}
        {% set header = news.video.image %}
        {% set imageTrans = header.findTranslationByLocale(app.request.locale) %}
        {% if imageTrans is null or imageTrans.file is null %}
            {% set imageTrans = header.findTranslationByLocale('fr') %}
        {% endif %}

        {% set image = imageTrans.file %}
    {% endif %}
{% endif %}

<div class="m-video">
    <div id="player" class="players2" {% if(trans.jobWebmState == 3) %}data-webmurl="{{ s3_server_video ~ trans.webmUrl }}" {% endif %} {% if trans.jobMp4State == 3 %} data-mp4url="{{ s3_server_video ~ trans.mp4Url }}"{% endif %} data-poster="{% if image is defined and image is not null %}{% path image, 'reference' %}{% elseif trans.imageAmazonUrl is defined and trans.imageAmazonUrl is not null %}{{ s3_server_video ~ trans.imageAmazonUrl }}{% endif %}"></div>
    <div class="infos-bar">
        <div class="info">
            <p class="category">{{ file.theme|trans_fallback('name') }}
                <span class="date">{{ file.publishedAt|date('d.m.Y') }}</span> . <span
                        class="hour">{{ agenda_leftbar_translate_hour(file.publishedAt|date('H:i'), true, true) }}</span>
            </p>
            <p>{{ trans.title }}</p>
        </div>
    </div>
</div>
