{% trans_default_domain 'FDCEventBundle' %}
{% set file = widget.file %}
{% set trans = file.findTranslationByLocale(app.request.locale) %}

{% if trans is null or trans.file is null or trans.jobWebmState != 3 or trans.jobMp4State != 3 or trans.mp4Url is null or trans.webmUrl is null %}
    {% set trans = file.findTranslationByLocale('fr') %}
{% endif %}

{% set header = file.image %}
{% if header is not null %}
    {% set imageTrans = header.findTranslationByLocale(app.request.locale) %}
    {% if imageTrans is null or imageTrans.file is null %}
        {% set imageTrans = header.findTranslationByLocale('fr') %}
    {% endif %}
{% endif %}
{% if imageTrans is defined %}
    {% set image = imageTrans.file %}
{% endif %}
{% if image is not defined and trans.imageAmazonUrl %}
    {% set image_s3 = s3_server_global ~ trans.imageAmazonUrl %}
{% endif %}

<div class="vid item-video"
    data-vid="{{ trans.id }}"
    {% if playlist is defined %}
    data-playlist='{{ playlist }}'
    {% else %}
    data-video='[{"file":"{{ s3_server_video ~ trans.webmUrl }}"},{"file":"{{ s3_server_video ~ trans.mp4Url }}"}]'
    {% endif %}
    data-poster="{% if image is defined %}{% path image, 'reference' %}{% elseif image_s3 is defined %}{{ image_s3 }}{% endif %}"
    data-name="{{ trans.title }}">
    <div id="video-player-{{ trans.id }}" class="video-player">
    </div>
    <div class="video-overlay"></div>
    <div class="infos">
        <div class="picto vCenter">
            <div class="vCenterKid"><i class="icon icon_video"></i></div>
        </div>
        <div class="info-container">
            <div class="vCenter">
                <div class="vCenterKid">
                    <a class="category">{{ file.theme|trans_fallback('name') }}</a>
                    <a href="#" class="titleLink">{{ trans.title }}</a>
                </div>
            </div>
        </div>
    </div>
</div>