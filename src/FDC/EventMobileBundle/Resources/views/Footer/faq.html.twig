{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventMobileBundle::layout.html.twig' %}

{% block body %}
    <div id="main" class="faq-page" data-menu="faq">

        {% include 'FDCEventMobileBundle:Global:menu.html.twig' %}
        {% include 'FDCEventMobileBundle:Global:my_selection.html.twig' %}
        
        <h2 class="title one-line">{{ 'faq.title.faq'|trans }}</h2>
        <div id="horizontal-menu" class="owl-carousel sliderDrag videosSlider">
            {% for key, section in content %}
                <div class="vid selected">
                  <p><a href="#" {% if key == 0 %}class="active"{% endif %} data-section="{{ section.slug }}">{{ section.name }}</a></p>
                </div>
            {% endfor %}
        </div>
        <div class="faq-container">
            <div class="faq-section-container active infos-generales">
                {% for section in content %}
                    <section>
                            {% for article in section.articles %}
                                <div class="section-title">
                                    <h3 class="title-participate">{{ article.title }}</h3>
                                    <i class="icon accordion icon_case-plus"></i>
                                    <div class="section-content">
                                        <p class="description">{{ article.content }}</p>
                                    </div>
                                </div>
                            {% endfor %}
                    </section>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}