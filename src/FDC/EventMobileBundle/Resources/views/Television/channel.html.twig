{% trans_default_domain 'FDCEventBundle' %}
{% extends 'FDCEventMobileBundle::layout.html.twig' %}

{% block body %}
    <div id="main" class="webtv single-channel loading">

    {% include 'FDCEventMobileBundle:Global:menu.html.twig' %}
    {% include 'FDCEventMobileBundle:Global:my_selection.html.twig' %}
    
    <div class="container">
        <a href="{{ path('fdc_eventmobile_television_channels') }}" class="back">
            <i class="icon icon_flecheGauche"></i>{{ 'webtv.channel.btn.retourauxchaines'|trans }}
        </a>
    </div>
    <h2 class="title">{{ channel|trans_fallback('name') }}</h2>

    {% set firstVideo = false %}
    {% set first = true %}
    {%- for video in webTvVideos %}
        {%- set trans = video.findTranslationByLocale(app.request.locale) -%}
        {% if video.image %}
            {% set videoImage = media_public_url(video.image|trans_fallback('file'), '463x292') %}
        {% elseif video|trans_fallback('imageAmazonUrl') %}
            {% set videoImage = s3_server_video ~ video|trans_fallback('imageAmazonUrl') %}
        {% endif %}
        {%- if trans is null or trans.file is null -%}
            {%- set trans = video.file.findTranslationByLocale('fr') -%}
        {%- endif -%}
        {% if videoImage is defined %}
            {% if firstVideo == false %}
                {% set firstVideo = video %}
                <!-- replace by player video -->
                <div id="player"
                     {% if(firstVideo.jobWebmState == 3) %}data-video="{{ s3_server_video ~ firstVideo.webmUrl }}"{% else %}}data-video="{{ s3_server_video ~ firstVideo.mp4Url }}"{% endif %}
                     data-poster="{{ videoImage }}"></div>

                <div id="slider-trailer" class="owl-carousel sliderDrag videosSlider">
            {% endif %}

            <div class="tumb item {% if firstVideo != false %}active{% endif %}"
                 data-id="photo{{ loop.index }}"
                 data-video="{{ s3_server_video ~ video|trans_fallback('mp4Url') }}"
                 data-poster='{{ videoImage }}'>
                <div class="image-wrapper">
                    {% if videoImage %}
                        <img src="{{ videoImage }}" alt="">
                    {% endif %}
                </div>

                <div class="info">
                    <div class="picto vCenter">
                        <div class="vCenterKid"><i class="icon icon_video"></i></div>
                    </div>
                    <div class="info-container">
                        <div class="vCenter">
                            <div class="vCenterKid">
                                <a href="#" class="category">{{ video.theme|trans_fallback('name') }}</a>
                                <a href="#" class="titleLink">{{ video|trans_fallback('title') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {%- endif -%}
        {% if loop.last %}
            </div>
        {% endif %}
    {%- endfor -%}

    {% if otherVideos|length %}
        <div id="content-latest">
            <h2 class="title">{{ 'webtv.direct.title.lesdernieresvideos'|trans }}</h2>
            <div id="slider-last-videos" class="container sliderDrag owl-carousel videosSlider">
                {% for video in otherVideos %}
                    <div class="item-video item shadow-bottom"
                         data-vid="{{ video.id }}"
                         data-file='[{"file":"{{ s3_server_video ~ video|trans_fallback('webmUrl') }}"},{"file":"{{ s3_server_video ~ video|trans_fallback('mp4Url') }}"}]'
                            {% if video.image|trans_fallback('file') %}
                         data-img="{% path video.image|trans_fallback('file'), '463x292' %}"
                         {% else %}
                         data-img="{% path video.image|trans_fallback('file', 'fr'), '463x292' %}"
                         {% endif %}>
                        <div class="image-wrapper">
                            {% if video.image|trans_fallback('file') %}
                                <img src="{% path video.image|trans_fallback('file'), '463x292' %}" alt="">
                            {% endif %}
                        </div>
                        <a class="linkVid" href="#"></a>
                        <div class="info">
                            <div class="picto vCenter">
                                <div class="vCenterKid"><i class="icon icon_video"></i></div>
                            </div>
                            <div class="info-container">
                                <div class="vCenter">
                                    <div class="vCenterKid">
                                        <span class="category">{{ video.theme|trans_fallback('name') }}</span>
                                        <p href="#" class="titleLink">{{ video|trans_fallback('title')|truncate( 40, true, '...') }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

