{% trans_default_domain 'FDCEventBundle' %}
{% set searchClass = 'participate' %}
{% extends 'FDCEventMobileBundle:Search:base.html.twig' %}
{% block content %}
    {% for article in items %}
        <div data-id="participate{{ article.id }}" class="thumb {{ loop.index == 1 ? 'active' : '' }}">
            <a href="{{ path('fdc_eventmobile_participate_getpage', {'slug': article|trans_fallback('slug') }) }}" class="linkImage"></a>
            <div class="img-container">
                <img src='{% path article.image|trans_fallback('file'), '1280x808' %}' alt="{{ article.header|trans_fallback('alt') }}"/>
                <span class="picto"><i class="icon icon_article"></i></span>
            </div>
            <div class="info">
                <a href="{{ path('fdc_eventmobile_participate_getpage', {'slug': article|trans_fallback('slug') }) }}">
                    <h2>{{ article|trans_fallback('title')|truncate(40) }}</h2>
                </a>
            </div>
        </div>
    {% endfor %}
{% endblock %}