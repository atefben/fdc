<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity
        name="Application\Sonata\MediaBundle\Entity\MediaTranslation"
        table="media__media_translation"
    >

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <many-to-one field="translatable" target-entity="Application\Sonata\MediaBundle\Entity\Media" inversed-by="translations">
        </many-to-one>
        
        <field name="copyright"         column="copyright"      type="string"   nullable="true" length="255"/>
        <field name="locale"            column="locale"         type="string"   nullable="true" length="10"/>

        <field name="updatedAt"         column="updated_at"     type="datetime" />
        <field name="createdAt"         column="created_at"     type="datetime" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist" />
            <lifecycle-callback type="preUpdate" method="preUpdate" />
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
