{% if app.security.token and is_granted('ROLE_BASE_ADMIN_FDC_PAGE_FOOTER_ADMIN') %}
    {% set active = false %}
    {% set pages = ['admin_base_core_fdcpagefooter_edit','admin_base_core_fdcpagefooter_edit',
    'admin_base_core_fdcpagefooter_edit','admin_base_core_faqtheme_list','admin_base_core_faqpage_list'] %}

    {% if app.request.get('_route') in pages %}
        {% set active = true %}
    {% endif %}

    <li class="treeview {% if active %}active{% endif %}">
        <a href="#">
            <i class="fa fa-folder"></i>
            <span>Pages</span>
            <i class="fa pull-right fa-angle-left"></i>
        </a>
        <ul class="treeview-menu {% if active %}active{% endif %}">
            <li>
                <a href="{{ path('admin_base_core_fdcpagefooter_edit', {id: admin_fdc_footer_confidentialite_id}) }}">
                    <i class="fa fa-angle-double-right"></i>
                    {{ 'dashboard.link.confidentialite'|trans({}, 'BaseAdminBundle') }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_base_core_fdcpagefooter_edit', {id: admin_fdc_footer_mentions_legales_id}) }}">
                    <i class="fa fa-angle-double-right"></i>
                    {{ 'dashboard.link.mentions_legales'|trans({}, 'BaseAdminBundle') }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_base_core_fdcpagefooter_edit', {id: admin_fdc_footer_credits_id}) }}">
                    <i class="fa fa-angle-double-right"></i>
                    {{ 'dashboard.link.credits'|trans({}, 'BaseAdminBundle') }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_base_core_faqtheme_list') }}">
                    <i class="fa fa-angle-double-right"></i>
                    {{ 'dashboard.link.FAQTheme'|trans({}, 'BaseAdminBundle') }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_base_core_faqpage_list') }}">
                    <i class="fa fa-angle-double-right"></i>
                    {{ 'dashboard.link.FAQ'|trans({}, 'BaseAdminBundle') }}
                </a>
            </li>
        </ul>
    </li>
{% endif %}